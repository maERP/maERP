<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="250"
    x:Class="maERP.UI.Shared.Shared.Views.ConfirmationDialog">

  <Border CornerRadius="{ThemeResource CornerRadiusM}"
          Background="{ThemeResource ControlFillColorDefaultBrush}">
    <Grid Margin="24">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- Content -->
      <StackPanel Grid.Row="0"
                  Spacing="20"
                  VerticalAlignment="Center">

        <!-- Icon and Message -->
        <StackPanel Orientation="Horizontal"
                    Spacing="16"
                    HorizontalAlignment="Center">
          <TextBlock Text="{Binding Icon}"
                     FontSize="32"
                     VerticalAlignment="Center"
                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
          <TextBlock Text="{Binding Message}"
                     TextWrapping="Wrap"
                     FontSize="14"
                     VerticalAlignment="Center"
                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                     MaxWidth="350"/>
        </StackPanel>

      </StackPanel>

      <!-- Buttons -->
      <StackPanel Grid.Row="1"
                  Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Spacing="12"
                  Margin="0,20,0,0">
        <Button Content="{Binding CancelButtonText}"
                x:Name="CancelButton"
                Padding="20,8"
                MinWidth="100"
                CornerRadius="{ThemeResource CornerRadiusS}"
                Background="{ThemeResource ControlFillColorDefaultBrush}"
                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                Click="CancelButton_Click"/>
        <Button Content="{Binding ConfirmButtonText}"
                x:Name="ConfirmButton"
                Padding="20,8"
                MinWidth="100"
                CornerRadius="{ThemeResource CornerRadiusS}"
                Background="{ThemeResource SystemFillColorCriticalBrush}"
                Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                Click="ConfirmButton_Click"/>
      </StackPanel>

    </Grid>
  </Border>

</UserControl>
