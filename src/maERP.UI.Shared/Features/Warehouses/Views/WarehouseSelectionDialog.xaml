<!-- Note: This dialog will need to be hosted in a ContentDialog when integrated -->
<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
    x:Class="maERP.UI.Features.Warehouses.Views.WarehouseSelectionDialog"
    x:Name="RootControl">

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Message -->
    <TextBlock Grid.Row="0"
               Text="{Binding Message}"
               TextWrapping="Wrap"
               FontSize="14"
               Margin="0,0,0,20"/>

    <!-- Warehouse Selection -->
    <Border Grid.Row="1"
            Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
            CornerRadius="{ThemeResource CornerRadiusM}"
            Padding="16">
      <ScrollViewer>
        <StackPanel Spacing="8">
          <TextBlock Text="Verfügbare Lager:"
                     FontWeight="SemiBold"
                     Margin="0,0,0,8"/>

          <ItemsControl ItemsSource="{Binding AvailableWarehouses}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <RadioButton GroupName="WarehouseSelection"
                             Command="{Binding DataContext.SelectWarehouseCommand, ElementName=RootControl}"
                             CommandParameter="{Binding}"
                             Margin="0,4"
                             Padding="8">
                  <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="🏭" FontSize="16" VerticalAlignment="Center"/>
                    <StackPanel>
                      <TextBlock Text="{Binding Name}"
                                 FontWeight="SemiBold"/>
                      <TextBlock Text="{Binding Id, Converter={StaticResource StringFormatConverter}, ConverterParameter='ID: {0}'}"
                                 FontSize="12"
                                 Opacity="0.7"/>
                    </StackPanel>
                  </StackPanel>
                </RadioButton>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

          <!-- No warehouses available -->
          <TextBlock Text="Keine anderen Lager verfügbar"
                     FontStyle="Italic"
                     Opacity="0.7"
                     Visibility="{Binding AvailableWarehouses.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0}'}"/>
        </StackPanel>
      </ScrollViewer>
    </Border>

    <!-- Buttons -->
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="12"
                Margin="0,20,0,0">
      <Button Content="Abbrechen"
              x:Name="CancelButton"
              Padding="16,8"
              Click="CancelButton_Click"/>
      <Button Content="OK"
              x:Name="OkButton"
              Padding="16,8"
              IsEnabled="{Binding IsValidSelection}"
              Click="OkButton_Click"
              Style="{ThemeResource AccentButtonStyle}"/>
    </StackPanel>

  </Grid>

</UserControl>
