<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
    x:Class="maERP.UI.Shared.Features.Orders.Views.OrderInputView"
    x:Name="RootUserControl">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{ThemeResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Bestellung bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="❌"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Abbrechen"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                ToolTipService.ToolTip="Speichern"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Bestellung wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>

      <!-- Form Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="24">

          <!-- Basic Order Information -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="📝 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnSpacing="20" RowSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: OrderId, Status, Customer -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Bestell-Nr." FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding OrderId, Mode=TwoWay}"
                             Minimum="1"
                             PlaceholderText="Bestell-Nr. eingeben..."/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Status *" FontWeight="SemiBold"/>
                  <ComboBox ItemsSource="{Binding AvailableOrderStatuses}"
                            SelectedItem="{Binding Status, Mode=TwoWay}"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Spacing="4">
                  <TextBlock Text="Kunden-Nr. *" FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding CustomerId, Mode=TwoWay}"
                             Minimum="1"
                             PlaceholderText="Kunden-Nr. eingeben..."/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Sales Channel ID *" FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding SalesChannelId, Mode=TwoWay}"
                             Minimum="1"
                             PlaceholderText="Sales Channel ID eingeben..."/>
                </StackPanel>

                <!-- Row 2: Remote Order ID, Order Date -->
                <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Remote Order ID" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding RemoteOrderId, Mode=TwoWay}"
                           PlaceholderText="Remote Order ID eingeben..."/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Spacing="4">
                  <TextBlock Text="Bestelldatum" FontWeight="SemiBold"/>
                  <DatePicker SelectedDate="{Binding DateOrdered, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Order Items Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="📦 Bestellpositionen"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="➕ Position hinzufügen"
                        Command="{Binding StartAddingOrderItemCommand}"
                        Visibility="{Binding IsAddingOrderItem, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        Padding="12,8"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
              </Grid>

              <!-- Order Items List -->
              <StackPanel>
                <TextBlock Text="{Binding OrderItems.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter='Anzahl Positionen: {0}'}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="{Binding OrderItemsSubtotal, Converter={StaticResource StringFormatConverter}, ConverterParameter='Zwischensumme: {0:C}'}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                  <toolkit:DataGrid ItemsSource="{Binding OrderItems}"
                                   CanUserReorderColumns="False"
                                   CanUserResizeColumns="True"
                                   CanUserSortColumns="False"
                                   GridLinesVisibility="Horizontal"
                                   HeadersVisibility="All"
                                   IsReadOnly="True">
                    <toolkit:DataGrid.Columns>
                      <toolkit:DataGridTextColumn Header="Produkt ID" Binding="{Binding ProductId}" Width="100"/>
                      <toolkit:DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                      <toolkit:DataGridTextColumn Header="Menge" Binding="{Binding Quantity}" Width="80"/>
                      <toolkit:DataGridTextColumn Header="Einzelpreis" Binding="{Binding Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}" Width="100"/>
                      <toolkit:DataGridTextColumn Header="Steuer %" Binding="{Binding TaxRate, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F1}'}" Width="80"/>
                      <toolkit:DataGridTextColumn Header="Gesamt" Binding="{Binding Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}" Width="100"/>
                      <toolkit:DataGridTemplateColumn Header="Aktionen" Width="120">
                        <toolkit:DataGridTemplateColumn.CellTemplate>
                          <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                              <Button Content="✏️"
                                      Command="{Binding DataContext.StartEditingOrderItemCommand, ElementName=RootUserControl}"
                                      CommandParameter="{Binding}"
                                      ToolTipService.ToolTip="Bearbeiten"
                                      Padding="6"
                                      FontSize="12"/>
                              <Button Content="🗑️"
                                      Command="{Binding DataContext.DeleteOrderItemCommand, ElementName=RootUserControl}"
                                      CommandParameter="{Binding}"
                                      ToolTipService.ToolTip="Löschen"
                                      Padding="6"
                                      FontSize="12"/>
                            </StackPanel>
                          </DataTemplate>
                        </toolkit:DataGridTemplateColumn.CellTemplate>
                      </toolkit:DataGridTemplateColumn>
                    </toolkit:DataGrid.Columns>
                  </toolkit:DataGrid>
                </ScrollViewer>
              </StackPanel>

              <!-- Order Item Form (for adding/editing) -->
              <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="16"
                      Visibility="{Binding IsAddingOrderItem, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="16">

                  <!-- Form Title -->
                  <TextBlock Text="Neue Position hinzufügen"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Visibility="{Binding IsEditingOrderItem, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                  <TextBlock Text="Position bearbeiten"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Visibility="{Binding IsEditingOrderItem, Converter={StaticResource BoolToVisibilityConverter}}"/>

                  <!-- Order Item Form Fields -->
                  <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="4">
                      <TextBlock Text="Produkt ID" FontWeight="SemiBold"/>
                      <NumberBox Value="{Binding NewItemProductId, Mode=TwoWay}"
                                 Minimum="0"
                                 PlaceholderText="Produkt ID..."/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="4">
                      <TextBlock Text="Name" FontWeight="SemiBold"/>
                      <TextBox Text="{Binding NewItemName, Mode=TwoWay}"
                               PlaceholderText="Produktname..."/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="4">
                      <TextBlock Text="Menge" FontWeight="SemiBold"/>
                      <NumberBox Value="{Binding NewItemQuantity, Mode=TwoWay}"
                                 Minimum="0.01"
                                 SmallChange="1"
                                 PlaceholderText="Menge..."/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Spacing="4">
                      <TextBlock Text="Einzelpreis" FontWeight="SemiBold"/>
                      <NumberBox Value="{Binding NewItemPrice, Mode=TwoWay}"
                                 Minimum="0"
                                 SmallChange="0.01"
                                 PlaceholderText="Preis..."/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Spacing="4">
                      <TextBlock Text="Steuer %" FontWeight="SemiBold"/>
                      <NumberBox Value="{Binding NewItemTaxRate, Mode=TwoWay}"
                                 Minimum="0"
                                 Maximum="100"
                                 SmallChange="0.1"
                                 PlaceholderText="Steuersatz..."/>
                    </StackPanel>

                  </Grid>

                  <!-- Form Buttons -->
                  <StackPanel Orientation="Horizontal"
                              Spacing="8"
                              HorizontalAlignment="Right">
                    <Button Content="❌ Abbrechen"
                            Command="{Binding CancelOrderItemEditCommand}"
                            Padding="12,8"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"/>
                    <Button Content="💾 Speichern"
                            Command="{Binding SaveOrderItemCommand}"
                            Padding="12,8"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                  </StackPanel>

                </StackPanel>
              </Border>

            </StackPanel>
          </Border>

          <!-- Addresses Section -->
          <Grid ColumnSpacing="16">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Delivery Address -->
            <Border Grid.Column="0"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{ThemeResource CornerRadiusM}"
                    Padding="20">
              <StackPanel Spacing="16">

                <!-- Section Title -->
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>

                  <TextBlock Grid.Column="0"
                             Text="🚚 Lieferadresse"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                             VerticalAlignment="Center"/>
                  <Button Grid.Column="1"
                          Content="← Kopieren"
                          Command="{Binding CopyInvoiceToDeliveryCommand}"
                          ToolTipService.ToolTip="Von Rechnungsadresse kopieren"
                          Padding="8,4"
                          FontSize="10"/>
                </Grid>

                <!-- Address Fields -->
                <Grid ColumnSpacing="8" RowSpacing="12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                    <TextBlock Text="Vorname" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressFirstName, Mode=TwoWay}"
                             PlaceholderText="Vorname..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Nachname" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressLastName, Mode=TwoWay}"
                             PlaceholderText="Nachname..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Firmenname" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressCompanyName, Mode=TwoWay}"
                             PlaceholderText="Firmenname..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Straße" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressStreet, Mode=TwoWay}"
                             PlaceholderText="Straße..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                    <TextBlock Text="PLZ" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliverAddressZip, Mode=TwoWay}"
                             PlaceholderText="PLZ..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Stadt" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressCity, Mode=TwoWay}"
                             PlaceholderText="Stadt..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Land" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressCountry, Mode=TwoWay}"
                             PlaceholderText="Land..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Telefon" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding DeliveryAddressPhone, Mode=TwoWay}"
                             PlaceholderText="Telefon..."/>
                  </StackPanel>

                </Grid>

              </StackPanel>
            </Border>

            <!-- Invoice Address -->
            <Border Grid.Column="1"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{ThemeResource CornerRadiusM}"
                    Padding="20">
              <StackPanel Spacing="16">

                <!-- Section Title -->
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>

                  <TextBlock Grid.Column="0"
                             Text="🧾 Rechnungsadresse"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                             VerticalAlignment="Center"/>
                  <Button Grid.Column="1"
                          Content="← Kopieren"
                          Command="{Binding CopyDeliveryToInvoiceCommand}"
                          ToolTipService.ToolTip="Von Lieferadresse kopieren"
                          Padding="8,4"
                          FontSize="10"/>
                </Grid>

                <!-- Address Fields -->
                <Grid ColumnSpacing="8" RowSpacing="12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                    <TextBlock Text="Vorname" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressFirstName, Mode=TwoWay}"
                             PlaceholderText="Vorname..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Nachname" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressLastName, Mode=TwoWay}"
                             PlaceholderText="Nachname..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Firmenname" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressCompanyName, Mode=TwoWay}"
                             PlaceholderText="Firmenname..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Straße" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressStreet, Mode=TwoWay}"
                             PlaceholderText="Straße..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                    <TextBlock Text="PLZ" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressZip, Mode=TwoWay}"
                             PlaceholderText="PLZ..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Stadt" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressCity, Mode=TwoWay}"
                             PlaceholderText="Stadt..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Land" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressCountry, Mode=TwoWay}"
                             PlaceholderText="Land..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Spacing="4">
                    <TextBlock Text="Telefon" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Text="{Binding InvoiceAddressPhone, Mode=TwoWay}"
                             PlaceholderText="Telefon..."/>
                  </StackPanel>

                </Grid>

              </StackPanel>
            </Border>

          </Grid>

          <!-- Payment and Shipping Information -->
          <Grid ColumnSpacing="16">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Payment Information -->
            <Border Grid.Column="0"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{ThemeResource CornerRadiusM}"
                    Padding="20">
              <StackPanel Spacing="16">

                <!-- Section Title -->
                <TextBlock Text="💳 Zahlungsinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                <!-- Payment Fields -->
                <Grid ColumnSpacing="12" RowSpacing="12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                    <TextBlock Text="Zahlungsstatus" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding AvailablePaymentStatuses}"
                              SelectedItem="{Binding PaymentStatus, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"/>
                  </StackPanel>

                  <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Zahlungsmethode" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding PaymentMethod, Mode=TwoWay}"
                             PlaceholderText="Zahlungsmethode..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                    <TextBlock Text="Zahlungsanbieter" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding PaymentProvider, Mode=TwoWay}"
                             PlaceholderText="Zahlungsanbieter..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Transaktions-ID" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding PaymentTransactionId, Mode=TwoWay}"
                             PlaceholderText="Transaktions-ID..."/>
                  </StackPanel>

                </Grid>

              </StackPanel>
            </Border>

            <!-- Shipping Information -->
            <Border Grid.Column="1"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{ThemeResource CornerRadiusM}"
                    Padding="20">
              <StackPanel Spacing="16">

                <!-- Section Title -->
                <TextBlock Text="📦 Versandinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                <!-- Shipping Fields -->
                <Grid ColumnSpacing="12" RowSpacing="12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                    <TextBlock Text="Versandmethode" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ShippingMethod, Mode=TwoWay}"
                             PlaceholderText="Versandmethode..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Versandstatus" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ShippingStatus, Mode=TwoWay}"
                             PlaceholderText="Versandstatus..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                    <TextBlock Text="Versandanbieter" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ShippingProvider, Mode=TwoWay}"
                             PlaceholderText="Versandanbieter..."/>
                  </StackPanel>

                  <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Tracking-ID" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ShippingTrackingId, Mode=TwoWay}"
                             PlaceholderText="Tracking-ID..."/>
                  </StackPanel>

                </Grid>

              </StackPanel>
            </Border>

          </Grid>

          <!-- Financial Summary -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="💰 Finanzen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Financial Fields -->
              <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                  <TextBlock Text="Zwischensumme" FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding Subtotal, Mode=TwoWay}"
                             Minimum="0"
                             SmallChange="0.01"
                             PlaceholderText="Zwischensumme..."/>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="4">
                  <TextBlock Text="Versandkosten" FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding ShippingCost, Mode=TwoWay}"
                             Minimum="0"
                             SmallChange="0.01"
                             PlaceholderText="Versandkosten..."/>
                </StackPanel>

                <StackPanel Grid.Column="2" Spacing="4">
                  <TextBlock Text="Steuern gesamt" FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding TotalTax, Mode=TwoWay}"
                             Minimum="0"
                             SmallChange="0.01"
                             PlaceholderText="Steuern..."/>
                </StackPanel>

                <StackPanel Grid.Column="3" Spacing="4">
                  <TextBlock Text="Gesamtsumme" FontWeight="SemiBold"/>
                  <NumberBox Value="{Binding Total, Mode=TwoWay}"
                             Minimum="0"
                             SmallChange="0.01"
                             IsEnabled="False"
                             Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Notes Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="📝 Notizen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Notes Fields -->
              <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                  <TextBlock Text="Kundennachricht" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding CustomerNote, Mode=TwoWay}"
                           PlaceholderText="Nachricht vom Kunden..."
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="80"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="4">
                  <TextBlock Text="Interne Notizen" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding InternalNote, Mode=TwoWay}"
                           PlaceholderText="Interne Notizen..."
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="80"/>
                </StackPanel>

              </Grid>

              <!-- Additional Notes -->
              <StackPanel Spacing="4">
                <TextBlock Text="Allgemeine Notizen" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Note, Mode=TwoWay}"
                         PlaceholderText="Weitere Notizen zur Bestellung..."
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MinHeight="60"/>
              </StackPanel>

            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Footer with action buttons -->
    <Border Grid.Row="2"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0">

      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Save Status -->
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
          <ProgressRing IsActive="{Binding IsSaving}"
                       Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}"
                       Width="20" Height="20"/>
          <TextBlock Text="Status: Bereit"
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     Visibility="{Binding IsSaving, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
          <TextBlock Text="Status: Wird gespeichert..."
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8">

          <Button Content="❌ Abbrechen"
                  Command="{Binding CancelCommand}"
                  Padding="12,8"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>

          <Button Content="💾 Speichern"
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                  Padding="12,8"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Background="#1C1C1E"
                  Foreground="White"/>

        </StackPanel>

      </Grid>

    </Border>

  </Grid>

</UserControl>
