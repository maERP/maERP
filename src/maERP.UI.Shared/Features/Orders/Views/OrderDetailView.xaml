<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Shared.Features.Orders.Views.OrderDetailView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding Order.OrderId, Converter={StaticResource StringFormatConverter}, ConverterParameter='Bestellung #{0}'}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{ThemeResource ContentViewHeadingBrush}"/>
          <Border Background="#E0F2FE"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4">
            <TextBlock Text="{Binding Order.Status}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
          <Border Background="#E0F2FE"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4">
            <TextBlock Text="{Binding Order.PaymentStatus}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding Order.DateOrdered, Converter={StaticResource StringFormatConverter}, ConverterParameter='Bestellt am: {0:dd.MM.yyyy HH:mm}'}"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditOrderCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Bestellung bearbeiten"/>
        <Button Content="↻"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Bestellung wird geladen..."
                   HorizontalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Order Details Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="24">

          <!-- Customer and Basic Info Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40" RowSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                         Text="📋 Bestellinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>

              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Bestell-Nr.:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.OrderId}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Kunden-Nr.:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.CustomerId}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Verkaufskanal-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.SalesChannelId}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding Order.RemoteOrderId, Converter={StaticResource NullToVisibilityConverter}}">
                  <TextBlock Text="Remote Bestell-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.RemoteOrderId}"/>
                </StackPanel>
              </StackPanel>

              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Bestelldatum:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.DateOrdered, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd.MM.yyyy HH:mm}'}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Status:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.Status}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Zahlungsstatus:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.PaymentStatus}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Versandstatus:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Order.ShippingStatus}"/>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Order Items Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <StackPanel Spacing="16">
              <TextBlock Text="🛍️ Bestellpositionen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <toolkit:DataGrid ItemsSource="{Binding Order.OrderItems}"
                               AutoGenerateColumns="False"
                               CanUserReorderColumns="True"
                               CanUserResizeColumns="True"
                               CanUserSortColumns="True"
                               GridLinesVisibility="Horizontal"
                               HeadersVisibility="Column"
                               IsReadOnly="True"
                               MaxHeight="300">

                <toolkit:DataGrid.Columns>
                  <toolkit:DataGridTextColumn Header="Artikel"
                                             Binding="{Binding Name}"
                                             Width="*"
                                             CanUserSort="True"/>
                  <toolkit:DataGridTextColumn Header="Menge"
                                             Binding="{Binding Quantity}"
                                             Width="80"
                                             CanUserSort="True"/>
                  <toolkit:DataGridTextColumn Header="Einzelpreis"
                                             Binding="{Binding Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}"
                                             Width="120"
                                             CanUserSort="True"/>
                  <toolkit:DataGridTextColumn Header="Steuersatz"
                                             Binding="{Binding TaxRate, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:P1}'}"
                                             Width="100"
                                             CanUserSort="True"/>
                </toolkit:DataGrid.Columns>

              </toolkit:DataGrid>
            </StackPanel>
          </Border>

          <!-- Addresses Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Delivery Address -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="🚚 Lieferadresse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12"
                        Visibility="{Binding HasDeliveryAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="{Binding DeliveryAddress}"
                             TextWrapping="Wrap"
                             LineHeight="18"/>
                </Border>
                <TextBlock Text="Keine Lieferadresse angegeben"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Visibility="{Binding HasDeliveryAddress, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
              </StackPanel>

              <!-- Invoice Address -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="🧾 Rechnungsadresse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <TextBlock Text="{Binding InvoiceAddress}"
                             TextWrapping="Wrap"
                             LineHeight="18"/>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Payment and Shipping Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Payment Info -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="💳 Zahlungsinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Zahlungsart:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Order.PaymentMethod}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Anbieter:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Order.PaymentProvider}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Order.PaymentTransactionId, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Transaktions-ID:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Order.PaymentTransactionId}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

              <!-- Shipping Info -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="📦 Versandinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Versandart:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Order.ShippingMethod}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Anbieter:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Order.ShippingProvider}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Order.ShippingTrackingId, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Tracking-ID:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Order.ShippingTrackingId}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Financial Summary Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <StackPanel Spacing="12">
              <TextBlock Text="💰 Kostenübersicht"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
              <Grid RowSpacing="6">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Zwischensumme:" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Order.Subtotal, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}" FontFamily="Consolas"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Versandkosten:" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Order.ShippingCost, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}" FontFamily="Consolas"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Steuern:" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Order.TotalTax, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}" FontFamily="Consolas"/>

                <Border Grid.Row="3" Grid.ColumnSpan="2" Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,8"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Gesamtsumme:" FontWeight="Bold" FontSize="16"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Order.Total, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}" FontWeight="Bold" FontSize="16" FontFamily="Consolas"/>

              </Grid>
            </StackPanel>
          </Border>

          <!-- Note Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasNote, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="12">
              <TextBlock Text="📝 Notizen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
              <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="12">
                <TextBlock Text="{Binding Order.Note}"
                           TextWrapping="Wrap"/>
              </Border>
            </StackPanel>
          </Border>

          <!-- Order History Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasOrderHistory, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="12">
              <TextBlock Text="📜 Bestellhistorie"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <toolkit:DataGrid ItemsSource="{Binding Order.OrderHistory}"
                               AutoGenerateColumns="False"
                               CanUserReorderColumns="True"
                               CanUserResizeColumns="True"
                               CanUserSortColumns="True"
                               GridLinesVisibility="Horizontal"
                               HeadersVisibility="Column"
                               IsReadOnly="True"
                               MaxHeight="200">

                <toolkit:DataGrid.Columns>
                  <toolkit:DataGridTextColumn Header="Datum"
                                             Binding="{Binding DateCreated, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd.MM.yyyy HH:mm}'}"
                                             Width="140"
                                             CanUserSort="True"/>
                  <toolkit:DataGridTextColumn Header="Aktion"
                                             Binding="{Binding Action}"
                                             Width="120"
                                             CanUserSort="True"/>
                  <toolkit:DataGridTextColumn Header="Beschreibung"
                                             Binding="{Binding Description}"
                                             Width="*"
                                             CanUserSort="True"/>
                  <toolkit:DataGridCheckBoxColumn Header="System"
                                                 Binding="{Binding IsSystemGenerated}"
                                                 Width="80"
                                                 CanUserSort="True"/>
                </toolkit:DataGrid.Columns>

              </toolkit:DataGrid>
            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
