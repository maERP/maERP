<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Shared.Features.Customers.Views.CustomerDetailView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding Customer.FullName}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{ThemeResource ContentViewHeadingBrush}"/>

          <Border Background="#E0F2FE"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4">
            <TextBlock Text="{Binding Customer.CustomerStatus}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding Customer.CustomerId, Converter={StaticResource StringFormatConverter}, ConverterParameter='Kunden-Nr. #{0}'}"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}" />
        <TextBlock Text="{Binding Customer.DateEnrollment, Converter={StaticResource StringFormatConverter}, ConverterParameter='Kunde seit: {0:dd.MM.yyyy}'}"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditCustomerCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Kunden bearbeiten"/>
        <Button Content="↻"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Kunde wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Customer Details Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}">
        <StackPanel Margin="24,24,24,48" Spacing="24">

          <!-- Basic Customer Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <Grid ColumnSpacing="40" RowSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                         Text="👤 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>

              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Kunden-Nr.:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.CustomerId}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Vorname:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.Firstname}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Nachname:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.Lastname}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding HasCompanyName, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="Firmenname:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.CompanyName}"/>
                </StackPanel>
              </StackPanel>

              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Status:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.CustomerStatus}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Anmeldedatum:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.DateEnrollment, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd.MM.yyyy}'}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding HasVatNumber, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="USt-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Customer.VatNumber}"/>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Contact Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Contact Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="📞 Kontaktinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" Visibility="{Binding HasEmail, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="📧 E-Mail:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Customer.Email}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding HasPhone, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="📱 Telefon:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Customer.Phone}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding HasWebsite, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="🌐 Website:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Customer.Website}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

              <!-- Quick Actions -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="⚡ Schnellaktionen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <Button Command="{Binding SendEmailCommand}"
                          HorizontalAlignment="Left"
                          Visibility="{Binding HasEmail, Converter={StaticResource BoolToVisibilityConverter}}"
                          Padding="12,8"
                          CornerRadius="{ThemeResource CornerRadiusS}"
                          Background="{ThemeResource AccentFillColorDefaultBrush}"
                          Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="📧" VerticalAlignment="Center"/>
                      <TextBlock Text="E-Mail senden" VerticalAlignment="Center"/>
                    </StackPanel>
                  </Button>
                  <Button Command="{Binding CallPhoneCommand}"
                          HorizontalAlignment="Left"
                          Visibility="{Binding HasPhone, Converter={StaticResource BoolToVisibilityConverter}}"
                          Padding="12,8"
                          CornerRadius="{ThemeResource CornerRadiusS}"
                          Background="{ThemeResource AccentFillColorDefaultBrush}"
                          Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="📞" VerticalAlignment="Center"/>
                      <TextBlock Text="Anrufen" VerticalAlignment="Center"/>
                    </StackPanel>
                  </Button>
                  <Button Command="{Binding OpenWebsiteCommand}"
                          HorizontalAlignment="Left"
                          Visibility="{Binding HasWebsite, Converter={StaticResource BoolToVisibilityConverter}}"
                          Padding="12,8"
                          CornerRadius="{ThemeResource CornerRadiusS}"
                          Background="{ThemeResource AccentFillColorDefaultBrush}"
                          Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="🌐" VerticalAlignment="Center"/>
                      <TextBlock Text="Website öffnen" VerticalAlignment="Center"/>
                    </StackPanel>
                  </Button>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Default Addresses Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Default Delivery Address -->
              <StackPanel Grid.Column="0" Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="🚚 Standard-Lieferadresse"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                  <Border Background="#E3F2FD"
                          CornerRadius="{ThemeResource CornerRadiusM}"
                          Padding="4,2"
                          Visibility="{Binding HasDefaultDeliveryAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Standard"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                  </Border>
                </StackPanel>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="16">
                  <TextBlock Text="{Binding DefaultDeliveryAddressFormatted}"
                             TextWrapping="Wrap"
                             LineHeight="18"/>
                </Border>
              </StackPanel>

              <!-- Default Invoice Address -->
              <StackPanel Grid.Column="1" Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="🧾 Standard-Rechnungsadresse"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                  <Border Background="#F3E5F5"
                          CornerRadius="{ThemeResource CornerRadiusM}"
                          Padding="4,2"
                          Visibility="{Binding HasDefaultInvoiceAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Standard"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="#7B1FA2"/>
                  </Border>
                </StackPanel>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="16">
                  <TextBlock Text="{Binding DefaultInvoiceAddressFormatted}"
                             TextWrapping="Wrap"
                             LineHeight="18"/>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- All Customer Addresses Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24"
                  Visibility="{Binding HasAddresses, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="16">
              <TextBlock Text="🏠 Alle Adressen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <toolkit:DataGrid ItemsSource="{Binding Customer.CustomerAddresses}"
                        AutoGenerateColumns="False"
                        CanUserReorderColumns="True"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="True"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        MaxHeight="300">

                <toolkit:DataGrid.Columns>
                  <toolkit:DataGridTextColumn Header="Name"
                                      Width="150"
                                      CanUserSort="True">
                    <toolkit:DataGridTextColumn.Binding>
                      <Binding Path="Firstname" Converter="{StaticResource StringFormatConverter}" ConverterParameter="{}{0}"/>
                    </toolkit:DataGridTextColumn.Binding>
                  </toolkit:DataGridTextColumn>
                  <toolkit:DataGridTextColumn Header="Firma"
                                      Binding="{Binding CompanyName}"
                                      Width="120"
                                      CanUserSort="True"/>
                  <toolkit:DataGridTextColumn Header="Straße"
                                      Width="200"
                                      CanUserSort="True"
                                      Binding="{Binding Street, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0} {1}'}"/>
                  <toolkit:DataGridTextColumn Header="Ort"
                                      Width="150"
                                      CanUserSort="True"
                                      Binding="{Binding Zip, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0} {1}'}"/>
                  <toolkit:DataGridCheckBoxColumn Header="Standard Lieferung"
                                          Binding="{Binding DefaultDeliveryAddress}"
                                          Width="120"
                                          CanUserSort="True"/>
                  <toolkit:DataGridCheckBoxColumn Header="Standard Rechnung"
                                          Binding="{Binding DefaultInvoiceAddress}"
                                          Width="120"
                                          CanUserSort="True"/>
                </toolkit:DataGrid.Columns>

              </toolkit:DataGrid>
            </StackPanel>
          </Border>

          <!-- Notes Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24"
                  Visibility="{Binding HasNote, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="12">
              <TextBlock Text="📝 Notizen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
              <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="12">
                <TextBlock Text="{Binding Customer.Note}"
                           TextWrapping="Wrap"/>
              </Border>
            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
