<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Features.AI.Views.AiModelDetailView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding AiModel.Name}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{ThemeResource ContentViewHeadingBrush}"/>
          <TextBlock Text="{Binding AiModel.Id, Converter={StaticResource StringFormatConverter}, ConverterParameter='ID #{0}'}"
                     FontSize="18"
                     FontWeight="Medium"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"
                     VerticalAlignment="Bottom"/>
          <Border Background="#E0F2FE"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4">
            <TextBlock Text="{Binding AiModelTypeDisplayName}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding SecurityNote}"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditAiModelCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                Background="{ThemeResource PrimaryBrush}"
                Foreground="{ThemeResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="AI-Modell bearbeiten"/>
        <Button Content="🔄"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="AI-Modell wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- AI Model Details Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24,24,24,48">
        <StackPanel Spacing="24">

          <!-- Basic AI Model Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <Grid ColumnSpacing="40" RowSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                         Text="🤖 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>

              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Modell-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModel.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModel.Name}"/>
                </StackPanel>
              </StackPanel>

              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Typ:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModelTypeDisplayName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Kategorie:" FontWeight="SemiBold" Width="140"/>
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="Lokal" Visibility="{Binding IsLocalModel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Text="Extern" Visibility="{Binding IsExternalModel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                  </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Context Länge:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModel.NCtx}"/>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- API Configuration Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <StackPanel Spacing="16">
              <TextBlock Text="🔐 API-Konfiguration"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <Grid ColumnSpacing="40">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Spacing="12">

                  <!-- API Username -->
                  <StackPanel Visibility="{Binding HasApiUsername, Converter={StaticResource BoolToVisibilityConverter}}" Spacing="4">
                    <TextBlock Text="API-Benutzername:" FontWeight="SemiBold"/>
                    <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Padding="12">
                      <TextBlock Text="{Binding AiModel.ApiUsername}"
                                 FontFamily="Consolas,monospace"/>
                    </Border>
                  </StackPanel>

                  <!-- API Password -->
                  <StackPanel Visibility="{Binding HasApiPassword, Converter={StaticResource BoolToVisibilityConverter}}" Spacing="4">
                    <TextBlock Text="API-Passwort:" FontWeight="SemiBold"/>
                    <Border Background="#FFEBEE"
                            BorderBrush="#EF5350"
                            BorderThickness="1"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Padding="8">
                      <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="🔒" VerticalAlignment="Center"/>
                        <TextBlock Text="••••••••••••••••"
                                   FontFamily="Consolas,monospace"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="(verborgen)"
                                   FontSize="10"
                                   Opacity="0.7"
                                   VerticalAlignment="Center"/>
                      </StackPanel>
                    </Border>
                  </StackPanel>

                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Spacing="12">

                  <!-- API Key -->
                  <StackPanel Visibility="{Binding HasApiKey, Converter={StaticResource BoolToVisibilityConverter}}" Spacing="4">
                    <TextBlock Text="API-Schlüssel:" FontWeight="SemiBold"/>
                    <Border Background="#FFEBEE"
                            BorderBrush="#EF5350"
                            BorderThickness="1"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Padding="8">
                      <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="🔑" VerticalAlignment="Center"/>
                        <TextBlock Text="••••••••••••••••••••••••••••••••"
                                   FontFamily="Consolas,monospace"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="(verborgen)"
                                   FontSize="10"
                                   Opacity="0.7"
                                   VerticalAlignment="Center"/>
                      </StackPanel>
                    </Border>
                  </StackPanel>

                  <!-- Security note for credentials -->
                  <Border Background="#FFF3E0"
                          BorderBrush="#FF9800"
                          BorderThickness="1"
                          CornerRadius="{ThemeResource CornerRadiusS}"
                          Padding="8"
                          Visibility="{Binding IsExternalModel, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="⚠️" VerticalAlignment="Center"/>
                      <TextBlock Text="Sensible Daten werden aus Sicherheitsgründen verborgen"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                  </Border>

                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Security Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <StackPanel Spacing="12">
              <TextBlock Text="🛡️ Sicherheitshinweise"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Local Model Info -->
              <Border Background="#E8F5E8"
                      BorderBrush="#4CAF50"
                      BorderThickness="1"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="12"
                      Visibility="{Binding IsLocalModel, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                  <TextBlock Text="✅" VerticalAlignment="Center" FontSize="16"/>
                  <StackPanel>
                    <TextBlock Text="Lokales Modell" FontWeight="SemiBold"/>
                    <TextBlock Text="Dieses Modell läuft lokal und sendet keine Daten an externe Dienste."
                               TextWrapping="Wrap"
                               Opacity="0.8"/>
                  </StackPanel>
                </StackPanel>
              </Border>

              <!-- External Model Info -->
              <Border Background="#FFF3E0"
                      BorderBrush="#FF9800"
                      BorderThickness="1"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="12"
                      Visibility="{Binding IsExternalModel, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                  <TextBlock Text="⚠️" VerticalAlignment="Center" FontSize="16"/>
                  <StackPanel>
                    <TextBlock Text="Externes Modell" FontWeight="SemiBold"/>
                    <TextBlock Text="Dieses Modell verwendet externe APIs. Überprüfen Sie die Datenschutzbestimmungen des Anbieters."
                               TextWrapping="Wrap"
                               Opacity="0.8"/>
                  </StackPanel>
                </StackPanel>
              </Border>

              <TextBlock Text="{Binding SecurityNote}"
                         FontStyle="Italic"
                         Opacity="0.7"/>
            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
