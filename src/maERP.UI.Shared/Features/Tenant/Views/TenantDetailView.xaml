<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Features.Tenant.Views.TenantDetailView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding DisplayName}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{ThemeResource ContentViewHeadingBrush}"/>
          <TextBlock Text="{Binding Tenant.Id, Converter={StaticResource StringFormatConverter}, ConverterParameter='ID #{0}'}"
                     FontSize="18"
                     FontWeight="Medium"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"
                     VerticalAlignment="Bottom"/>
          <Border CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4">
            <Border.Background>
              <SolidColorBrush Color="{Binding StatusBackgroundColor}"/>
            </Border.Background>
            <TextBlock Text="{Binding StatusText}"
                       FontSize="12"
                       FontWeight="SemiBold">
              <TextBlock.Foreground>
                <SolidColorBrush Color="{Binding StatusColor}"/>
              </TextBlock.Foreground>
            </TextBlock>
          </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="16">
          <TextBlock Text="{Binding Tenant.CompanyName, Converter={StaticResource StringFormatConverter}, ConverterParameter='Firma: {0}'}"
                     FontSize="14"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"
                     Visibility="{Binding HasCompanyName, Converter={StaticResource BoolToVisibilityConverter}}"/>
          <TextBlock Text="{Binding Tenant.UserCount, Converter={StaticResource StringFormatConverter}, ConverterParameter='Benutzer: {0}'}"
                     FontSize="14"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
        </StackPanel>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditTenantCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                Background="{ThemeResource PrimaryBrush}"
                Foreground="{ThemeResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Mandant bearbeiten"
                Visibility="{Binding CanEdit, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <Button Content="🔄"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Mandant wird geladen..."
                   HorizontalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Tenant Details Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="24">

          <!-- Basic Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40" RowSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                         Text="📋 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>

              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Mandanten-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.Name}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding HasCompanyName, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="Firmenname:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.CompanyName}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Status:" FontWeight="SemiBold" Width="140"/>
                  <Border CornerRadius="{ThemeResource CornerRadiusS}"
                          Padding="6,2">
                    <Border.Background>
                      <SolidColorBrush Color="{Binding StatusBackgroundColor}"/>
                    </Border.Background>
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="12"
                               FontWeight="SemiBold">
                      <TextBlock.Foreground>
                        <SolidColorBrush Color="{Binding StatusColor}"/>
                      </TextBlock.Foreground>
                    </TextBlock>
                  </Border>
                </StackPanel>
              </StackPanel>

              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Benutzeranzahl:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.UserCount}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Erstellt am:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.DateCreated, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd.MM.yyyy HH:mm}'}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Geändert am:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.DateModified, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd.MM.yyyy HH:mm}'}"/>
                </StackPanel>
              </StackPanel>

              <!-- Description (full width) -->
              <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Spacing="8" Visibility="{Binding HasDescription, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Beschreibung:" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <TextBlock Text="{Binding Tenant.Description}"
                             TextWrapping="Wrap"
                             LineHeight="20"/>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Contact Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasContactInfo, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Contact Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="📞 Kontaktinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Tenant.ContactEmail, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="E-Mail:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Tenant.ContactEmail}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Tenant.Phone, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Telefon:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Tenant.Phone}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Tenant.Website, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Website:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Tenant.Website}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Address Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasAddress, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Address Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="🏢 Adresse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <StackPanel Spacing="4">
                    <TextBlock Text="{Binding Tenant.Street}"
                               Visibility="{Binding Tenant.Street, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding Tenant.Street2}"
                               Visibility="{Binding Tenant.Street2, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Visibility="{Binding Tenant.PostalCode, Converter={StaticResource NullToVisibilityConverter}}">
                      <Run Text="{Binding Tenant.PostalCode}"/>
                      <Run Text=" "/>
                      <Run Text="{Binding Tenant.City}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding Tenant.State}"
                               Visibility="{Binding Tenant.State, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding Tenant.Country}"
                               FontWeight="SemiBold"
                               Visibility="{Binding Tenant.Country, Converter={StaticResource NullToVisibilityConverter}}"/>
                  </StackPanel>
                </Border>
              </StackPanel>

              <!-- Full Address Summary -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="📍 Vollständige Adresse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <TextBlock Text="{Binding FullAddress}"
                             TextWrapping="Wrap"
                             LineHeight="20"/>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Banking Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasBankingInfo, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="12">
              <TextBlock Text="🏦 Bankinformationen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
              <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="IBAN:" FontWeight="SemiBold" Width="100"/>
                <TextBlock Text="{Binding Tenant.Iban}" FontFamily="Courier New"/>
              </StackPanel>
            </StackPanel>
          </Border>

          <!-- Administrative Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasAdminInfo, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Admin Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="⚙️ Administrative Informationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Tenant.AdminEmail, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Admin E-Mail:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Tenant.AdminEmail}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding Tenant.Domain, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Domain:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Tenant.Domain}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

              <!-- Validity Information -->
              <StackPanel Grid.Column="1" Spacing="12" Visibility="{Binding Tenant.ValidUntil, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="📅 Gültigkeitsinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <Border.Background>
                    <SolidColorBrush Color="{Binding StatusBackgroundColor}"/>
                  </Border.Background>
                  <StackPanel Spacing="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="Gültig bis:" FontWeight="SemiBold"/>
                      <TextBlock Text="{Binding Tenant.ValidUntil, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd.MM.yyyy}'}">
                        <TextBlock.Foreground>
                          <SolidColorBrush Color="{Binding ValidUntilColor}"/>
                        </TextBlock.Foreground>
                      </TextBlock>
                    </StackPanel>
                    <TextBlock Text="⚠️ Abgelaufen!"
                               FontWeight="SemiBold"
                               Foreground="#EF4444"
                               Visibility="{Binding IsValidUntilExpired, Converter={StaticResource BoolToVisibilityConverter}}"/>
                  </StackPanel>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
