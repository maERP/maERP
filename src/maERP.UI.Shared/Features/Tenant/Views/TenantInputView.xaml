<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Features.Tenant.Views.TenantInputView">

  <UserControl.Resources>
    <!-- Style for TextBox with validation errors -->
    <Style TargetType="TextBox" x:Key="ErrorTextBoxStyle">
      <Setter Property="BorderBrush" Value="#D32F2F"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{ThemeResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Mandantendaten verwalten"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="❌"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Abbrechen"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource PrimaryBrush}"
                Foreground="{ThemeResource OnPrimaryBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Speichern"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Mandant wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Form Content with validation message -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="16" MaxWidth="900" HorizontalAlignment="Center">

          <!-- Validation Error Message Banner -->
          <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                  Background="#FEF2F2"
                  BorderBrush="#FCA5A5"
                  BorderThickness="2"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="16">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#991B1B"
                       FontWeight="Medium"
                       TextWrapping="Wrap"/>
          </Border>

          <!-- Basic Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="📋 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnSpacing="20" RowSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Name, IsActive -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Mandantenname *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Name, Mode=TwoWay}"
                           PlaceholderText="Mandantenname eingeben..."
                           Style="{StaticResource ErrorTextBoxStyle}"
                           Visibility="{Binding NameError, Converter={StaticResource NullToVisibilityConverter}}"/>
                  <TextBox Text="{Binding Name, Mode=TwoWay}"
                           PlaceholderText="Mandantenname eingeben..."
                           Visibility="{Binding NameError, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                  <TextBlock Text="{Binding NameError}"
                             Visibility="{Binding NameError, Converter={StaticResource NullToVisibilityConverter}}"
                             Foreground="#D32F2F"
                             FontSize="12"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Status" FontWeight="SemiBold"/>
                  <CheckBox Content="Mandant ist aktiv"
                            IsChecked="{Binding IsActive, Mode=TwoWay}"
                            VerticalAlignment="Center"
                            Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Second Row: Description (full width) -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Beschreibung" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Description, Mode=TwoWay}"
                           PlaceholderText="Beschreibung eingeben..."
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="60"
                           Style="{StaticResource ErrorTextBoxStyle}"
                           Visibility="{Binding DescriptionError, Converter={StaticResource NullToVisibilityConverter}}"/>
                  <TextBox Text="{Binding Description, Mode=TwoWay}"
                           PlaceholderText="Beschreibung eingeben..."
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="60"
                           Visibility="{Binding DescriptionError, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                  <TextBlock Text="{Binding DescriptionError}"
                             Visibility="{Binding DescriptionError, Converter={StaticResource NullToVisibilityConverter}}"
                             Foreground="#D32F2F"
                             FontSize="12"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Third Row: CompanyName -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Firmenname" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding CompanyName, Mode=TwoWay}"
                           PlaceholderText="Offizieller Firmenname..."/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Contact Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="📞 Kontaktinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnSpacing="20" RowSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Email, Phone -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="E-Mail" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding ContactEmail, Mode=TwoWay}"
                           PlaceholderText="kontakt@beispiel.de"
                           Style="{StaticResource ErrorTextBoxStyle}"
                           Visibility="{Binding ContactEmailError, Converter={StaticResource NullToVisibilityConverter}}"/>
                  <TextBox Text="{Binding ContactEmail, Mode=TwoWay}"
                           PlaceholderText="kontakt@beispiel.de"
                           Visibility="{Binding ContactEmailError, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                  <TextBlock Text="{Binding ContactEmailError}"
                             Visibility="{Binding ContactEmailError, Converter={StaticResource NullToVisibilityConverter}}"
                             Foreground="#D32F2F"
                             FontSize="12"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Telefon" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Phone, Mode=TwoWay}"
                           PlaceholderText="+49 123 456789"/>
                </StackPanel>

                <!-- Second Row: Website -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Website" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Website, Mode=TwoWay}"
                           PlaceholderText="https://www.beispiel.de"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Address Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="🏢 Adresse"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnSpacing="20" RowSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Street (full width) -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Straße und Hausnummer" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Street, Mode=TwoWay}"
                           PlaceholderText="Musterstraße 123"/>
                </StackPanel>

                <!-- Second Row: Street2 (full width, optional) -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Adresszusatz" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Street2, Mode=TwoWay}"
                           PlaceholderText="Gebäude, Etage, Abteilung... (optional)"/>
                </StackPanel>

                <!-- Third Row: PostalCode, City -->
                <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Postleitzahl" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding PostalCode, Mode=TwoWay}"
                           PlaceholderText="12345"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Ort" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding City, Mode=TwoWay}"
                           PlaceholderText="Berlin"/>
                </StackPanel>

                <!-- Fourth Row: State, Country -->
                <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Bundesland" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding State, Mode=TwoWay}"
                           PlaceholderText="Berlin"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Land" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Country, Mode=TwoWay}"
                           PlaceholderText="Deutschland"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Banking Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="🏦 Bankinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields -->
              <StackPanel Spacing="4">
                <TextBlock Text="IBAN" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Iban, Mode=TwoWay}"
                         PlaceholderText="DE89 3704 0044 0532 0130 00"/>
                <TextBlock Text="Format: 2 Buchstaben, 2 Ziffern, bis zu 30 Zeichen"
                           FontSize="11"
                           Opacity="0.6"
                           Margin="0,2,0,0"/>
              </StackPanel>

            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Footer with action buttons -->
    <Border Grid.Row="2"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0">

      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Save Status -->
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
          <ProgressRing IsActive="{Binding IsSaving}"
                       Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}"
                       Width="20" Height="20"/>
          <TextBlock Text="Status: Bereit"
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     Visibility="{Binding IsSaving, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
          <TextBlock Text="Status: Wird gespeichert..."
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8">

          <Button Content="❌ Abbrechen"
                  Command="{Binding CancelCommand}"
                  Padding="12,8"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>

          <Button Content="💾 Speichern"
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                  Padding="12,8"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Background="{ThemeResource AccentFillColorDefaultBrush}"
                  Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>

        </StackPanel>

      </Grid>

    </Border>

  </Grid>

</UserControl>
