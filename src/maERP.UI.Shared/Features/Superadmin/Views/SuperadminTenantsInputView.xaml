<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
    x:Class="maERP.UI.Shared.Features.Superadmin.Views.SuperadminTenantsInputView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{ThemeResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Mandant bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="❌"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Abbrechen"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource PrimaryBrush}"
                Foreground="{ThemeResource OnPrimaryBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Speichern"/>
      </StackPanel>
    </Grid>

    <!-- Content -->
    <Grid Grid.Row="1" Margin="16">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <!-- Error -->
      <Border Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="0,0,0,16"
              Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
        <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
      </Border>

      <!-- Loader -->
      <StackPanel Grid.Row="1"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="44" Height="44"/>
        <TextBlock Text="Tenant-Daten werden geladen..."
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Form -->
      <ScrollViewer Grid.Row="2"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}">
        <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Center">
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <Grid ColumnSpacing="20" RowSpacing="16">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <StackPanel>
                <TextBlock Text="Kennung"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding Identifier, Mode=TwoWay}"
                         Width="280"
                         CornerRadius="{ThemeResource CornerRadiusS}"
                         Padding="12,8"/>
                <TextBlock Text="Eindeutige Kennung des Tenants"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
              </StackPanel>

              <StackPanel Grid.Column="1">
                <TextBlock Text="Anzeigename"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding DisplayName, Mode=TwoWay}"
                         Width="320"
                         CornerRadius="{ThemeResource CornerRadiusS}"
                         Padding="12,8"/>
              </StackPanel>

              <StackPanel Grid.Row="1">
                <TextBlock Text="Domain"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding Domain, Mode=TwoWay}"
                         Width="280"
                         CornerRadius="{ThemeResource CornerRadiusS}"
                         Padding="12,8"
                         PlaceholderText="z.B. tenant.maerp.cloud"/>
              </StackPanel>

              <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Admin-E-Mail"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding AdminEmail, Mode=TwoWay}"
                         Width="320"
                         CornerRadius="{ThemeResource CornerRadiusS}"
                         Padding="12,8"/>
              </StackPanel>

              <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                <TextBlock Text="Connection String"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding ConnectionString, Mode=TwoWay}"
                         CornerRadius="{ThemeResource CornerRadiusS}"
                         Padding="12,8"
                         AcceptsReturn="True"
                         MinHeight="80"/>
              </StackPanel>

              <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                <TextBlock Text="Beschreibung"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding Description, Mode=TwoWay}"
                         CornerRadius="{ThemeResource CornerRadiusS}"
                         Padding="12,8"
                         AcceptsReturn="True"
                         MinHeight="80"/>
              </StackPanel>

            </Grid>
          </Border>

          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <StackPanel>
                <TextBlock Text="Gültig bis"
                           FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding ValidUntil, Mode=TwoWay}" Width="200"/>
                <TextBlock Text="Leer lassen für unbegrenzte Laufzeit"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
              </StackPanel>

              <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="Aktiv"
                           FontWeight="SemiBold"/>
                <ToggleSwitch IsOn="{Binding IsActive, Mode=TwoWay}"/>
              </StackPanel>
            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Footer -->
    <Border Grid.Row="2"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Padding="20">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="💾 Speichern"
                Command="{Binding SaveCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"/>
        <Button Content="✖️ Abbrechen"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"/>
      </StackPanel>
    </Border>

  </Grid>

</UserControl>
