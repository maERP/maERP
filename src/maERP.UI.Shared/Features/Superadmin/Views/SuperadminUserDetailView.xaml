<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Shared.Features.Superadmin.Views.SuperadminUserDetailView"
    x:Name="RootUserControl">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding FullName}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{ThemeResource ContentViewHeadingBrush}"/>
          <TextBlock Text="{Binding User.Id, Converter={StaticResource StringFormatConverter}, ConverterParameter='ID #{0}'}"
                     FontSize="18"
                     FontWeight="Medium"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"
                     VerticalAlignment="Bottom"/>
          <Border Background="#E0F2FE"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4">
            <TextBlock Text="Aktiv"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding User.Email}"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditUserCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                Background="{ThemeResource PrimaryBrush}"
                Foreground="{ThemeResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Benutzer bearbeiten"/>
        <Button Content="🔄"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Benutzer wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- User Details Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Center">

          <!-- Basic User Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="24">

              <!-- User Avatar and Core Info -->
              <StackPanel HorizontalAlignment="Center" Spacing="16">

                <!-- Avatar Placeholder -->
                <Border Width="80" Height="80"
                        Background="{ThemeResource SystemAccentColor}"
                        CornerRadius="40"
                        HorizontalAlignment="Center">
                  <TextBlock Text="{Binding User.Firstname, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C0}'}"
                             FontSize="32"
                             FontWeight="Bold"
                             Foreground="{ThemeResource OnPrimaryBrush}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Name and ID -->
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                  <TextBlock Text="{Binding FullName}"
                             FontSize="20"
                             FontWeight="SemiBold"
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding User.Email, Converter={StaticResource StringFormatConverter}, ConverterParameter='E-Mail: {0}'}"
                             FontSize="14"
                             Opacity="0.7"
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding User.Id, Converter={StaticResource StringFormatConverter}, ConverterParameter='ID: {0}'}"
                             FontSize="14"
                             Opacity="0.7"
                             HorizontalAlignment="Center"/>
                </StackPanel>

              </StackPanel>

            </StackPanel>
          </Border>

          <!-- Tenant Management Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <StackPanel Spacing="24">

              <!-- Section Title -->
              <TextBlock Text="🏢 Tenant-Verwaltung"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Two-Column Layout for Management -->
              <Grid ColumnSpacing="24" Visibility="{Binding CanManageTenants, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Assigned Tenants -->
                <Border Grid.Column="0"
                        Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="16">
                  <StackPanel Spacing="12">

                    <!-- Assigned Tenants Header -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="✅ Zugewiesene Tenants"
                                 FontWeight="SemiBold"
                                 FontSize="14"/>
                      <Border Background="#E8F5E8"
                              BorderBrush="#4CAF50"
                              BorderThickness="1"
                              CornerRadius="10"
                              Padding="4,2">
                        <TextBlock Text="{Binding UserTenants.Count}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="#2E7D32"/>
                      </Border>
                    </StackPanel>

                    <!-- Loading Indicator for Assigned Tenants -->
                    <StackPanel Visibility="{Binding IsLoadingTenants, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="8"
                                Margin="0,16">
                      <ProgressRing IsActive="True" Width="20" Height="4"/>
                      <TextBlock Text="Laden..."
                                 FontSize="12"
                                 Opacity="0.7"/>
                    </StackPanel>

                    <!-- Assigned Tenants List -->
                    <ScrollViewer MaxHeight="300" Visibility="{Binding IsLoadingTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                      <ItemsControl ItemsSource="{Binding UserTenants}">
                        <ItemsControl.ItemTemplate>
                          <DataTemplate>
                            <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{ThemeResource CornerRadiusS}"
                                    Padding="12"
                                    Margin="0,0,0,6">
                              <Grid>
                                <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="*"/>
                                  <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Tenant Icon -->
                                <Border Grid.Column="0"
                                        Background="{ThemeResource SystemAccentColor}"
                                        Width="32"
                                        Height="32"
                                        CornerRadius="16"
                                        Margin="0,0,12,0">
                                  <TextBlock Text="🏢"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>

                                <!-- Tenant Info -->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Spacing="2">
                                  <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="{Binding TenantName}"
                                               FontWeight="SemiBold"
                                               FontSize="12"/>
                                    <Border Background="#E8F5E8"
                                            BorderBrush="#4CAF50"
                                            BorderThickness="1"
                                            CornerRadius="{ThemeResource CornerRadiusM}"
                                            Padding="4,1"
                                            Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}">
                                      <TextBlock Text="Standard"
                                                 FontSize="9"
                                                 FontWeight="SemiBold"
                                                 Foreground="#2E7D32"/>
                                    </Border>
                                  </StackPanel>
                                </StackPanel>

                                <!-- Management Buttons -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="4"
                                            VerticalAlignment="Center">

                                  <!-- Set as Default Button -->
                                  <Button Content="⭐"
                                          Command="{Binding DataContext.SetDefaultTenantCommand, ElementName=RootUserControl}"
                                          CommandParameter="{Binding}"
                                          Visibility="{Binding IsDefault, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                          Width="28"
                                          Height="28"
                                          Padding="0"
                                          CornerRadius="14"
                                          Background="#FFF3E0"
                                          BorderBrush="#FFB74D"
                                          BorderThickness="1"
                                          ToolTipService.ToolTip="Als Standard festlegen"/>

                                  <!-- Remove Button -->
                                  <Button Content="✕"
                                          Command="{Binding DataContext.RemoveTenantCommand, ElementName=RootUserControl}"
                                          CommandParameter="{Binding}"
                                          Width="28"
                                          Height="28"
                                          Padding="0"
                                          CornerRadius="14"
                                          Background="#FFEBEE"
                                          BorderBrush="#F44336"
                                          BorderThickness="1"
                                          Foreground="#D32F2F"
                                          ToolTipService.ToolTip="Zuweisung entfernen"/>
                                </StackPanel>

                              </Grid>
                            </Border>
                          </DataTemplate>
                        </ItemsControl.ItemTemplate>
                      </ItemsControl>
                    </ScrollViewer>

                    <!-- No Assigned Tenants Message -->
                    <Border Background="#FFF3E0"
                            BorderBrush="#FFB74D"
                            BorderThickness="1"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Padding="12"
                            Visibility="{Binding IsLoadingTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                      <StackPanel Spacing="4"
                                  Visibility="{Binding HasNoUserTenants, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="ℹ️ Keine Zuweisungen"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                        <TextBlock Text="Diesem Benutzer sind noch keine Tenants zugewiesen"
                                   FontSize="10"
                                   Opacity="0.8"/>
                      </StackPanel>
                    </Border>

                  </StackPanel>
                </Border>

                <!-- Right Column: Available Tenants -->
                <Border Grid.Column="1"
                        Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="16">
                  <StackPanel Spacing="12">

                    <!-- Available Tenants Header -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="➕ Verfügbare Tenants"
                                 FontWeight="SemiBold"
                                 FontSize="14"/>
                      <Border Background="#E3F2FD"
                              BorderBrush="#2196F3"
                              BorderThickness="1"
                              CornerRadius="10"
                              Padding="4,2">
                        <TextBlock Text="{Binding AvailableTenants.Count}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"/>
                      </Border>
                    </StackPanel>

                    <!-- Loading Indicator for Available Tenants -->
                    <StackPanel Visibility="{Binding IsLoadingAvailableTenants, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="8"
                                Margin="0,16">
                      <ProgressRing IsActive="True" Width="20" Height="4"/>
                      <TextBlock Text="Laden..."
                                 FontSize="12"
                                 Opacity="0.7"/>
                    </StackPanel>

                    <!-- Available Tenants List -->
                    <ScrollViewer MaxHeight="300" Visibility="{Binding IsLoadingAvailableTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                      <ItemsControl ItemsSource="{Binding AvailableTenants}">
                        <ItemsControl.ItemTemplate>
                          <DataTemplate>
                            <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{ThemeResource CornerRadiusS}"
                                    Padding="12"
                                    Margin="0,0,0,6">
                              <Grid>
                                <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="*"/>
                                  <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Tenant Icon -->
                                <Border Grid.Column="0"
                                        Background="{ThemeResource SystemAccentColor}"
                                        Width="32"
                                        Height="32"
                                        CornerRadius="16"
                                        Margin="0,0,12,0">
                                  <TextBlock Text="🏢"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>

                                <!-- Tenant Info -->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Spacing="2">
                                  <TextBlock Text="{Binding Name}"
                                             FontWeight="SemiBold"
                                             FontSize="12"/>
                                </StackPanel>

                                <!-- Add Button -->
                                <Button Grid.Column="2"
                                        Content="+"
                                        Command="{Binding DataContext.AssignTenantCommand, ElementName=RootUserControl}"
                                        CommandParameter="{Binding}"
                                        Width="28"
                                        Height="28"
                                        Padding="0"
                                        CornerRadius="14"
                                        Background="#E8F5E8"
                                        BorderBrush="#4CAF50"
                                        BorderThickness="1"
                                        Foreground="#2E7D32"
                                        FontWeight="Bold"
                                        VerticalAlignment="Center"
                                        ToolTipService.ToolTip="Tenant zuweisen"/>

                              </Grid>
                            </Border>
                          </DataTemplate>
                        </ItemsControl.ItemTemplate>
                      </ItemsControl>
                    </ScrollViewer>

                    <!-- No Available Tenants Message -->
                    <Border Background="#E3F2FD"
                            BorderBrush="#2196F3"
                            BorderThickness="1"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Padding="12"
                            Visibility="{Binding IsLoadingAvailableTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                      <StackPanel Spacing="4"
                                  Visibility="{Binding HasNoAvailableTenants, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="✅ Alle zugewiesen"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                        <TextBlock Text="Alle verfügbaren Tenants sind bereits zugewiesen"
                                   FontSize="10"
                                   Opacity="0.8"/>
                      </StackPanel>
                    </Border>

                  </StackPanel>
                </Border>

              </Grid>

              <!-- Read-Only View for Non-Superadmins -->
              <StackPanel Spacing="16" Visibility="{Binding CanManageTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">

                <!-- Loading Indicator for Tenants -->
                <StackPanel Visibility="{Binding IsLoadingTenants, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,16">
                  <ProgressRing IsActive="True" Width="24" Height="4"/>
                  <TextBlock Text="Lade Tenant-Zuweisungen..."
                             FontSize="12"
                             Opacity="0.7"/>
                </StackPanel>

                <!-- Tenant List (Read-Only) -->
                <ItemsControl ItemsSource="{Binding UserTenants}"
                              Visibility="{Binding IsLoadingTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              BorderThickness="1"
                              CornerRadius="{ThemeResource CornerRadiusS}"
                              Padding="16"
                              Margin="0,0,0,8">
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                          </Grid.ColumnDefinitions>

                          <!-- Tenant Icon -->
                          <Border Grid.Column="0"
                                  Background="{ThemeResource SystemAccentColor}"
                                  Width="40"
                                  Height="40"
                                  CornerRadius="20"
                                  Margin="0,0,16,0">
                            <TextBlock Text="🏢"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                          </Border>

                          <!-- Tenant Info -->
                          <StackPanel Grid.Column="1"
                                      VerticalAlignment="Center"
                                      Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                              <TextBlock Text="{Binding TenantName}"
                                         FontWeight="SemiBold"
                                         FontSize="14"/>
                              <Border Background="#E8F5E8"
                                      BorderBrush="#4CAF50"
                                      BorderThickness="1"
                                      CornerRadius="10"
                                      Padding="6,2"
                                      Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Standard"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="#2E7D32"/>
                              </Border>
                            </StackPanel>
                          </StackPanel>

                          <!-- Status Icon -->
                          <Border Grid.Column="2"
                                  Background="#E3F2FD"
                                  CornerRadius="12"
                                  Padding="8,4"
                                  VerticalAlignment="Center">
                            <TextBlock Text="✓"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#1976D2"/>
                          </Border>

                        </Grid>
                      </Border>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No Tenants Message -->
                <Border Background="#FFF3E0"
                        BorderBrush="#FFB74D"
                        BorderThickness="1"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="16"
                        Visibility="{Binding IsLoadingTenants, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                  <StackPanel Spacing="8"
                              Visibility="{Binding HasNoUserTenants, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="ℹ️ Keine Tenant-Zuweisungen" FontWeight="SemiBold"/>
                    <TextBlock Text="Diesem Benutzer sind noch keine Tenants zugewiesen"
                               FontSize="12"
                               Opacity="0.8"/>
                    <TextBlock Text="Wenden Sie sich an einen Superadmin, um Tenant-Zuweisungen zu verwalten"
                               FontSize="12"
                               Opacity="0.6"/>
                  </StackPanel>
                </Border>

              </StackPanel>

            </StackPanel>
          </Border>

          <!-- Security Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="24">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="🔐 Sicherheitsinformationen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

              <!-- Security Info -->
              <Border Background="#FFF3E0"
                      BorderBrush="#FFB74D"
                      BorderThickness="1"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="16">
                <StackPanel Spacing="8">
                  <TextBlock Text="🔒 Passwort-Status" FontWeight="SemiBold"/>
                  <TextBlock Text="Das Passwort ist aus Sicherheitsgründen nicht sichtbar"
                             FontSize="12"
                             Opacity="0.8"/>
                  <TextBlock Text="Zur Passwort-Änderung nutzen Sie die Bearbeiten-Funktion"
                             FontSize="12"
                             Opacity="0.6"/>
                </StackPanel>
              </Border>

            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
