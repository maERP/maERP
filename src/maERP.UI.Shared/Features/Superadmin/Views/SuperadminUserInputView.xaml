<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Shared.Features.Superadmin.Views.SuperadminUserInputView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{ThemeResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Benutzerdaten bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="🔄"
                Command="{Binding ClearFormCommand}"
                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Formular leeren"/>
        <Button Content="❌"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Abbrechen"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{ThemeResource PrimaryBrush}"
                Foreground="{ThemeResource OnPrimaryBrush}"
                BorderThickness="0"
                ToolTipService.ToolTip="Speichern"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Benutzer wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>

      <!-- Form Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="24" MaxWidth="700" HorizontalAlignment="Center">

          <!-- Basic Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="20">

              <!-- Section Title -->
              <TextBlock Text="👤 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         HorizontalAlignment="Center"/>

              <!-- User Avatar Preview -->
              <StackPanel HorizontalAlignment="Center" Spacing="8">
                <Border Width="60" Height="60"
                        Background="{ThemeResource SystemAccentColor}"
                        CornerRadius="30"
                        HorizontalAlignment="Center">
                  <TextBlock Text="{Binding Firstname, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C0}'}"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="{ThemeResource OnPrimaryBrush}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{Binding FullName}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Opacity="0.8"/>
              </StackPanel>

              <!-- Form Fields -->
              <Grid ColumnSpacing="20" RowSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Firstname, Lastname -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="6">
                  <TextBlock Text="Vorname *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Firstname, Mode=TwoWay}"
                           PlaceholderText="Vorname eingeben..."
                           IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="6">
                  <TextBlock Text="Nachname *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Lastname, Mode=TwoWay}"
                           PlaceholderText="Nachname eingeben..."
                           IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>

                <!-- Second Row: Email -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="6">
                  <TextBlock Text="E-Mail-Adresse *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Email, Mode=TwoWay}"
                           PlaceholderText="benutzer@beispiel.de"
                           IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                  <TextBlock Text="Die E-Mail-Adresse wird für die Anmeldung verwendet"
                             FontSize="12"
                             Opacity="0.6"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Password Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="32">
            <StackPanel Spacing="20">

              <!-- Section Title -->
              <StackPanel Spacing="8" HorizontalAlignment="Center">
                <TextBlock Text="🔐 Passwort"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding PasswordHint}"
                           FontSize="13"
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
              </StackPanel>

              <!-- Password Fields -->
              <Grid ColumnSpacing="20" RowSpacing="16">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Password -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="6">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="Passwort" FontWeight="SemiBold"/>
                    <TextBlock Text="*" Foreground="Red" Visibility="{Binding IsPasswordRequired, Converter={StaticResource BoolToVisibilityConverter}}"/>
                  </StackPanel>
                  <PasswordBox Password="{Binding Password, Mode=TwoWay}"
                               PlaceholderText="Mindestens 8 Zeichen..."
                               IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>

                <!-- Second Row: Password Confirm -->
                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="6">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="Passwort bestätigen" FontWeight="SemiBold"/>
                    <TextBlock Text="*" Foreground="Red" Visibility="{Binding IsPasswordRequired, Converter={StaticResource BoolToVisibilityConverter}}"/>
                  </StackPanel>
                  <PasswordBox Password="{Binding PasswordConfirm, Mode=TwoWay}"
                               PlaceholderText="Passwort wiederholen..."
                               IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>

              </Grid>

              <!-- Password Security Info -->
              <Border Background="#E8F5E8"
                      BorderBrush="#4CAF50"
                      BorderThickness="1"
                      CornerRadius="{ThemeResource CornerRadiusM}"
                      Padding="20">
                <StackPanel Spacing="8">
                  <TextBlock Text="🛡️ Passwort-Sicherheit" FontWeight="SemiBold" FontSize="13"/>
                  <StackPanel Spacing="4">
                    <TextBlock Text="• Mindestens 8 Zeichen verwenden" FontSize="11" Opacity="0.8"/>
                    <TextBlock Text="• Kombination aus Buchstaben, Zahlen und Sonderzeichen" FontSize="11" Opacity="0.8"/>
                    <TextBlock Text="• Keine persönlichen Informationen verwenden" FontSize="11" Opacity="0.8"/>
                  </StackPanel>
                </StackPanel>
              </Border>

            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Status Footer -->
    <Border Grid.Row="2"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0">

      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Save Status -->
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
          <ProgressRing IsActive="{Binding IsSaving}"
                       Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}"
                       Width="20" Height="20"/>
          <TextBlock Text="Status: Bereit"
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     Visibility="{Binding IsSaving, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
          <TextBlock Text="Status: Wird gespeichert..."
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8">

          <Button Content="❌ Abbrechen"
                  Command="{Binding CancelCommand}"
                  Padding="12,8"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>

          <Button Content="💾 Speichern"
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                  Padding="12,8"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Background="{ThemeResource AccentFillColorDefaultBrush}"
                  Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>

        </StackPanel>

      </Grid>

    </Border>

  </Grid>

</UserControl>
