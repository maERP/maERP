<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
    x:Name="RootUserControl"
    x:Class="maERP.UI.Shared.Features.ImportExport.Views.ImportExportOverviewView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            Padding="32,20"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            CornerRadius="8,8,0,0"
            Margin="0,0,0,8">

      <StackPanel VerticalAlignment="Center">
        <TextBlock Text="ðŸ“¥ðŸ“¤ Import / Export"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                   Margin="0,0,0,6"/>
        <TextBlock Text="Importieren und exportieren Sie Ihre Daten in verschiedenen Formaten"
                   FontSize="14"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

    </Border>

    <!-- Content Area -->
    <Grid Grid.Row="1" Margin="32,16,32,32">

      <!-- Loading Indicator -->
      <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="32"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
        <StackPanel Spacing="16" HorizontalAlignment="Center">
          <ProgressRing IsActive="True" Width="40" Height="40"/>
          <TextBlock Text="Verarbeitung lÃ¤uft..."
                     FontSize="14"
                     HorizontalAlignment="Center"
                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
      </Border>

      <!-- Status Message -->
      <Border CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="24"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              MaxWidth="600"
              Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
        <Border.Background>
          <SolidColorBrush Color="{ThemeResource SystemFillColorCautionColor}"/>
        </Border.Background>
        <StackPanel Spacing="12" HorizontalAlignment="Center">
          <TextBlock Text="ðŸ“‹ Status"
                     FontSize="16"
                     FontWeight="SemiBold"
                     HorizontalAlignment="Center"
                     Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
          <TextBlock Text="{Binding ErrorMessage}"
                     FontSize="14"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap"
                     MaxWidth="500"
                     Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
        </StackPanel>
      </Border>

      <!-- Main Content Grid -->
      <ScrollViewer Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
        <ItemsControl ItemsSource="{Binding Categories}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center" MaximumRowsOrColumns="2"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>

          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      CornerRadius="{ThemeResource CornerRadiusM}"
                      Padding="24"
                      Margin="8"
                      MinHeight="180"
                      Width="400">

                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <!-- Icon and Title -->
                  <StackPanel Grid.Row="0" Spacing="12" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Icon}"
                               FontSize="36"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Title}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                  </StackPanel>

                  <!-- Description -->
                  <TextBlock Grid.Row="1"
                             Text="{Binding Description}"
                             FontSize="14"
                             TextWrapping="Wrap"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,12"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                  <!-- Action Buttons -->
                  <StackPanel Grid.Row="2"
                              Orientation="Horizontal"
                              Spacing="8"
                              HorizontalAlignment="Center">

                    <Button Content="ðŸ“¥ Import"
                            Command="{Binding DataContext.ImportCommand, ElementName=RootUserControl}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding IsEnabled}"
                            Padding="16,8"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>

                    <Button Content="ðŸ“¤ Export"
                            Command="{Binding DataContext.ExportCommand, ElementName=RootUserControl}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding IsEnabled}"
                            Padding="16,8"
                            CornerRadius="{ThemeResource CornerRadiusS}"
                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"/>

                  </StackPanel>

                </Grid>

              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>

        </ItemsControl>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
