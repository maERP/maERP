<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="maERP.UI.Features.Products.Views.ProductDetailView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple Header -->
    <Grid Grid.Row="0" Margin="0,0,0,32">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding DisplayName}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{ThemeResource ContentViewHeadingBrush}"/>
          <Border Background="#E0F2FE"
                  CornerRadius="{ThemeResource CornerRadiusS}"
                  Padding="8,4"
                  Visibility="{Binding Product.UseOptimized, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Optimiert"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="16">
          <TextBlock Text="{Binding Product.Sku, Converter={StaticResource StringFormatConverter}, ConverterParameter='SKU: {0}'}"
                     FontSize="14"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"/>
          <TextBlock Text="{Binding Product.Ean, Converter={StaticResource StringFormatConverter}, ConverterParameter='EAN: {0}'}"
                     FontSize="14"
                     Foreground="{ThemeResource ContentViewSubheadingBrush}"
                     Visibility="{Binding HasEan, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditProductCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="16"
                FontWeight="Medium"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Produkt bearbeiten"/>
        <Button Content="↻"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="{ThemeResource CornerRadiusS}"
                FontSize="14"
                FontWeight="Medium"
                Background="{ThemeResource SurfaceContainerBrush}"
                Foreground="{ThemeResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTipService.ToolTip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressRing IsActive="True" Width="40" Height="40"/>
        <TextBlock Text="Produkt wird geladen..."
                   HorizontalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Error Message -->
      <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="{ThemeResource CornerRadiusM}"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Product Details Content -->
      <ScrollViewer Visibility="{Binding ShouldShowContent, Converter={StaticResource BoolToVisibilityConverter}}" Padding="24">
        <StackPanel Spacing="24">

          <!-- Basic Product Information Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40" RowSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                         Text="📋 Produktinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>

              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="SKU:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.Sku}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.Name}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding Product.UseOptimized, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="Optimierter Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.NameOptimized}" TextWrapping="Wrap"/>
                </StackPanel>
              </StackPanel>

              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal" Visibility="{Binding HasEan, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="EAN:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.Ean}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding HasAsin, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="ASIN:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.Asin}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Steuerklasse-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.TaxClassId}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Optimierung:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Product.UseOptimized}" />
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Manufacturer Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding Product.Manufacturer, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel Spacing="12">
              <TextBlock Text="🏭 Hersteller"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,4"/>
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                <TextBlock Text="{Binding Product.Manufacturer.Name}" TextWrapping="Wrap"/>
              </StackPanel>
            </StackPanel>
          </Border>

          <!-- Pricing Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Pricing Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="💰 Preisgestaltung"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Verkaufspreis:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Product.Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}" FontSize="16" FontWeight="SemiBold"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding HasMsrp, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="UVP:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Product.Msrp, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Ersparnis:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding DiscountPercentage, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F1}%'}" FontWeight="SemiBold" Foreground="#D32F2F"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

              <!-- Price Analysis -->
              <StackPanel Grid.Column="1" Spacing="12" Visibility="{Binding HasMsrp, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="📊 Preisanalyse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <StackPanel Spacing="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="💲 Verkaufspreis:" FontSize="14"/>
                      <TextBlock Text="{Binding Product.Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="🔖 UVP:" FontSize="14"/>
                      <TextBlock Text="{Binding Product.Msrp, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C2}'}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}">
                      <TextBlock Text="💯 Rabatt:" FontSize="14"/>
                      <TextBlock Text="{Binding DiscountPercentage, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F1}%'}"
                                 FontWeight="SemiBold"
                                 Foreground="#D32F2F"/>
                    </StackPanel>
                  </StackPanel>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Physical Properties Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasDimensions, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Dimensions -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="📐 Abmessungen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Maße:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding DimensionsText}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Gewicht:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding WeightText}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Visibility="{Binding HasVolume, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Volumen:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding VolumeText}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

              <!-- Detailed Dimensions -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="📏 Detailmaße"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Breite:" FontWeight="SemiBold" Width="80"/>
                    <TextBlock Text="{Binding Product.Width, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F1} cm'}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Höhe:" FontWeight="SemiBold" Width="80"/>
                    <TextBlock Text="{Binding Product.Height, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F1} cm'}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tiefe:" FontWeight="SemiBold" Width="80"/>
                    <TextBlock Text="{Binding Product.Depth, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F1} cm'}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Gewicht:" FontWeight="SemiBold" Width="80"/>
                    <TextBlock Text="{Binding Product.Weight, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:F2} kg'}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Description Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20"
                  Visibility="{Binding HasDescription, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="12">
              <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="📝 Produktbeschreibung"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="#E3F2FD"
                        CornerRadius="{ThemeResource CornerRadiusM}"
                        Padding="4,2"
                        Visibility="{Binding Product.UseOptimized, Converter={StaticResource BoolToVisibilityConverter}}">
                  <TextBlock Text="Optimiert"
                             FontSize="10"
                             FontWeight="SemiBold"
                             Foreground="#1976D2"/>
                </Border>
              </StackPanel>
              <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                      CornerRadius="{ThemeResource CornerRadiusS}"
                      Padding="12">
                <TextBlock Text="{Binding DisplayDescription}"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
              </Border>
            </StackPanel>
          </Border>

          <!-- Sales Channels & Stock Section -->
          <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="{ThemeResource CornerRadiusM}"
                  Padding="20">
            <Grid ColumnSpacing="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <!-- Sales Channels -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="🌐 Vertriebskanäle"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <StackPanel Spacing="4">
                    <TextBlock Text="{Binding Product.ProductSalesChannel.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter='Anzahl: {0}'}"
                               Visibility="{Binding HasSalesChannels, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Text="Keine Vertriebskanäle zugeordnet"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Visibility="{Binding HasSalesChannels, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                  </StackPanel>
                </Border>
              </StackPanel>

              <!-- Stock Information -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="📦 Lagerbestände"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                        CornerRadius="{ThemeResource CornerRadiusS}"
                        Padding="12">
                  <StackPanel Spacing="4">
                    <TextBlock Text="{Binding Product.ProductStocks.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter='Lager: {0}'}"
                               Visibility="{Binding HasStocks, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Text="Keine Lagerbestände erfasst"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Visibility="{Binding HasStocks, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                  </StackPanel>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
