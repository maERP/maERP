<Application
    x:Class="maERP.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:maERP.UI.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Uno Platform Material Theme -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:StringFormatConverter x:Key="StringFormatConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>

            <!-- Modern Material 3 Design System -->

            <!-- Corner Radius System (Material 3 inspired) -->
            <CornerRadius x:Key="CornerRadiusXS">2</CornerRadius>
            <CornerRadius x:Key="CornerRadiusS">4</CornerRadius>
            <CornerRadius x:Key="CornerRadiusM">8</CornerRadius>
            <CornerRadius x:Key="CornerRadiusL">12</CornerRadius>
            <CornerRadius x:Key="CornerRadiusXL">16</CornerRadius>
            <CornerRadius x:Key="CornerRadiusXXL">20</CornerRadius>

            <!-- Material 3 Elevation System -->
            <!-- NOTE: WinUI uses Shadow property instead of BoxShadows -->
            <!-- These will be applied differently in individual controls -->
            <x:Double x:Key="Elevation0">0</x:Double>
            <x:Double x:Key="Elevation1">2</x:Double>
            <x:Double x:Key="Elevation2">4</x:Double>
            <x:Double x:Key="Elevation3">8</x:Double>
            <x:Double x:Key="Elevation4">12</x:Double>
            <x:Double x:Key="Elevation5">16</x:Double>

            <!-- Spacing System -->
            <x:Double x:Key="SpaceXXS">2</x:Double>
            <x:Double x:Key="SpaceXS">4</x:Double>
            <x:Double x:Key="SpaceS">6</x:Double>
            <x:Double x:Key="SpaceM">8</x:Double>
            <x:Double x:Key="SpaceL">12</x:Double>
            <x:Double x:Key="SpaceXL">16</x:Double>
            <x:Double x:Key="SpaceXXL">20</x:Double>
            <x:Double x:Key="SpaceXXXL">24</x:Double>
            <x:Double x:Key="Space4XL">32</x:Double>
            <x:Double x:Key="Space5XL">40</x:Double>

            <!-- Font Size System -->
            <x:Double x:Key="FontSizeDisplayL">48</x:Double>
            <x:Double x:Key="FontSizeDisplayM">36</x:Double>
            <x:Double x:Key="FontSizeDisplayS">32</x:Double>
            <x:Double x:Key="FontSizeHeadlineL">24</x:Double>
            <x:Double x:Key="FontSizeHeadlineM">20</x:Double>
            <x:Double x:Key="FontSizeHeadlineS">18</x:Double>
            <x:Double x:Key="FontSizeTitleL">16</x:Double>
            <x:Double x:Key="FontSizeTitleM">15</x:Double>
            <x:Double x:Key="FontSizeTitleS">14</x:Double>
            <x:Double x:Key="FontSizeBodyL">15</x:Double>
            <x:Double x:Key="FontSizeBodyM">14</x:Double>
            <x:Double x:Key="FontSizeBodyS">13</x:Double>
            <x:Double x:Key="FontSizeLabelL">13</x:Double>
            <x:Double x:Key="FontSizeLabelM">12</x:Double>
            <x:Double x:Key="FontSizeLabelS">11</x:Double>

            <!-- Legacy font size references for compatibility -->
            <x:Double x:Key="FontSizeCaption">12</x:Double>
            <x:Double x:Key="FontSizeBody">14</x:Double>
            <x:Double x:Key="FontSizeSubtitle">18</x:Double>
            <x:Double x:Key="FontSizeTitle">24</x:Double>
            <x:Double x:Key="FontSizeDisplay">36</x:Double>

            <!-- Primary Colors - consistent across themes -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#10a37f"/>
            <SolidColorBrush x:Key="OnPrimaryBrush" Color="#ffffff"/>
            <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#0d8563"/>
            <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#ffffff"/>

            <!-- Theme-specific colors using ThemeDictionaries -->
            <ResourceDictionary.ThemeDictionaries>
                <!-- Light Theme Colors -->
                <ResourceDictionary x:Key="Light">
                    <!-- Header Colors (Light background) -->
                    <SolidColorBrush x:Key="AppHeaderBrush" Color="#ffffff"/>
                    <SolidColorBrush x:Key="AppHeaderTextBrush" Color="#1f2937"/>
                    <SolidColorBrush x:Key="AppHeaderSubtextBrush" Color="#6b7280"/>
                    <SolidColorBrush x:Key="AppHeaderBorderBrush" Color="#e5e7eb"/>

                    <!-- Sidebar Colors (Light gray background) -->
                    <SolidColorBrush x:Key="AppSidebarBrush" Color="#f9fafb"/>
                    <SolidColorBrush x:Key="AppSidebarTextBrush" Color="#374151"/>
                    <SolidColorBrush x:Key="AppSidebarLabelBrush" Color="#6b7280"/>
                    <SolidColorBrush x:Key="AppSidebarHoverBrush" Color="#f3f4f6"/>
                    <SolidColorBrush x:Key="AppSidebarActiveBrush" Color="#e5e7eb"/>
                    <SolidColorBrush x:Key="AppSidebarBorderBrush" Color="#e5e7eb"/>

                    <!-- Flyout/Menu Colors -->
                    <SolidColorBrush x:Key="AppFlyoutBrush" Color="#ffffff"/>
                    <SolidColorBrush x:Key="AppFlyoutTextBrush" Color="#374151"/>
                    <SolidColorBrush x:Key="AppFlyoutHoverBrush" Color="#f9fafb"/>
                    <SolidColorBrush x:Key="AppFlyoutBorderBrush" Color="#e5e7eb"/>
                    <SolidColorBrush x:Key="AppFlyoutSeparatorBrush" Color="#f3f4f6"/>

                    <!-- Content Area Colors -->
                    <SolidColorBrush x:Key="AppContentBackgroundBrush" Color="#ffffff"/>

                    <!-- Navigation Elements -->
                    <SolidColorBrush x:Key="AppNavButtonBackgroundBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="AppNavButtonFocusBorderBrush" Color="#10a37f"/>

                    <!-- Separator Elements -->
                    <SolidColorBrush x:Key="AppSeparatorBrush" Color="#e5e7eb"/>
                    <x:Double x:Key="AppSeparatorOpacity">0.6</x:Double>

                    <!-- Interactive Elements -->
                    <SolidColorBrush x:Key="AppTransparentBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="AppUserMenuButtonBrush" Color="Transparent"/>

                    <!-- Dashboard/Content Colors -->
                    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#1f2937"/>
                    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#6b7280"/>
                    <SolidColorBrush x:Key="SurfaceContainerBrush" Color="#ffffff"/>
                    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#e5e7eb"/>
                    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#f3f4f6"/>
                    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#374151"/>
                    <SolidColorBrush x:Key="TertiaryContainerBrush" Color="#fef3c7"/>
                    <SolidColorBrush x:Key="OnTertiaryContainerBrush" Color="#92400e"/>
                    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#f9fafb"/>

                    <!-- ContentView Colors -->
                    <SolidColorBrush x:Key="ContentViewHeadingBrush" Color="#111827"/>
                    <SolidColorBrush x:Key="ContentViewSubheadingBrush" Color="#6b7280"/>
                </ResourceDictionary>

                <!-- Dark Theme Colors -->
                <ResourceDictionary x:Key="Dark">
                    <!-- Header Colors (OpenAI Dark Style) -->
                    <SolidColorBrush x:Key="AppHeaderBrush" Color="#0D0E10"/>
                    <SolidColorBrush x:Key="AppHeaderTextBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="AppHeaderSubtextBrush" Color="#9CA3AF"/>
                    <SolidColorBrush x:Key="AppHeaderBorderBrush" Color="#1F2024"/>

                    <!-- Sidebar Colors (OpenAI Dark Style) -->
                    <SolidColorBrush x:Key="AppSidebarBrush" Color="#0D0E10"/>
                    <SolidColorBrush x:Key="AppSidebarTextBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="AppSidebarLabelBrush" Color="#9CA3AF"/>
                    <SolidColorBrush x:Key="AppSidebarHoverBrush" Color="#1F2024"/>
                    <SolidColorBrush x:Key="AppSidebarActiveBrush" Color="#2A2D35"/>
                    <SolidColorBrush x:Key="AppSidebarBorderBrush" Color="#1F2024"/>

                    <!-- Flyout/Menu Colors -->
                    <SolidColorBrush x:Key="AppFlyoutBrush" Color="#0D0E10"/>
                    <SolidColorBrush x:Key="AppFlyoutTextBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="AppFlyoutHoverBrush" Color="#1F2024"/>
                    <SolidColorBrush x:Key="AppFlyoutBorderBrush" Color="#1F2024"/>
                    <SolidColorBrush x:Key="AppFlyoutSeparatorBrush" Color="#2A2D35"/>

                    <!-- Content Area Colors (OpenAI Dark Style) -->
                    <SolidColorBrush x:Key="AppContentBackgroundBrush" Color="#0F1114"/>

                    <!-- Navigation Elements -->
                    <SolidColorBrush x:Key="AppNavButtonBackgroundBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="AppNavButtonFocusBorderBrush" Color="#10a37f"/>

                    <!-- Separator Elements -->
                    <SolidColorBrush x:Key="AppSeparatorBrush" Color="#1F2024"/>
                    <x:Double x:Key="AppSeparatorOpacity">0.6</x:Double>

                    <!-- Interactive Elements -->
                    <SolidColorBrush x:Key="AppTransparentBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="AppUserMenuButtonBrush" Color="Transparent"/>

                    <!-- Dashboard/Content Colors (Dark) -->
                    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#9CA3AF"/>
                    <SolidColorBrush x:Key="SurfaceContainerBrush" Color="#1F2024"/>
                    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#2A2D35"/>
                    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#2A2D35"/>
                    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="TertiaryContainerBrush" Color="#3A3B3F"/>
                    <SolidColorBrush x:Key="OnTertiaryContainerBrush" Color="#E5E7EB"/>
                    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#1F2024"/>

                    <!-- ContentView Colors (Dark) -->
                    <SolidColorBrush x:Key="ContentViewHeadingBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="ContentViewSubheadingBrush" Color="#9CA3AF"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!-- Semantic Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#10b981"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#f59e0b"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#3b82f6"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#ef4444"/>
            <SolidColorBrush x:Key="OnErrorBrush" Color="#ffffff"/>

            <!-- Legacy accent color for compatibility -->
            <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#10a37f"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
