<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="maERP.UI.Features.Invoices.Views.InvoiceListView">

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Header mit Titel und Suche -->
    <Border Grid.Row="0" 
            Background="{DynamicResource SurfaceContainerBrush}"
            Padding="20,12"
            BorderBrush="{DynamicResource OutlineVariantBrush}"
            BorderThickness="0,0,0,1"
            CornerRadius="0"
            Margin="0">
      
      <Grid ColumnDefinitions="*,Auto,Auto">
        
        <!-- Titel -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
          <TextBlock Text="ðŸ§¾ Rechnungen" 
                     FontSize="{DynamicResource FontSizeHeadlineL}" 
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource OnSurfaceBrush}"
                     Margin="0,0,0,4"/>
          <TextBlock Text="{Binding TotalCount, StringFormat=Gesamt: \{0\} Rechnungen}" 
                     FontSize="{DynamicResource FontSizeBodyS}" 
                     Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
        </StackPanel>
        
        <!-- Suchfeld -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="4" 
                    VerticalAlignment="Center"
                    Margin="8,0">
          
          <TextBox Text="{Binding SearchText}" 
                   Watermark="Nach Rechnungen suchen..."
                   Width="200"
                   CornerRadius="3"
                   Padding="8,5"
                   FontSize="{DynamicResource FontSizeBodyS}"
                   VerticalAlignment="Center"/>
          
          <Button Content="ðŸ”" 
                  Command="{Binding SearchInvoicesCommand}"
                  VerticalAlignment="Center"
                  Padding="8,5"
                  CornerRadius="3"/>
          
        </StackPanel>
        
        <!-- Refresh Button -->
        <Button Grid.Column="2" 
                Content="ðŸ”„" 
                Command="{Binding RefreshCommand}"
                VerticalAlignment="Center"
                Padding="7,6"
                CornerRadius="3"
                FontSize="{DynamicResource FontSizeBodyS}"
                Background="{DynamicResource SurfaceContainerHighBrush}"
                BorderBrush="{DynamicResource OutlineBrush}"
                BorderThickness="1"
                ToolTip.Tip="Aktualisieren"/>
        
      </Grid>
      
    </Border>
    
    <!-- Loading/Error/Content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Rechnungen werden geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Invoices DataGrid -->
      <ScrollViewer IsVisible="{Binding ShouldShowDataGrid}">
        <controls:DataGrid ItemsSource="{Binding Invoices}"
                  SelectedItem="{Binding SelectedInvoice}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single">
          
          <controls:DataGrid.Columns>
            
            <controls:DataGridTextColumn Header="Rechng-Nr." 
                                Binding="{Binding Id}" 
                                Width="100"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Rechnungsnummer" 
                                Binding="{Binding InvoiceNumber}" 
                                Width="150"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Kunde" 
                                Binding="{Binding CustomerName}" 
                                Width="200"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Rechnungsdatum" 
                                Binding="{Binding InvoiceDate, StringFormat=\{0:dd.MM.yyyy\}}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Bestellung" 
                                Binding="{Binding OrderNumber}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Status" 
                                Binding="{Binding InvoiceStatus}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Zahlungsstatus" 
                                Binding="{Binding PaymentStatus}" 
                                Width="150"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Zahlungsart" 
                                Binding="{Binding PaymentMethod}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Gesamtsumme" 
                                Binding="{Binding Total, StringFormat=\{0:C2\}}" 
                                Width="120"
                                CanUserSort="True"/>
            
          </controls:DataGrid.Columns>
          
          <controls:DataGrid.Styles>
            <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
            </Style>
            <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
              <Setter Property="Opacity" Value="0.1"/>
            </Style>
          </controls:DataGrid.Styles>
          
        </controls:DataGrid>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Pagination Footer -->
    <Border Grid.Row="2" 
            Background="{DynamicResource SurfaceContainerBrush}"
            Padding="16,12"
            BorderBrush="{DynamicResource OutlineVariantBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,6,6"
            Margin="0,6,0,0"
            IsVisible="{Binding !IsLoading}">
      
      <Grid ColumnDefinitions="*,Auto,*">
        
        <!-- Page Info Links -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    Spacing="6">
          <TextBlock Text="{Binding DisplayPageNumber, StringFormat=Seite \{0\}}" 
                     FontSize="{DynamicResource FontSizeBodyS}"
                     VerticalAlignment="Center"/>
          <TextBlock Text="von" 
                     FontSize="{DynamicResource FontSizeBodyS}"
                     Opacity="0.7" 
                     VerticalAlignment="Center"/>
          <TextBlock Text="{Binding TotalPages}" 
                     FontSize="{DynamicResource FontSizeBodyS}"
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="6">
          
          <Button Content="â—€ ZurÃ¼ck" 
                  Command="{Binding PreviousPageCommand}"
                  IsEnabled="{Binding CanGoPrevious}"
                  Padding="12,8"
                  FontSize="{DynamicResource FontSizeBodyS}"
                  CornerRadius="4"/>
          
          <Button Content="Weiter â–¶" 
                  Command="{Binding NextPageCommand}"
                  IsEnabled="{Binding CanGoNext}"
                  Padding="12,8"
                  FontSize="{DynamicResource FontSizeBodyS}"
                  CornerRadius="4"/>
          
        </StackPanel>
        
        <!-- Items Info Rechts -->
        <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Spacing="3">
          <TextBlock Text="{Binding Invoices.Count, StringFormat=\{0\} EintrÃ¤ge}" 
                     FontSize="{DynamicResource FontSizeBodyS}"
                     Opacity="0.7"/>
          <TextBlock Text="von" 
                     FontSize="{DynamicResource FontSizeBodyS}"
                     Opacity="0.7"/>
          <TextBlock Text="{Binding TotalCount}" 
                     FontSize="{DynamicResource FontSizeBodyS}"
                     Opacity="0.7"/>
        </StackPanel>
        
      </Grid>
      
    </Border>
    
  </Grid>

</UserControl>