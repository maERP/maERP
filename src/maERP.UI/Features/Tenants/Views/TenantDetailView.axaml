<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:StringConverters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="maERP.UI.Features.Tenants.Views.TenantDetailView">

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- Header -->
    <Border Grid.Row="0"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="28,20"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            CornerRadius="8,8,0,0">
      <Grid ColumnDefinitions="*,Auto">
        <StackPanel>
          <TextBlock Text="ðŸ¢ Tenant-Details"
                     FontSize="{DynamicResource FontSizeTitle}"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
          <TextBlock Text="{Binding Tenant.Identifier, StringFormat=Kennung: \{0\}}"
                     FontSize="{DynamicResource FontSizeBody}"
                     Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
          <Button Content="âœ… Aktivieren"
                  Command="{Binding ActivateTenantCommand}"
                  IsVisible="{Binding CanActivate}"
                  Padding="16,10"
                  CornerRadius="6"/>
          <Button Content="â¸ï¸ Deaktivieren"
                  Command="{Binding DeactivateTenantCommand}"
                  IsVisible="{Binding CanDeactivate}"
                  Padding="16,10"
                  CornerRadius="6"/>
          <Button Content="âœï¸ Bearbeiten"
                  Command="{Binding EditTenantCommand}"
                  IsEnabled="{Binding Tenant}"
                  Padding="16,10"
                  CornerRadius="6"/>
          <Button Content="â†©ï¸ ZurÃ¼ck"
                  Command="{Binding GoBackCommand}"
                  Padding="16,10"
                  CornerRadius="6"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Content -->
    <Grid Grid.Row="1" Margin="0,12" RowDefinitions="Auto,*">

      <!-- Loading -->
      <StackPanel IsVisible="{Binding IsLoading}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="220"/>
        <TextBlock Text="Tenant wird geladen..."
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Error -->
      <Border Grid.Row="0"
              Margin="16"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler"
                     FontWeight="SemiBold"
                     Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}"
                     Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Details -->
      <ScrollViewer Grid.Row="1"
                    Margin="16"
                    IsVisible="{Binding ShouldShowContent}">
        <StackPanel Spacing="20">

          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">

              <TextBlock Text="Name"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Column="1"
                         Text="{Binding Tenant.DisplayName}"/>

              <TextBlock Grid.Row="1"
                         Text="Kennung"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="1" Grid.Column="1"
                         Text="{Binding Tenant.Identifier}"/>

              <TextBlock Grid.Row="2"
                         Text="Domain"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="2" Grid.Column="1"
                         Text="{Binding Tenant.Domain, FallbackValue=-}"/>

              <TextBlock Grid.Row="3"
                         Text="Admin-E-Mail"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="3" Grid.Column="1"
                         Text="{Binding Tenant.AdminEmail, FallbackValue=-}"/>

              <TextBlock Grid.Row="4"
                         Text="Verbindungszeichenfolge"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="4" Grid.Column="1"
                         Text="{Binding Tenant.ConnectionString, FallbackValue=-}"/>

              <TextBlock Grid.Row="5"
                         Text="Status"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="5" Grid.Column="1"
                         Text="{Binding StatusText}"/>

              <TextBlock Grid.Row="6"
                         Text="Valid bis"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="6" Grid.Column="1"
                         Text="{Binding Tenant.ValidUntil, StringFormat=\{0:dd.MM.yyyy\}, FallbackValue=unbegrenzt}"/>

            </Grid>
          </Border>

          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <StackPanel Spacing="12">
              <TextBlock Text="Beschreibung"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Text="{Binding Tenant.Description, FallbackValue=Keine Beschreibung hinterlegt}"/>
            </StackPanel>
          </Border>

          <Border Background="{DynamicResource ControlFillColorSubtleBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
              <TextBlock Text="Erstellt am"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Column="1"
                         Text="{Binding Tenant.CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>

              <TextBlock Grid.Row="1"
                         Text="Aktualisiert am"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="1" Grid.Column="1"
                         Text="{Binding Tenant.LastUpdatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}, FallbackValue=--}"/>
            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Footer -->
    <Border Grid.Row="2"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Padding="20">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="ðŸ” Aktualisieren"
                Command="{Binding RefreshCommand}"
                Padding="16,10"
                CornerRadius="6"/>
        <Button Content="â†©ï¸ ZurÃ¼ck"
                Command="{Binding GoBackCommand}"
                Padding="16,10"
                CornerRadius="6"/>
      </StackPanel>
    </Border>

  </Grid>

</UserControl>
