<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:StringConverters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="maERP.UI.Features.Tenants.Views.TenantInputView">

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#111827"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Mandant bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="#6B7280"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="âŒ"
                Command="{Binding CancelCommand}"
                Padding="10"
                CornerRadius="6"
                FontSize="16"
                Background="#F3F4F6"
                Foreground="#374151"
                BorderThickness="0"
                ToolTip.Tip="Abbrechen"/>
        <Button Content="ðŸ’¾"
                Command="{Binding SaveCommand}"
                Padding="10"
                CornerRadius="6"
                FontSize="16"
                Background="#10B981"
                Foreground="White"
                BorderThickness="0"
                ToolTip.Tip="Speichern"/>
      </StackPanel>
    </Grid>

    <!-- Content -->
    <Grid Grid.Row="1" Margin="16" RowDefinitions="Auto,*,*">

      <!-- Error -->
      <Border Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="0,0,0,16"
              IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
      </Border>

      <!-- Loader -->
      <StackPanel Grid.Row="1"
                  IsVisible="{Binding IsLoading}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="220"/>
        <TextBlock Text="Tenant-Daten werden geladen..."
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Form -->
      <ScrollViewer Grid.Row="2"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    IsVisible="{Binding ShouldShowContent}">
        <StackPanel Spacing="20">
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">

              <StackPanel>
                <TextBlock Text="Kennung"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding Identifier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="280"
                         CornerRadius="6"
                         Padding="12,8"/>
                <TextBlock Text="Eindeutige Kennung des Tenants"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              </StackPanel>

              <StackPanel Grid.Column="1">
                <TextBlock Text="Anzeigename"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="320"
                         CornerRadius="6"
                         Padding="12,8"/>
              </StackPanel>

              <StackPanel Grid.Row="1">
                <TextBlock Text="Domain"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding Domain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="280"
                         CornerRadius="6"
                         Padding="12,8"
                         Watermark="z.B. tenant.maerp.cloud"/>
              </StackPanel>

              <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Admin-E-Mail"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding AdminEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="320"
                         CornerRadius="6"
                         Padding="12,8"/>
              </StackPanel>

              <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                <TextBlock Text="Connection String"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding ConnectionString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         CornerRadius="6"
                         Padding="12,8"
                         AcceptsReturn="True"
                         MinHeight="80"/>
              </StackPanel>

              <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                <TextBlock Text="Beschreibung"
                           FontWeight="SemiBold"/>
                <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         CornerRadius="6"
                         Padding="12,8"
                         AcceptsReturn="True"
                         MinHeight="80"/>
              </StackPanel>

            </Grid>
          </Border>

          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*">
              <StackPanel>
                <TextBlock Text="GÃ¼ltig bis"
                           FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding ValidUntil, Mode=TwoWay}" Width="200"/>
                <TextBlock Text="Leer lassen fÃ¼r unbegrenzte Laufzeit"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              </StackPanel>

              <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="Aktiv"
                           FontWeight="SemiBold"/>
                <ToggleSwitch IsChecked="{Binding IsActive, Mode=TwoWay}"/>
              </StackPanel>
            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Footer -->
    <Border Grid.Row="2"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Padding="20">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="ðŸ’¾ Speichern"
                Command="{Binding SaveCommand}"
                Padding="16,10"
                CornerRadius="6"/>
        <Button Content="âœ–ï¸ Abbrechen"
                Command="{Binding CancelCommand}"
                Padding="16,10"
                CornerRadius="6"/>
      </StackPanel>
    </Border>

  </Grid>

</UserControl>
