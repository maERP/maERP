<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:StringConverters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="maERP.UI.Features.Superadmin.Views.SuperadminTenantsDetailView">

  <Grid RowDefinitions="Auto,*">

    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding Tenant.DisplayName}" 
                     FontSize="28" 
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource ContentViewHeadingBrush}"/>
          <TextBlock Text="{Binding Tenant.Id, StringFormat=ID #{0}}" 
                     FontSize="18" 
                     FontWeight="Medium"
                     Foreground="{DynamicResource ContentViewSubheadingBrush}"
                     VerticalAlignment="Bottom"/>
          <Border Background="#E0F2FE" 
                  CornerRadius="6" 
                  Padding="8,4">
            <TextBlock Text="{Binding StatusText}" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding Tenant.Identifier, StringFormat=Kennung: \{0\}}" 
                   FontSize="14" 
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>
      
      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✅"
                Command="{Binding ActivateTenantCommand}"
                IsVisible="{Binding CanActivate}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#10B981"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Tenant aktivieren"/>
        <Button Content="⏸️"
                Command="{Binding DeactivateTenantCommand}"
                IsVisible="{Binding CanDeactivate}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#EF4444"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Tenant deaktivieren"/>
        <Button Content="✏️"
                Command="{Binding EditTenantCommand}"
                IsEnabled="{Binding Tenant}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Tenant bearbeiten"/>
        <Button Content="🔄"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Content -->
    <Grid Grid.Row="1" Margin="0,12" RowDefinitions="Auto,*">

      <!-- Loading -->
      <StackPanel IsVisible="{Binding IsLoading}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="220"/>
        <TextBlock Text="Tenant wird geladen..."
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Error -->
      <Border Grid.Row="0"
              Margin="16"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler"
                     FontWeight="SemiBold"
                     Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}"
                     Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Details -->
      <ScrollViewer Grid.Row="1"
                    Margin="16"
                    IsVisible="{Binding ShouldShowContent}">
        <StackPanel Spacing="20">

          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">

              <TextBlock Text="Name"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Column="1"
                         Text="{Binding Tenant.DisplayName}"/>

              <TextBlock Grid.Row="1"
                         Text="Kennung"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="1" Grid.Column="1"
                         Text="{Binding Tenant.Identifier}"/>

              <TextBlock Grid.Row="2"
                         Text="Domain"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="2" Grid.Column="1"
                         Text="{Binding Tenant.Domain, FallbackValue=-}"/>

              <TextBlock Grid.Row="3"
                         Text="Admin-E-Mail"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="3" Grid.Column="1"
                         Text="{Binding Tenant.AdminEmail, FallbackValue=-}"/>

              <TextBlock Grid.Row="4"
                         Text="Verbindungszeichenfolge"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="4" Grid.Column="1"
                         Text="{Binding Tenant.ConnectionString, FallbackValue=-}"/>

              <TextBlock Grid.Row="5"
                         Text="Status"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="5" Grid.Column="1"
                         Text="{Binding StatusText}"/>

              <TextBlock Grid.Row="6"
                         Text="Valid bis"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="6" Grid.Column="1"
                         Text="{Binding Tenant.ValidUntil, StringFormat=\{0:dd.MM.yyyy\}, FallbackValue=unbegrenzt}"/>

            </Grid>
          </Border>

          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <StackPanel Spacing="12">
              <TextBlock Text="Beschreibung"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Text="{Binding Tenant.Description, FallbackValue=Keine Beschreibung hinterlegt}"/>
            </StackPanel>
          </Border>

          <Border Background="{DynamicResource ControlFillColorSubtleBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
              <TextBlock Text="Erstellt am"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Column="1"
                         Text="{Binding Tenant.CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>

              <TextBlock Grid.Row="1"
                         Text="Aktualisiert am"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              <TextBlock Grid.Row="1" Grid.Column="1"
                         Text="{Binding Tenant.LastUpdatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}, FallbackValue=--}"/>
            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>



  </Grid>

</UserControl>
