<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="maERP.UI.Features.Orders.Views.OrderListView">

  <Grid RowDefinitions="Auto,Auto,*,Auto">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,24">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="Bestellungen" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   Foreground="#111827"
                   Margin="0,0,0,4"/>
        <TextBlock Text="{Binding TotalCount, StringFormat=Gesamt: \{0\} Bestellungen}" 
                   FontSize="14" 
                   Foreground="#6B7280"/>
      </StackPanel>
      
      <!-- Action Buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="+"
                Command="{Binding CreateOrderCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Neue Bestellung erstellen"/>
        <Button Content="â†»"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Aktualisieren"/>
      </StackPanel>
    </Grid>
    
    <!-- Search Bar -->
    <Grid Grid.Row="1" Margin="0,0,0,16">
      <StackPanel Orientation="Horizontal" 
                  Spacing="8" 
                  HorizontalAlignment="Left">
        <TextBox Text="{Binding SearchText}" 
                 Watermark="Nach Bestellungen suchen..."
                 Width="300"
                 CornerRadius="6"
                 Padding="12,8"
                 FontSize="14"
                 BorderBrush="#D1D5DB"
                 BorderThickness="1"/>
        <Button Content="ðŸ”" 
                Command="{Binding SearchOrdersCommand}"
                Padding="8"
                CornerRadius="6"
                FontSize="16"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"/>
      </StackPanel>
    </Grid>
    
    <!-- Loading/Error/Content -->
    <Grid Grid.Row="2">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Bestellungen werden geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Orders DataGrid -->
      <ScrollViewer IsVisible="{Binding ShouldShowDataGrid}">
        <controls:DataGrid ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  DoubleTapped="DataGrid_DoubleTapped">
          
          <controls:DataGrid.Columns>
            
            <controls:DataGridTextColumn Header="Bestell-Nr."
                                Binding="{Binding OrderId}"
                                Width="100"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Kunde" 
                                Binding="{Binding FullName}" 
                                Width="200"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Bestelldatum" 
                                Binding="{Binding DateOrdered, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" 
                                Width="150"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Status" 
                                Binding="{Binding Status}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Zahlungsstatus" 
                                Binding="{Binding PaymentStatus}" 
                                Width="150"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Gesamtsumme" 
                                Binding="{Binding Total, StringFormat=\{0:C2\}}" 
                                Width="120"
                                CanUserSort="True"/>
            
            
          </controls:DataGrid.Columns>
          
          <controls:DataGrid.Styles>
            <Style Selector="DataGridRow">
              <Setter Property="Cursor" Value="Hand"/>
            </Style>
            <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
            </Style>
            <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
              <Setter Property="Opacity" Value="0.1"/>
            </Style>
          </controls:DataGrid.Styles>
          
        </controls:DataGrid>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Pagination Footer -->
    <Border Grid.Row="3" 
            Background="Transparent"
            Padding="0,16,0,0"
            IsVisible="{Binding !IsLoading}">
      
      <Grid ColumnDefinitions="*,Auto,*">
        
        <!-- Page Info -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    Spacing="6">
          <TextBlock Text="{Binding DisplayPageNumber, StringFormat=Seite \{0\}}" 
                     FontSize="14"
                     Foreground="#6B7280"
                     VerticalAlignment="Center"/>
          <TextBlock Text="von" 
                     FontSize="14"
                     Foreground="#9CA3AF" 
                     VerticalAlignment="Center"/>
          <TextBlock Text="{Binding TotalPages}" 
                     FontSize="14"
                     Foreground="#6B7280"
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8">
          
          <Button Content="â—€ ZurÃ¼ck" 
                  Command="{Binding PreviousPageCommand}"
                  IsEnabled="{Binding CanGoPrevious}"
                  Padding="12,8"
                  FontSize="14"
                  CornerRadius="6"
                  Background="{DynamicResource SurfaceContainerBrush}"
                  Foreground="{DynamicResource OnSurfaceBrush}"
                  BorderThickness="0"/>
          
          <Button Content="Weiter â–¶" 
                  Command="{Binding NextPageCommand}"
                  IsEnabled="{Binding CanGoNext}"
                  Padding="12,8"
                  FontSize="14"
                  CornerRadius="6"
                  Background="{DynamicResource SurfaceContainerBrush}"
                  Foreground="{DynamicResource OnSurfaceBrush}"
                  BorderThickness="0"/>
          
        </StackPanel>
        
        <!-- Items Info -->
        <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Spacing="4">
          <TextBlock Text="{Binding Orders.Count, StringFormat=\{0\} EintrÃ¤ge}" 
                     FontSize="14"
                     Foreground="#9CA3AF"/>
          <TextBlock Text="von" 
                     FontSize="14"
                     Foreground="#9CA3AF"/>
          <TextBlock Text="{Binding TotalCount}" 
                     FontSize="14"
                     Foreground="#9CA3AF"/>
        </StackPanel>
        
      </Grid>
      
    </Border>
    
  </Grid>

</UserControl>