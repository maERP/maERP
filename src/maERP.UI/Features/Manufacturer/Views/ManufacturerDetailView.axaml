<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Manufacturer.Views.ManufacturerDetailView">

  <Grid RowDefinitions="Auto,*">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding Manufacturer.Name}" 
                     FontSize="28" 
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource ContentViewHeadingBrush}"/>
          <Border Background="#E0F2FE" 
                  CornerRadius="6" 
                  Padding="8,4"
                  IsVisible="{Binding Manufacturer.Name, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBlock Text="Aktiv" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding Manufacturer.City, StringFormat=Standort: \{0\}}" 
                   FontSize="14" 
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"
                   IsVisible="{Binding Manufacturer.City, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
      </StackPanel>
      
      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditManufacturerCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Hersteller bearbeiten"/>
        <Button Content="🗑️"
                Command="{Binding DeleteManufacturerCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#EF4444"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Hersteller löschen"/>
        <Button Content="↻"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Hersteller wird geladen..." 
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Manufacturer Details Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24">
          
          <!-- Basic Manufacturer Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="40" RowSpacing="12">
              
              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                         Text="🏭 Grundlegende Informationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>
              
              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Hersteller-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.Name}" TextWrapping="Wrap"/>
                </StackPanel>
              </StackPanel>
              
              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Status:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="Aktiv" IsVisible="{Binding Manufacturer.Name, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                  <TextBlock Text="Unbekannt" IsVisible="{Binding Manufacturer.Name, Converter={x:Static StringConverters.IsNullOrEmpty}}" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Address Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="40" RowSpacing="12">
              
              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                         Text="📍 Adressinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>
              
              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Straße:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.Street}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Stadt:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.City}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="PLZ:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.ZipCode}"/>
                </StackPanel>
              </StackPanel>
              
              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Bundesland:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.State}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Land:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Manufacturer.Country}" TextWrapping="Wrap"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Contact Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
              
              <!-- Contact Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="📞 Kontaktinformationen" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Manufacturer.Phone, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Telefon:" FontWeight="SemiBold" Width="120"/>
                    <TextBlock Text="{Binding Manufacturer.Phone}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Manufacturer.Email, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="E-Mail:" FontWeight="SemiBold" Width="120"/>
                    <Button Content="{Binding Manufacturer.Email}" 
                            Command="{Binding OpenEmailCommand}"
                            CommandParameter="{Binding Manufacturer.Email}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                            Padding="0"
                            HorizontalAlignment="Left"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Manufacturer.Website, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Website:" FontWeight="SemiBold" Width="120"/>
                    <Button Content="{Binding Manufacturer.Website}" 
                            Command="{Binding OpenWebsiteCommand}"
                            CommandParameter="{Binding Manufacturer.Website}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                            Padding="0"
                            HorizontalAlignment="Left"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
              
              <!-- Logo/Branding -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="🎨 Branding" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                        CornerRadius="6"
                        Padding="12"
                        MinHeight="120">
                  <StackPanel VerticalAlignment="Center">
                    <!-- Logo Display Area -->
                    <Border CornerRadius="6" 
                            Background="White"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            Width="100"
                            Height="60"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding Manufacturer.Logo, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                      <Image Source="{Binding Manufacturer.Logo}" 
                             Stretch="Uniform"
                             Margin="4"/>
                    </Border>
                    
                    <!-- Placeholder when no logo -->
                    <StackPanel IsVisible="{Binding Manufacturer.Logo, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                      <TextBlock Text="🏭" 
                                 FontSize="32" 
                                 HorizontalAlignment="Center"
                                 Opacity="0.5"/>
                      <TextBlock Text="Kein Logo verfügbar" 
                                 FontSize="12"
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                  </StackPanel>
                </Border>
              </StackPanel>
              
            </Grid>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
  </Grid>

</UserControl>