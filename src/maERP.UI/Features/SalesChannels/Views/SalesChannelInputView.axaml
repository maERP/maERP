<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enums="clr-namespace:maERP.Domain.Enums;assembly=maERP.Domain"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.SalesChannels.Views.SalesChannelInputView">

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Vertriebskanal bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="âŒ"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"                FontWeight="Medium"                MinWidth="36"                HorizontalContentAlignment="Center"                VerticalContentAlignment="Center"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="Abbrechen"/>
        <Button Content="ðŸ’¾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding !IsSaving}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"                FontWeight="Medium"                MinWidth="36"                HorizontalContentAlignment="Center"                VerticalContentAlignment="Center"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                ToolTip.Tip="Speichern"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Vertriebskanal wird geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>
      
      <!-- Form Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Margin="24,24,24,48">
        <StackPanel Spacing="24">
          
          <!-- Basic Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              
              <!-- Section Title -->
              <TextBlock Text="ðŸ”— Grundinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <!-- Form Fields Grid -->
              <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="20" RowSpacing="16">
                
                <!-- First Row: Name, Type -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Name *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Name}" 
                           Watermark="Name des Vertriebskanals eingeben..."/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Typ *" FontWeight="SemiBold"/>
                  <ComboBox ItemsSource="{Binding AvailableSalesChannelTypes}"
                            SelectedItem="{Binding SalesChannelType}"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
                
                <!-- Second Row: Warehouses -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Lager" FontWeight="SemiBold"/>
                  
                  <!-- Selected Warehouses Display -->
                  <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"
                          CornerRadius="4"
                          Padding="8"
                          MinHeight="40">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                      <ItemsControl ItemsSource="{Binding SelectedWarehouses}">
                        <ItemsControl.ItemsPanel>
                          <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                          </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                          <DataTemplate>
                            <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    Margin="4,2">
                              <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                                           FontSize="12"/>
                                <Button Content="Ã—"
                                        Command="{Binding $parent[UserControl].DataContext.RemoveWarehouseCommand}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Padding="4,0"
                                        Width="20"
                                        Height="20"/>
                              </StackPanel>
                            </Border>
                          </DataTemplate>
                        </ItemsControl.ItemTemplate>
                      </ItemsControl>
                    </ScrollViewer>
                  </Border>
                  
                  <!-- Warehouse Selection ComboBox -->
                  <Grid ColumnDefinitions="*,Auto">
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding AvailableWarehouses}"
                              SelectedItem="{Binding SelectedWarehouse}"
                              DisplayMemberBinding="{Binding Name}"
                              HorizontalAlignment="Stretch"/>
                    <Button Grid.Column="1"
                            Content="+"
                            Command="{Binding OnWarehouseSelectionChangedCommand}"
                            CommandParameter="{Binding SelectedWarehouse}"
                            Margin="8,0,0,0"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Stretch"/>
                  </Grid>
                </StackPanel>
                
              </Grid>
              
            </StackPanel>
          </Border>
          
          <!-- Connection Settings Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              
              <!-- Section Title -->
              <TextBlock Text="ðŸŒ Verbindungseinstellungen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <TextBlock Text="Diese Einstellungen werden fÃ¼r die Verbindung mit externen Systemen benÃ¶tigt." 
                         FontSize="14" 
                         Opacity="0.7"/>
              
              <!-- Connection Fields Grid -->
              <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto" RowSpacing="16">
                
                <!-- URL -->
                <StackPanel Grid.Row="0" Spacing="4">
                  <TextBlock Text="ðŸ”— URL" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Url}" 
                           Watermark="https://example.com/api"
                           AcceptsReturn="False"/>
                </StackPanel>
                
                <!-- Username and Password -->
                <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="20">
                  <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="ðŸ‘¤ Benutzername" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Username}" 
                             Watermark="Benutzername eingeben..."/>
                  </StackPanel>
                  
                  <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="ðŸ” Passwort" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Password}" 
                             Watermark="Passwort eingeben..."
                             PasswordChar="*"/>
                  </StackPanel>
                </Grid>
                
              </Grid>
              
            </StackPanel>
          </Border>
          
          <!-- Import/Export Capabilities Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              
              <!-- Section Title -->
              <TextBlock Text="âš¡ Import/Export-Funktionen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <TextBlock Text="WÃ¤hlen Sie aus, welche Daten zwischen dem ERP-System und dem Vertriebskanal synchronisiert werden sollen." 
                         FontSize="14" 
                         Opacity="0.7"/>
              
              <!-- Capabilities Grid -->
              <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
                
                <!-- Import Capabilities -->
                <StackPanel Grid.Column="0" Spacing="16">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ“¥ Import-Funktionen" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <Border Background="#E8F5E8" 
                            CornerRadius="8" 
                            Padding="4,2">
                      <TextBlock Text="Von extern ins ERP" 
                                 FontSize="10" 
                                 FontWeight="SemiBold"
                                 Foreground="#2E7D32"/>
                    </Border>
                  </StackPanel>
                  
                  <StackPanel Spacing="12">
                    <CheckBox Content="ðŸ“¦ Produkte importieren" 
                              IsChecked="{Binding ImportProducts}"/>
                    <CheckBox Content="ðŸ‘¥ Kunden importieren" 
                              IsChecked="{Binding ImportCustomers}"/>
                    <CheckBox Content="ðŸ›’ Bestellungen importieren" 
                              IsChecked="{Binding ImportOrders}"/>
                  </StackPanel>
                </StackPanel>
                
                <!-- Export Capabilities -->
                <StackPanel Grid.Column="1" Spacing="16">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ“¤ Export-Funktionen" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <Border Background="#FFF3E0" 
                            CornerRadius="8" 
                            Padding="4,2">
                      <TextBlock Text="Vom ERP nach extern" 
                                 FontSize="10" 
                                 FontWeight="SemiBold"
                                 Foreground="#F57C00"/>
                    </Border>
                  </StackPanel>
                  
                  <StackPanel Spacing="12">
                    <CheckBox Content="ðŸ“¦ Produkte exportieren" 
                              IsChecked="{Binding ExportProducts}"/>
                    <CheckBox Content="ðŸ‘¥ Kunden exportieren" 
                              IsChecked="{Binding ExportCustomers}"/>
                    <CheckBox Content="ðŸ›’ Bestellungen exportieren" 
                              IsChecked="{Binding ExportOrders}"/>
                  </StackPanel>
                </StackPanel>
                
              </Grid>
              
            </StackPanel>
          </Border>
          
          <!-- Help Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="12">
              
              <!-- Section Title -->
              <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="ðŸ’¡ Hinweise" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              </StackPanel>
              
              <StackPanel Spacing="8">
                <TextBlock Text="â€¢ Name: Eindeutiger Name zur Identifizierung des Vertriebskanals" 
                           FontSize="12" 
                           Opacity="0.7"/>
                <TextBlock Text="â€¢ Typ: Bestimmt die verfÃ¼gbaren IntegrationsmÃ¶glichkeiten" 
                           FontSize="12" 
                           Opacity="0.7"/>
                <TextBlock Text="â€¢ Lager: Die Lager, die fÃ¼r Bestandsabfragen und -updates verwendet werden" 
                           FontSize="12" 
                           Opacity="0.7"/>
                <TextBlock Text="â€¢ Verbindungseinstellungen: Werden nur bei externen Systemen benÃ¶tigt (nicht bei Point of Sale)" 
                           FontSize="12" 
                           Opacity="0.7"/>
                <TextBlock Text="â€¢ Import/Export: Bestimmt, welche Daten automatisch synchronisiert werden" 
                           FontSize="12" 
                           Opacity="0.7"/>
              </StackPanel>
              
            </StackPanel>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Footer with action buttons -->
    <Border Grid.Row="2" 
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0">
      
      <Grid ColumnDefinitions="*,Auto">
        
        <!-- Save Status -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    Spacing="8" 
                    VerticalAlignment="Center">
          <ProgressBar IsIndeterminate="{Binding IsSaving}" 
                       IsVisible="{Binding IsSaving}"
                       Width="20" Height="20"/>
          <TextBlock Text="Status: Bereit" 
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     IsVisible="{Binding !IsSaving}"/>
          <TextBlock Text="Status: Wird gespeichert..." 
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     IsVisible="{Binding IsSaving}"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8">
          
          <Button Content="âŒ Abbrechen" 
                  Command="{Binding CancelCommand}"
                  Padding="12,8"
                  CornerRadius="6"
                  Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>
          
          <Button Content="ðŸ’¾ Speichern" 
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding !IsSaving}"
                  Padding="12,8"
                  CornerRadius="6"
                  Background="{DynamicResource AccentFillColorDefaultBrush}"
                  Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
          
        </StackPanel>
        
      </Grid>
      
    </Border>
    
  </Grid>

</UserControl>