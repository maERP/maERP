<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.SalesChannels.Views.SalesChannelDetailView">

  <Grid RowDefinitions="Auto,*">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding SalesChannel.Name}" 
                     FontSize="28" 
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource ContentViewHeadingBrush}"/>
          <Border Background="#E0F2FE" 
                  CornerRadius="6" 
                  Padding="8,4">
            <TextBlock Text="{Binding SalesChannelTypeDisplay}" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="{Binding SalesChannelTypeIcon}" FontSize="14"/>
          <TextBlock Text="{Binding SalesChannelTypeDisplay}" 
                     FontSize="14" 
                     Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
        </StackPanel>
      </StackPanel>
      
      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="âœï¸"
                Command="{Binding EditSalesChannelCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Vertriebskanal bearbeiten"/>
        <Button Content="â†»"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Aktualisieren"/>
        <Button Content="â†"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="ZurÃ¼ck zur Liste"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Vertriebskanal wird geladen..." 
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Sales Channel Details Content -->
      <StackPanel IsVisible="{Binding ShouldShowContent}" Margin="24,24,24,48" Spacing="24">
          
          <!-- Basic Sales Channel Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="40" RowSpacing="12">
              
              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                         Text="ðŸ”— Grundinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>
              
              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Kanal-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding SalesChannel.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding SalesChannel.Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Typ:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding SalesChannelTypeDisplay}"/>
                </StackPanel>
              </StackPanel>
              
              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Warehouse-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding SalesChannel.WarehouseId}"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Connection Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasConnectionInfo}">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
              
              <!-- Connection Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="ðŸŒ Verbindungsdetails" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding HasUrl}">
                    <TextBlock Text="ðŸ”— URL:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.Url}" TextWrapping="Wrap"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding HasUsername}">
                    <TextBlock Text="ðŸ‘¤ Benutzername:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.Username}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding HasPassword}">
                    <TextBlock Text="ðŸ” Passwort:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding PasswordDisplay}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
              
              <!-- Connection Status -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="ðŸ“Š Verbindungsstatus" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <Border Background="{DynamicResource SubtleFillColorTransparentBrush}" 
                          CornerRadius="6" 
                          Padding="8,4"
                          IsVisible="{Binding HasConnectionInfo}">
                    <TextBlock Text="âœ… Verbindungsdaten vorhanden" 
                               FontSize="12"
                               Foreground="#2E7D32"/>
                  </Border>
                  <Button Content="ðŸ”„ Verbindung testen" 
                          HorizontalAlignment="Left"
                          Padding="12,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Import/Export Capabilities Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasAnyCapabilities}">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
              
              <!-- Import Capabilities -->
              <StackPanel Grid.Column="0" Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="ðŸ“¥ Import-Funktionen" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                  <Border Background="{DynamicResource SubtleFillColorTransparentBrush}" 
                          CornerRadius="6" 
                          Padding="4,2"
                          IsVisible="{Binding HasImportCapabilities}">
                    <TextBlock Text="Aktiv" 
                               FontSize="10" 
                               FontWeight="SemiBold"
                               Foreground="#2E7D32"/>
                  </Border>
                </StackPanel>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¦ Produkte:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.ImportProducts}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ‘¥ Kunden:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.ImportCustomers}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ›’ Bestellungen:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.ImportOrders}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
              
              <!-- Export Capabilities -->
              <StackPanel Grid.Column="1" Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="ðŸ“¤ Export-Funktionen" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                  <Border Background="{DynamicResource SubtleFillColorTransparentBrush}" 
                          CornerRadius="6" 
                          Padding="4,2"
                          IsVisible="{Binding HasExportCapabilities}">
                    <TextBlock Text="Aktiv" 
                               FontSize="10" 
                               FontWeight="SemiBold"
                               Foreground="#F57C00"/>
                  </Border>
                </StackPanel>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¦ Produkte:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.ExportProducts}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ‘¥ Kunden:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.ExportCustomers}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ›’ Bestellungen:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding SalesChannel.ExportOrders}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Synchronization Actions Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasAnyCapabilities}">
            <StackPanel Spacing="16">
              <TextBlock Text="âš¡ Synchronisation" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                
                <!-- Import Actions -->
                <StackPanel Grid.Column="0" Spacing="8" IsVisible="{Binding HasImportCapabilities}">
                  <TextBlock Text="ðŸ“¥ Import starten" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                  <Button Content="ðŸ“¦ Produkte importieren" 
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding SalesChannel.ImportProducts}"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                  <Button Content="ðŸ‘¥ Kunden importieren" 
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding SalesChannel.ImportCustomers}"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                  <Button Content="ðŸ›’ Bestellungen importieren" 
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding SalesChannel.ImportOrders}"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                </StackPanel>
                
                <!-- Export Actions -->
                <StackPanel Grid.Column="1" Spacing="8" IsVisible="{Binding HasExportCapabilities}">
                  <TextBlock Text="ðŸ“¤ Export starten" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                  <Button Content="ðŸ“¦ Produkte exportieren" 
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding SalesChannel.ExportProducts}"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                  <Button Content="ðŸ‘¥ Kunden exportieren" 
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding SalesChannel.ExportCustomers}"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                  <Button Content="ðŸ›’ Bestellungen exportieren" 
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding SalesChannel.ExportOrders}"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                </StackPanel>
                
                <!-- Full Sync Actions -->
                <StackPanel Grid.Column="2" Spacing="8">
                  <TextBlock Text="ðŸ”„ Vollsynchronisation" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                  <Button Content="ðŸ”„ Alle Daten synchronisieren" 
                          HorizontalAlignment="Stretch"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource AccentFillColorDefaultBrush}"
                          Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                  <Button Content="ðŸ“Š Sync-Status anzeigen" 
                          HorizontalAlignment="Stretch"
                          Padding="8,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1"/>
                </StackPanel>
                
              </Grid>
            </StackPanel>
          </Border>
          
      </StackPanel>
      
    </Grid>
    
  </Grid>

</UserControl>