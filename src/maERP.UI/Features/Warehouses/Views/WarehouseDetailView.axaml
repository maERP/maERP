<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Warehouses.Views.WarehouseDetailView">

  <Grid RowDefinitions="Auto,*">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding Warehouse.Name}" 
                     FontSize="28" 
                     FontWeight="SemiBold"
                     Foreground="#111827"/>
          <TextBlock Text="{Binding Warehouse.Id, StringFormat=ID #{0}}" 
                     FontSize="18" 
                     FontWeight="Medium"
                     Foreground="#6B7280"
                     VerticalAlignment="Bottom"/>
          <Border Background="#E0F2FE" 
                  CornerRadius="6" 
                  Padding="8,4"
                  IsVisible="{Binding HasProductStocks}">
            <TextBlock Text="Aktiv" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding TotalProducts, StringFormat=Produkte im Lager: \{0\}}" 
                   FontSize="14" 
                   Foreground="#6B7280"/>
      </StackPanel>
      
      <!-- Action buttons -->
      <StackPanel Grid.Column="1" 
                  Orientation="Horizontal" 
                  Spacing="8" 
                  VerticalAlignment="Center">
        <Button Content="âœï¸" 
                Command="{Binding EditWarehouseCommand}"
                Padding="10"
                CornerRadius="6"
                FontSize="16"
                Background="#3B82F6"
                Foreground="White"
                BorderThickness="0"
                ToolTip.Tip="Lager bearbeiten"/>
        <Button Content="ðŸ—‘ï¸" 
                Command="{Binding DeleteWarehouseCommand}"
                Padding="10"
                CornerRadius="6"
                FontSize="16"
                Background="#EF4444"
                Foreground="White"
                BorderThickness="0"
                ToolTip.Tip="Lager lÃ¶schen"/>
        <Button Content="ðŸ”„" 
                Command="{Binding RefreshCommand}"
                Padding="10"
                CornerRadius="6"
                FontSize="16"
                Background="#F3F4F6"
                Foreground="#374151"
                BorderThickness="0"
                ToolTip.Tip="Aktualisieren"/>
        <Button Content="â†" 
                Command="{Binding GoBackCommand}"
                Padding="10"
                CornerRadius="6"
                FontSize="16"
                Background="#F3F4F6"
                Foreground="#374151"
                BorderThickness="0"
                ToolTip.Tip="ZurÃ¼ck zur Liste"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Lager wird geladen..." 
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Warehouse Details Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24">
          
          <!-- Basic Warehouse Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="40" RowSpacing="12">
              
              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                         Text="ðŸ­ Lagerinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>
              
              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Lager-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Warehouse.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Warehouse.Name}" TextWrapping="Wrap"/>
                </StackPanel>
              </StackPanel>
              
              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Status:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="Aktiv" IsVisible="{Binding HasProductStocks}"/>
                  <TextBlock Text="Leer" IsVisible="{Binding !HasProductStocks}" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Erstellt am:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="Nicht verfÃ¼gbar" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Quick Actions Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
              
              <!-- Stock Management -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="ðŸ“¦ Lagerverwaltung" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <Button Command="{Binding ManageStockCommand}"
                          HorizontalAlignment="Left"
                          Padding="12,6"
                          CornerRadius="6"
                          Background="{DynamicResource AccentFillColorDefaultBrush}"
                          Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="ðŸ“¦" VerticalAlignment="Center"/>
                      <TextBlock Text="LagerbestÃ¤nde verwalten" VerticalAlignment="Center"/>
                    </StackPanel>
                  </Button>
                  <Button Command="{Binding ViewReportsCommand}"
                          HorizontalAlignment="Left"
                          Padding="12,6"
                          CornerRadius="6"
                          Background="{DynamicResource ControlFillColorDefaultBrush}"
                          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                          BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="ðŸ“Š" VerticalAlignment="Center"/>
                      <TextBlock Text="Lagerberichte anzeigen" VerticalAlignment="Center"/>
                    </StackPanel>
                  </Button>
                </StackPanel>
              </StackPanel>
              
              <!-- Channel Management -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="ðŸŒ Kanalverwaltung" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="6">
                  <Button Command="{Binding ManageSalesChannelsCommand}"
                          HorizontalAlignment="Left"
                          Padding="12,6"
                          CornerRadius="6"
                          Background="{DynamicResource AccentFillColorDefaultBrush}"
                          Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="ðŸŒ" VerticalAlignment="Center"/>
                      <TextBlock Text="VertriebskanÃ¤le verwalten" VerticalAlignment="Center"/>
                    </StackPanel>
                  </Button>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Statistics Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
              
              <!-- Product Statistics -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="ðŸ“ˆ Produktstatistiken" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                        CornerRadius="6"
                        Padding="12">
                  <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="Gesamt Produkte:" FontWeight="SemiBold" Width="140"/>
                      <TextBlock Text="{Binding TotalProducts}" FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="Lagerwert gesamt:" FontWeight="SemiBold" Width="140"/>
                      <TextBlock Text="{Binding TotalStockValue, StringFormat=\{0:C2\}}" FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                  </StackPanel>
                </Border>
              </StackPanel>
              
              <!-- Availability Info -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="â„¹ï¸ VerfÃ¼gbarkeit" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                        CornerRadius="6"
                        Padding="12">
                  <StackPanel Spacing="6">
                    <TextBlock Text="Die detaillierte Lagerstatistik wird in einer zukÃ¼nftigen Version verfÃ¼gbar sein." 
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="Hier kÃ¶nnen Sie dann LagerbestÃ¤nde, Bewegungen und weitere Kennzahlen einsehen." 
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                  </StackPanel>
                </Border>
              </StackPanel>
              
            </Grid>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
  </Grid>

</UserControl>