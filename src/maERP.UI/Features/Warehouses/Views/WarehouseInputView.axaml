<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Warehouses.Views.WarehouseInputView">

  <UserControl.Styles>
    <!-- Style for TextBox with validation errors -->
    <Style Selector="TextBox.hasError">
      <Setter Property="BorderBrush" Value="#D32F2F"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style Selector="TextBox.hasError:focus">
      <Setter Property="BorderBrush" Value="#D32F2F"/>
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Lager bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="❌"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"                FontWeight="Medium"                MinWidth="36"                HorizontalContentAlignment="Center"                VerticalContentAlignment="Center"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="Abbrechen"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding !IsSaving}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"                FontWeight="Medium"                MinWidth="36"                HorizontalContentAlignment="Center"                VerticalContentAlignment="Center"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                ToolTip.Tip="Speichern"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Lager wird geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>
      
      <!-- Form Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Center">
          
          <!-- Basic Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              
              <!-- Section Title -->
              <TextBlock Text="🏭 Lager-Informationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <!-- Form Fields -->
              <StackPanel Spacing="16">
                
                <!-- Warehouse ID (read-only for editing) -->
                <StackPanel Spacing="4" IsVisible="{Binding IsEditMode}">
                  <TextBlock Text="Lager-ID" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Id}" 
                           IsReadOnly="True"
                           Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
                </StackPanel>
                
                <!-- Warehouse Name -->
                <StackPanel Spacing="4">
                  <TextBlock Text="Name *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Name}"
                           Watermark="Lagername eingeben..."
                           Classes.hasError="{Binding NameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                  <TextBlock Text="{Binding NameError}"
                             IsVisible="{Binding NameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                             Foreground="#D32F2F"
                             FontSize="12"
                             TextWrapping="Wrap"/>
                </StackPanel>

              </StackPanel>
              
            </StackPanel>
          </Border>
          
          <!-- Additional Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              
              <!-- Section Title -->
              <TextBlock Text="ℹ️ Zusätzliche Informationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <!-- Information Text -->
              <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                      CornerRadius="4"
                      Padding="12">
                <StackPanel Spacing="8">
                  <TextBlock Text="Weitere Lager-Eigenschaften" 
                             FontWeight="SemiBold"/>
                  <TextBlock Text="Erweiterte Konfigurationsoptionen wie Standort, Kapazität und Zuordnungen zu Vertriebskanälen werden in zukünftigen Versionen verfügbar sein." 
                             TextWrapping="Wrap"
                             Opacity="0.7"/>
                  <TextBlock Text="Nach dem Speichern können Sie das Lager über die Detail-Ansicht verwalten." 
                             TextWrapping="Wrap"
                             FontSize="12"
                             Opacity="0.6"/>
                </StackPanel>
              </Border>
              
            </StackPanel>
          </Border>
          
          <!-- Quick Actions Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding IsEditMode}">
            <StackPanel Spacing="16">
              
              <!-- Section Title -->
              <TextBlock Text="⚡ Schnellaktionen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <!-- Action Buttons -->
              <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                
                <!-- Stock Management -->
                <StackPanel Grid.Column="0" Spacing="8">
                  <TextBlock Text="📦 Bestandsverwaltung" 
                             FontWeight="SemiBold"/>
                  <Button Content="Bestände verwalten"
                          Command="{Binding ManageStockCommand}"
                          HorizontalAlignment="Stretch"
                          Padding="12,8"
                          ToolTip.Tip="Lagerbestände nach dem Speichern verwalten"/>
                </StackPanel>
                
                <!-- Sales Channel Management -->
                <StackPanel Grid.Column="1" Spacing="8">
                  <TextBlock Text="🌐 Vertriebskanäle" 
                             FontWeight="SemiBold"/>
                  <Button Content="Kanäle zuordnen"
                          Command="{Binding ManageSalesChannelsCommand}"
                          HorizontalAlignment="Stretch"
                          Padding="12,8"
                          ToolTip.Tip="Vertriebskanäle nach dem Speichern zuordnen"/>
                </StackPanel>
                
              </Grid>
              
            </StackPanel>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Footer with action buttons -->
    <Border Grid.Row="2" 
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0">
      
      <Grid ColumnDefinitions="*,Auto">
        
        <!-- Save Status -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    Spacing="8" 
                    VerticalAlignment="Center">
          <ProgressBar IsIndeterminate="{Binding IsSaving}" 
                       IsVisible="{Binding IsSaving}"
                       Width="20" Height="20"/>
          <TextBlock Text="Status: Bereit" 
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     IsVisible="{Binding !IsSaving}"/>
          <TextBlock Text="Status: Wird gespeichert..." 
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     IsVisible="{Binding IsSaving}"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8">
          
          <Button Content="❌ Abbrechen" 
                  Command="{Binding CancelCommand}"
                  Padding="12,8"
                  CornerRadius="6"
                  Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>
          
          <Button Content="💾 Speichern" 
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding !IsSaving}"
                  Padding="12,8"
                  CornerRadius="6"
                  Background="{DynamicResource AccentFillColorDefaultBrush}"
                  Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
          
        </StackPanel>
        
      </Grid>
      
    </Border>
    
  </Grid>

</UserControl>