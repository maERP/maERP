<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.AI.Views.AiModelDetailView">

  <Grid RowDefinitions="Auto,*">
    
    <!-- Header with AI model info and actions -->
    <Border Grid.Row="0" 
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="32,20"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            CornerRadius="8,8,0,0"
            Margin="0,0,0,8">
      
      <Grid ColumnDefinitions="*,Auto">
        
        <!-- Title and basic info -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,8">
            <TextBlock Text="{Binding AiModel.Name, StringFormat=ðŸ¤– {0}}" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Border Background="#E8F5E8" 
                    CornerRadius="12" 
                    Padding="8,4">
              <TextBlock Text="{Binding AiModelTypeDisplayName}" 
                         FontSize="12" 
                         FontWeight="SemiBold"
                         Foreground="#2E7D32"/>
            </Border>
          </StackPanel>
          <TextBlock Text="{Binding SecurityNote}" 
                     FontSize="14" 
                     Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        
        <!-- Action buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8" 
                    VerticalAlignment="Center">
          <Button Content="âœï¸ Bearbeiten" 
                  Command="{Binding EditAiModelCommand}"
                  Padding="16,10"
                  CornerRadius="6"
                  Background="{DynamicResource AccentFillColorDefaultBrush}"
                  Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
          <Button Content="ðŸ”„ Aktualisieren" 
                  Command="{Binding RefreshCommand}"
                  Padding="12,10"
                  CornerRadius="6"
                  Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  ToolTip.Tip="Aktualisieren"/>
          <Button Content="â† ZurÃ¼ck" 
                  Command="{Binding GoBackCommand}"
                  Padding="12,10"
                  CornerRadius="6"
                  Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>
        </StackPanel>
        
      </Grid>
      
    </Border>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="AI-Modell wird geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- AI Model Details Content -->
      <StackPanel IsVisible="{Binding ShouldShowContent}" Margin="24,24,24,48" Spacing="24">
          
          <!-- Basic AI Model Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="40" RowSpacing="12">
              
              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                         Text="ðŸ¤– Grundinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>
              
              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Modell-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModel.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModel.Name}"/>
                </StackPanel>
              </StackPanel>
              
              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Typ:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModelTypeDisplayName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Kategorie:" FontWeight="SemiBold" Width="140"/>
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="Lokal" IsVisible="{Binding IsLocalModel}"/>
                    <TextBlock Text="Extern" IsVisible="{Binding IsExternalModel}"/>
                  </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Context LÃ¤nge:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiModel.NCtx}"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- API Configuration Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <StackPanel Spacing="16">
              <TextBlock Text="ðŸ” API-Konfiguration" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
                
                <!-- Left Column -->
                <StackPanel Grid.Column="0" Spacing="12">
                  
                  <!-- API Username -->
                  <StackPanel IsVisible="{Binding HasApiUsername}" Spacing="4">
                    <TextBlock Text="API-Benutzername:" FontWeight="SemiBold"/>
                    <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                            CornerRadius="6"
                            Padding="12">
                      <TextBlock Text="{Binding AiModel.ApiUsername}" 
                                 FontFamily="Consolas,monospace"/>
                    </Border>
                  </StackPanel>
                  
                  <!-- API Password -->
                  <StackPanel IsVisible="{Binding HasApiPassword}" Spacing="4">
                    <TextBlock Text="API-Passwort:" FontWeight="SemiBold"/>
                    <Border Background="#FFEBEE"
                            BorderBrush="#EF5350"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8">
                      <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ”’" VerticalAlignment="Center"/>
                        <TextBlock Text="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" 
                                   FontFamily="Consolas,monospace"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="(verborgen)" 
                                   FontSize="10"
                                   Opacity="0.7"
                                   VerticalAlignment="Center"/>
                      </StackPanel>
                    </Border>
                  </StackPanel>
                  
                </StackPanel>
                
                <!-- Right Column -->
                <StackPanel Grid.Column="1" Spacing="12">
                  
                  <!-- API Key -->
                  <StackPanel IsVisible="{Binding HasApiKey}" Spacing="4">
                    <TextBlock Text="API-SchlÃ¼ssel:" FontWeight="SemiBold"/>
                    <Border Background="#FFEBEE"
                            BorderBrush="#EF5350"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8">
                      <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ”‘" VerticalAlignment="Center"/>
                        <TextBlock Text="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" 
                                   FontFamily="Consolas,monospace"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="(verborgen)" 
                                   FontSize="10"
                                   Opacity="0.7"
                                   VerticalAlignment="Center"/>
                      </StackPanel>
                    </Border>
                  </StackPanel>
                  
                  <!-- Security note for credentials -->
                  <Border Background="#FFF3E0"
                          BorderBrush="#FF9800"
                          BorderThickness="1"
                          CornerRadius="4"
                          Padding="8"
                          IsVisible="{Binding IsExternalModel}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="âš ï¸" VerticalAlignment="Center"/>
                      <TextBlock Text="Sensible Daten werden aus SicherheitsgrÃ¼nden verborgen" 
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                  </Border>
                  
                </StackPanel>
                
              </Grid>
              
            </StackPanel>
          </Border>
          
          <!-- Security Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <StackPanel Spacing="12">
              <TextBlock Text="ðŸ›¡ï¸ Sicherheitshinweise" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <!-- Local Model Info -->
              <Border Background="#E8F5E8"
                      BorderBrush="#4CAF50"
                      BorderThickness="1"
                      CornerRadius="4"
                      Padding="12"
                      IsVisible="{Binding IsLocalModel}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                  <TextBlock Text="âœ…" VerticalAlignment="Center" FontSize="16"/>
                  <StackPanel>
                    <TextBlock Text="Lokales Modell" FontWeight="SemiBold"/>
                    <TextBlock Text="Dieses Modell lÃ¤uft lokal und sendet keine Daten an externe Dienste."
                               TextWrapping="Wrap"
                               Opacity="0.8"/>
                  </StackPanel>
                </StackPanel>
              </Border>
              
              <!-- External Model Info -->
              <Border Background="#FFF3E0"
                      BorderBrush="#FF9800"
                      BorderThickness="1"
                      CornerRadius="4"
                      Padding="12"
                      IsVisible="{Binding IsExternalModel}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                  <TextBlock Text="âš ï¸" VerticalAlignment="Center" FontSize="16"/>
                  <StackPanel>
                    <TextBlock Text="Externes Modell" FontWeight="SemiBold"/>
                    <TextBlock Text="Dieses Modell verwendet externe APIs. ÃœberprÃ¼fen Sie die Datenschutzbestimmungen des Anbieters."
