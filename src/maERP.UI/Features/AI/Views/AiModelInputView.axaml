<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enums="clr-namespace:maERP.Domain.Enums;assembly=maERP.Domain"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.AI.Views.AiModelInputView">

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="AI-Modell bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="ðŸ”„"
                Command="{Binding ClearFormCommand}"
                IsVisible="{Binding !IsEditMode}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="Formular leeren"/>
        <Button Content="â†"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="ZurÃ¼ck"/>
        <Button Content="ðŸ’¾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding !IsSaving}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"                FontWeight="Medium"                MinWidth="36"                HorizontalContentAlignment="Center"                VerticalContentAlignment="Center"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                ToolTip.Tip="Speichern"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="AI-Modell wird geladen..." 
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>
      
      <!-- Form Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24" MaxWidth="800">
          
          <!-- Basic Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              <TextBlock Text="ðŸ¤– Grundinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto" RowSpacing="16">
                
                <!-- Name Field -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Name *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Name}" 
                           Watermark="Name des AI-Modells eingeben..."
                           IsEnabled="{Binding !IsSaving}"/>
                </StackPanel>
                
                <!-- AI Model Type Field -->
                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Modell-Typ *" FontWeight="SemiBold"/>
                  <ComboBox SelectedItem="{Binding AiModelType}"
                            IsEnabled="{Binding !IsSaving}">
                    <ComboBox.Items>
                      <enums:AiModelType>None</enums:AiModelType>
                      <enums:AiModelType>Ollama</enums:AiModelType>
                      <enums:AiModelType>VLlm</enums:AiModelType>
                      <enums:AiModelType>LmStudio</enums:AiModelType>
                      <enums:AiModelType>ChatGpt4O</enums:AiModelType>
                      <enums:AiModelType>Claude35</enums:AiModelType>
                    </ComboBox.Items>
                  </ComboBox>
                </StackPanel>
                
                <!-- Context Length Field -->
                <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Context LÃ¤nge" FontWeight="SemiBold"/>
                  <NumericUpDown Value="{Binding NCtx}" 
                                 Minimum="0"
                                 Maximum="4294967295"
                                 Watermark="0"
                                 IsEnabled="{Binding !IsSaving}"/>
                </StackPanel>
                
              </Grid>
            </StackPanel>
          </Border>
          
          <!-- API Configuration Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">
              <TextBlock Text="ðŸ” API-Konfiguration" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto,Auto" RowSpacing="16">
                
                <!-- API Username Field -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="API-Benutzername" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding ApiUsername}" 
                           Watermark="Optional: API-Benutzername"
                           IsEnabled="{Binding !IsSaving}"/>
                </StackPanel>
                
                <!-- API Password Field -->
                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="API-Passwort" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding ApiPassword}" 
                           Watermark="Optional: API-Passwort"
                           PasswordChar="â€¢"
                           IsEnabled="{Binding !IsSaving}"/>
                </StackPanel>
                
                <!-- API Key Field -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="API-SchlÃ¼ssel" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding ApiKey}" 
                           Watermark="Optional: API-SchlÃ¼ssel fÃ¼r externe Services"
                           PasswordChar="â€¢"
                           IsEnabled="{Binding !IsSaving}"/>
                </StackPanel>
                
              </Grid>
              
              <!-- Security Notice -->
              <Border Background="#FFF3E0"
                      BorderBrush="#FF9800"
                      BorderThickness="1"
                      CornerRadius="8"
                      Padding="20">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="âš ï¸" VerticalAlignment="Center"/>
                  <TextBlock Text="API-Credentials werden sicher gespeichert und verschlÃ¼sselt Ã¼bertragen." 
                             FontSize="11"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"/>
                </StackPanel>
              </Border>
              
            </StackPanel>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Status Footer -->
    <Border Grid.Row="2" 
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0"
            IsVisible="{Binding IsSaving}">
      
      <StackPanel Orientation="Horizontal" 
                  Spacing="12"
                  HorizontalAlignment="Center">
        <ProgressBar IsIndeterminate="True" Width="150" Height="4"/>
        <TextBlock Text="AI-Modell wird gespeichert..." 
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
    </Border>
    
  </Grid>

</UserControl>