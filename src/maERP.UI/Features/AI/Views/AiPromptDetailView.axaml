<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.AI.Views.AiPromptDetailView">

  <Grid RowDefinitions="Auto,*">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding AiPrompt.Identifier}" 
                     FontSize="28" 
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource ContentViewHeadingBrush}"/>
          <TextBlock Text="{Binding AiPrompt.Id, StringFormat=ID #{0}}" 
                     FontSize="18" 
                     FontWeight="Medium"
                     Foreground="{DynamicResource ContentViewSubheadingBrush}"
                     VerticalAlignment="Bottom"/>
          <Border Background="#E0F2FE" 
                  CornerRadius="6" 
                  Padding="8,4">
            <TextBlock Text="AI-Prompt" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#0369A1"/>
          </Border>
        </StackPanel>
        <TextBlock Text="{Binding AiPrompt.AiModelId, StringFormat=AI-Modell ID: \{0\}}" 
                   FontSize="14" 
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>
      
      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="✏️"
                Command="{Binding EditAiPromptCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="AI-Prompt bearbeiten"/>
        <Button Content="🗑️"
                Command="{Binding DeleteAiPromptCommand}"
                IsEnabled="{Binding !IsDeleting}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="#EF4444"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="AI-Prompt löschen"/>
        <Button Content="🔄"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Aktualisieren"/>
        <Button Content="←"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Zurück zur Liste"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="AI-Prompt wird geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- AI Prompt Details Content -->
      <StackPanel IsVisible="{Binding ShouldShowContent}" Margin="24,24,24,48" Spacing="24">
          
          <!-- Basic AI Prompt Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="40" RowSpacing="12">
              
              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                         Text="🤖 Grundinformationen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>
              
              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Prompt-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiPrompt.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="AI-Modell ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiPrompt.AiModelId}"/>
                </StackPanel>
              </StackPanel>
              
              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal" IsVisible="{Binding HasIdentifier}">
                  <TextBlock Text="Identifier:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding AiPrompt.Identifier}" TextWrapping="Wrap"/>
                </StackPanel>
              </StackPanel>
              
            </Grid>
          </Border>
          
          <!-- Prompt Text Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24"
                  IsVisible="{Binding HasPromptText}">
            <StackPanel Spacing="12">
              <TextBlock Text="📝 Prompt-Text" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                      CornerRadius="6"
                      Padding="20"
                      MinHeight="200">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                  <TextBlock Text="{Binding AiPrompt.PromptText}" 
                             TextWrapping="Wrap"
                             FontFamily="Consolas,Monaco,Courier New,monospace"
                             FontSize="13"
                             LineHeight="20"/>
                </ScrollViewer>
              </Border>
            </StackPanel>
          </Border>
          
          <!-- Quick Actions Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="24">
            <StackPanel Spacing="16">
              <TextBlock Text="⚡ Schnellaktionen" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="📋 Text kopieren"
                        HorizontalAlignment="Left"
                        Padding="12,8"
                        CornerRadius="6"
                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                        Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                        ToolTip.Tip="Prompt-Text in die Zwischenablage kopieren">
                  <Button.Command>
                    <Binding Path="CopyPromptTextCommand"/>
                  </Button.Command>
                </Button>
                
                <Button Content="🧪 Testen"
                        HorizontalAlignment="Left"
                        Padding="12,8"
                        CornerRadius="6"
                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                        Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                        ToolTip.Tip="Prompt mit AI-Modell testen">
                  <Button.Command>
                    <Binding Path="TestPromptCommand"/>
                  </Button.Command>
                </Button>
              </StackPanel>
              
            </StackPanel>
          </Border>
          
      </StackPanel>
      
    </Grid>
    
  </Grid>

</UserControl>