<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Tenant.Views.TenantDetailView">

  <Grid RowDefinitions="Auto,*">

    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title and info -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
          <TextBlock Text="{Binding DisplayName}"
                     FontSize="28"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource ContentViewHeadingBrush}"/>
          <TextBlock Text="{Binding Tenant.Id, StringFormat=ID #{0}}"
                     FontSize="18"
                     FontWeight="Medium"
                     Foreground="{DynamicResource ContentViewSubheadingBrush}"
                     VerticalAlignment="Bottom"/>
          <Border CornerRadius="6"
                  Padding="8,4">
            <Border.Background>
              <SolidColorBrush Color="{Binding StatusBackgroundColor}"/>
            </Border.Background>
            <TextBlock Text="{Binding StatusText}"
                       FontSize="12"
                       FontWeight="SemiBold">
              <TextBlock.Foreground>
                <SolidColorBrush Color="{Binding StatusColor}"/>
              </TextBlock.Foreground>
            </TextBlock>
          </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="16">
          <TextBlock Text="{Binding Tenant.CompanyName, StringFormat=Firma: \{0\}}"
                     FontSize="14"
                     Foreground="{DynamicResource ContentViewSubheadingBrush}"
                     IsVisible="{Binding HasCompanyName}"/>
          <TextBlock Text="{Binding Tenant.UserCount, StringFormat=Benutzer: \{0\}}"
                     FontSize="14"
                     Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
        </StackPanel>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <Button Content="âœï¸"
                Command="{Binding EditTenantCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Mandant bearbeiten"
                IsVisible="{Binding CanEdit}"/>
        <Button Content="ðŸ”„"
                Command="{Binding RefreshCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Aktualisieren"/>
        <Button Content="â†"
                Command="{Binding GoBackCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="14"
                FontWeight="Medium"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource OutlineVariantBrush}"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="ZurÃ¼ck zur Liste"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Mandant wird geladen..."
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>

      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen"
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>

      <!-- Tenant Details Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24">

          <!-- Basic Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="40" RowSpacing="12">

              <!-- Section Title -->
              <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                         Text="ðŸ“‹ Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         Margin="0,0,0,16"/>

              <!-- Left Column -->
              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Mandanten-ID:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.Id}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Name:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.Name}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" IsVisible="{Binding HasCompanyName}">
                  <TextBlock Text="Firmenname:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.CompanyName}" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Status:" FontWeight="SemiBold" Width="140"/>
                  <Border CornerRadius="4"
                          Padding="6,2">
                    <Border.Background>
                      <SolidColorBrush Color="{Binding StatusBackgroundColor}"/>
                    </Border.Background>
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="12"
                               FontWeight="SemiBold">
                      <TextBlock.Foreground>
                        <SolidColorBrush Color="{Binding StatusColor}"/>
                      </TextBlock.Foreground>
                    </TextBlock>
                  </Border>
                </StackPanel>
              </StackPanel>

              <!-- Right Column -->
              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Benutzeranzahl:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.UserCount}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Erstellt am:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.DateCreated, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="GeÃ¤ndert am:" FontWeight="SemiBold" Width="140"/>
                  <TextBlock Text="{Binding Tenant.DateModified, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>
                </StackPanel>
              </StackPanel>

              <!-- Description (full width) -->
              <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Spacing="8" IsVisible="{Binding HasDescription}">
                <TextBlock Text="Beschreibung:" FontWeight="SemiBold"/>
                <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                        CornerRadius="6"
                        Padding="12">
                  <TextBlock Text="{Binding Tenant.Description}"
                             TextWrapping="Wrap"
                             LineHeight="20"/>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Contact Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasContactInfo}">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">

              <!-- Contact Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="ðŸ“ž Kontaktinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Tenant.ContactEmail, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="E-Mail:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Tenant.ContactEmail}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Tenant.Phone, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Telefon:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Tenant.Phone}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Tenant.Website, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Website:" FontWeight="SemiBold" Width="100"/>
                    <TextBlock Text="{Binding Tenant.Website}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Address Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasAddress}">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">

              <!-- Address Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="ðŸ¢ Adresse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                        CornerRadius="6"
                        Padding="12">
                  <StackPanel Spacing="4">
                    <TextBlock Text="{Binding Tenant.Street}"
                               IsVisible="{Binding Tenant.Street, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    <TextBlock Text="{Binding Tenant.Street2}"
                               IsVisible="{Binding Tenant.Street2, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    <TextBlock IsVisible="{Binding Tenant.PostalCode, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                      <Run Text="{Binding Tenant.PostalCode}"/>
                      <Run Text=" "/>
                      <Run Text="{Binding Tenant.City}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding Tenant.State}"
                               IsVisible="{Binding Tenant.State, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    <TextBlock Text="{Binding Tenant.Country}"
                               FontWeight="SemiBold"
                               IsVisible="{Binding Tenant.Country, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                  </StackPanel>
                </Border>
              </StackPanel>

              <!-- Full Address Summary -->
              <StackPanel Grid.Column="1" Spacing="12">
                <TextBlock Text="ðŸ“ VollstÃ¤ndige Adresse"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Border Background="{DynamicResource SubtleFillColorTransparentBrush}"
                        CornerRadius="6"
                        Padding="12">
                  <TextBlock Text="{Binding FullAddress}"
                             TextWrapping="Wrap"
                             LineHeight="20"/>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Banking Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasBankingInfo}">
            <StackPanel Spacing="12">
              <TextBlock Text="ðŸ¦ Bankinformationen"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
              <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="IBAN:" FontWeight="SemiBold" Width="100"/>
                <TextBlock Text="{Binding Tenant.Iban}" FontFamily="Courier New"/>
              </StackPanel>
            </StackPanel>
          </Border>

          <!-- Administrative Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20"
                  IsVisible="{Binding HasAdminInfo}">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="40">

              <!-- Admin Details -->
              <StackPanel Grid.Column="0" Spacing="12">
                <TextBlock Text="âš™ï¸ Administrative Informationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Spacing="8">
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Tenant.AdminEmail, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Admin E-Mail:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Tenant.AdminEmail}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" IsVisible="{Binding Tenant.Domain, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Domain:" FontWeight="SemiBold" Width="140"/>
                    <TextBlock Text="{Binding Tenant.Domain}"/>
                  </StackPanel>
                </StackPanel>
              </StackPanel>

              <!-- Validity Information -->
              <StackPanel Grid.Column="1" Spacing="12" IsVisible="{Binding Tenant.ValidUntil, Converter={x:Static ObjectConverters.IsNotNull}}">
                <TextBlock Text="ðŸ“… GÃ¼ltigkeitsinformationen"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Border CornerRadius="6"
                        Padding="12">
                  <Border.Background>
                    <SolidColorBrush Color="{Binding StatusBackgroundColor}"/>
                  </Border.Background>
                  <StackPanel Spacing="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="GÃ¼ltig bis:" FontWeight="SemiBold"/>
                      <TextBlock Text="{Binding Tenant.ValidUntil, StringFormat=\{0:dd.MM.yyyy\}}">
                        <TextBlock.Foreground>
                          <SolidColorBrush Color="{Binding ValidUntilColor}"/>
                        </TextBlock.Foreground>
                      </TextBlock>
                    </StackPanel>
                    <TextBlock Text="âš ï¸ Abgelaufen!"
                               FontWeight="SemiBold"
                               Foreground="#EF4444"
                               IsVisible="{Binding IsValidUntilExpired}"/>
                  </StackPanel>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

  </Grid>

</UserControl>
