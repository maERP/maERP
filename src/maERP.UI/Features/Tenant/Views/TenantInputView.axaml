<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Tenant.Views.TenantInputView">

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Mandantendaten verwalten"
                   FontSize="14"
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="❌"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="Abbrechen"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding !IsSaving}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                FontWeight="Medium"
                MinWidth="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource OnPrimaryBrush}"
                BorderThickness="0"
                ToolTip.Tip="Speichern"/>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="1">

      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Mandant wird geladen..."
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>

      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
              Background="#FFF3CD"
              BorderBrush="#D6B656"
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>

      <!-- Form Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Margin="24,24,24,48">
        <StackPanel Spacing="24">

          <!-- Basic Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="📋 Grundinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="20" RowSpacing="16">

                <!-- First Row: Name, IsActive -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Mandantenname *" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Name}"
                           Watermark="Mandantenname eingeben..."/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Status" FontWeight="SemiBold"/>
                  <CheckBox Content="Mandant ist aktiv"
                            IsChecked="{Binding IsActive}"
                            VerticalAlignment="Center"
                            Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Second Row: Description (full width) -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Beschreibung" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Description}"
                           Watermark="Beschreibung eingeben..."
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           MinHeight="60"/>
                </StackPanel>

                <!-- Third Row: CompanyName -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Firmenname" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding CompanyName}"
                           Watermark="Offizieller Firmenname..."/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Contact Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="📞 Kontaktinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="20" RowSpacing="16">

                <!-- First Row: Email, Phone -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                  <TextBlock Text="E-Mail" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding ContactEmail}"
                           Watermark="kontakt@beispiel.de"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Telefon" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Phone}"
                           Watermark="+49 123 456789"/>
                </StackPanel>

                <!-- Second Row: Website -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Website" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Website}"
                           Watermark="https://www.beispiel.de"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Address Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="🏢 Adresse"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields Grid -->
              <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="20" RowSpacing="16">

                <!-- First Row: Street (full width) -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Straße und Hausnummer" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Street}"
                           Watermark="Musterstraße 123"/>
                </StackPanel>

                <!-- Second Row: Street2 (full width, optional) -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                  <TextBlock Text="Adresszusatz" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Street2}"
                           Watermark="Gebäude, Etage, Abteilung... (optional)"/>
                </StackPanel>

                <!-- Third Row: PostalCode, City -->
                <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Postleitzahl" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding PostalCode}"
                           Watermark="12345"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Ort" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding City}"
                           Watermark="Berlin"/>
                </StackPanel>

                <!-- Fourth Row: State, Country -->
                <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                  <TextBlock Text="Bundesland" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding State}"
                           Watermark="Berlin"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                  <TextBlock Text="Land" FontWeight="SemiBold"/>
                  <TextBox Text="{Binding Country}"
                           Watermark="Deutschland"/>
                </StackPanel>

              </Grid>

            </StackPanel>
          </Border>

          <!-- Banking Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="20">
            <StackPanel Spacing="16">

              <!-- Section Title -->
              <TextBlock Text="🏦 Bankinformationen"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

              <!-- Form Fields -->
              <StackPanel Spacing="4">
                <TextBlock Text="IBAN" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Iban}"
                         Watermark="DE89 3704 0044 0532 0130 00"/>
                <TextBlock Text="Format: 2 Buchstaben, 2 Ziffern, bis zu 30 Zeichen"
                           FontSize="11"
                           Opacity="0.6"
                           Margin="0,2,0,0"/>
              </StackPanel>

            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>

    </Grid>

    <!-- Footer with action buttons -->
    <Border Grid.Row="2"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="20,16"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0">

      <Grid ColumnDefinitions="*,Auto">

        <!-- Save Status -->
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
          <ProgressBar IsIndeterminate="{Binding IsSaving}"
                       IsVisible="{Binding IsSaving}"
                       Width="20" Height="20"/>
          <TextBlock Text="Status: Bereit"
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     IsVisible="{Binding !IsSaving}"/>
          <TextBlock Text="Status: Wird gespeichert..."
                     VerticalAlignment="Center"
                     Opacity="0.7"
                     IsVisible="{Binding IsSaving}"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8">

          <Button Content="❌ Abbrechen"
                  Command="{Binding CancelCommand}"
                  Padding="12,8"
                  CornerRadius="6"
                  Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1"/>

          <Button Content="💾 Speichern"
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding !IsSaving}"
                  Padding="12,8"
                  CornerRadius="6"
                  Background="{DynamicResource AccentFillColorDefaultBrush}"
                  Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>

        </StackPanel>

      </Grid>

    </Border>

  </Grid>

</UserControl>
