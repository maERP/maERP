<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enums="clr-namespace:maERP.Domain.Enums;assembly=maERP.Domain"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Customers.Views.CustomerInputView">

    <UserControl.Styles>
        <!-- Style for TextBox with validation errors -->
        <Style Selector="TextBox.hasError">
            <Setter Property="BorderBrush" Value="#D32F2F" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        <Style Selector="TextBox.hasError:focus">
            <Setter Property="BorderBrush" Value="#D32F2F" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Simple Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
            <!-- Title -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding PageTitle}"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ContentViewHeadingBrush}"
                           Margin="0,0,0,8" />
                <TextBlock Text="Kunde bearbeiten oder erstellen"
                           FontSize="14"
                           Foreground="{DynamicResource ContentViewSubheadingBrush}" />
            </StackPanel>

            <!-- Action buttons -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Center">
                <Button Content="âŒ"
                        Command="{Binding CancelCommand}"
                        Padding="12,8"
                        CornerRadius="6"
                        FontSize="16" FontWeight="Medium" MinWidth="36" HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="{DynamicResource SurfaceContainerBrush}"
                        Foreground="{DynamicResource OnSurfaceBrush}"
                        BorderThickness="0"
                        ToolTip.Tip="Abbrechen" />
                <Button Content="ðŸ’¾"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding !IsSaving}"
                        Padding="12,8"
                        CornerRadius="6"
                        FontSize="16" FontWeight="Medium" MinWidth="36" HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#1C1C1E"
                        Foreground="White"
                        BorderThickness="0"
                        ToolTip.Tip="Speichern" />
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1">

            <!-- Loading Indicator -->
            <StackPanel IsVisible="{Binding IsLoading}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200" />
                <TextBlock Text="Kunde wird geladen..."
                           HorizontalAlignment="Center"
                           Opacity="0.7" />
            </StackPanel>

            <!-- Error Message -->
            <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Background="#FFF3CD"
                    BorderBrush="#D6B656"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="20"
                    VerticalAlignment="Top">
                <StackPanel Spacing="8">
                    <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404" />
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404" />
                </StackPanel>
            </Border>

            <!-- Form Content -->
            <ScrollViewer IsVisible="{Binding ShouldShowContent}" Margin="24,24,24,48">
                <StackPanel Spacing="24">

                    <!-- Basic Information Section -->
                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel Spacing="16">

                            <!-- Section Title -->
                            <TextBlock Text="ðŸ‘¤ Grundinformationen"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                            <!-- Form Fields Grid -->
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="20"
                                  RowSpacing="16">

                                <!-- First Row: Firstname, Lastname -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Vorname *" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding Firstname}"
                                             Watermark="Vorname eingeben..."
                                             Classes.hasError="{Binding FirstnameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    <TextBlock Text="{Binding FirstnameError}"
                                               IsVisible="{Binding FirstnameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               Foreground="#D32F2F"
                                               FontSize="12"
                                               TextWrapping="Wrap" />
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Nachname *" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding Lastname}"
                                             Watermark="Nachname eingeben..."
                                             Classes.hasError="{Binding LastnameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    <TextBlock Text="{Binding LastnameError}"
                                               IsVisible="{Binding LastnameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               Foreground="#D32F2F"
                                               FontSize="12"
                                               TextWrapping="Wrap" />
                                </StackPanel>

                                <!-- Second Row: Company, Email -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Firmenname" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding CompanyName}"
                                             Watermark="Firmenname eingeben..." />
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                                    <TextBlock Text="E-Mail" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding Email}"
                                             Watermark="E-Mail eingeben..."
                                             Classes.hasError="{Binding EmailError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    <TextBlock Text="{Binding EmailError}"
                                               IsVisible="{Binding EmailError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               Foreground="#D32F2F"
                                               FontSize="12"
                                               TextWrapping="Wrap" />
                                </StackPanel>

                                <!-- Third Row: Phone, Website -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Telefon" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding Phone}"
                                             Watermark="Telefonnummer eingeben..."
                                             Classes.hasError="{Binding PhoneError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    <TextBlock Text="{Binding PhoneError}"
                                               IsVisible="{Binding PhoneError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               Foreground="#D32F2F"
                                               FontSize="12"
                                               TextWrapping="Wrap" />
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Website" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding Website}"
                                             Watermark="Website eingeben..."
                                             Classes.hasError="{Binding WebsiteError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    <TextBlock Text="{Binding WebsiteError}"
                                               IsVisible="{Binding WebsiteError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               Foreground="#D32F2F"
                                               FontSize="12"
                                               TextWrapping="Wrap" />
                                </StackPanel>

                                <!-- Fourth Row: VAT Number, Status -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                                    <TextBlock Text="USt-ID" FontWeight="SemiBold" />
                                    <TextBox Text="{Binding VatNumber}"
                                             Watermark="USt-ID eingeben..." />
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Status" FontWeight="SemiBold" />
                                    <ComboBox ItemsSource="{Binding AvailableStatuses}"
                                              SelectedItem="{Binding CustomerStatus}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>

                                <!-- Fifth Row: Enrollment Date -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Anmeldedatum" FontWeight="SemiBold" />
                                    <DatePicker SelectedDate="{Binding DateEnrollment}"
                                                HorizontalAlignment="Stretch" />
                                </StackPanel>

                            </Grid>

                        </StackPanel>
                    </Border>

                    <!-- Notes Section -->
                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel Spacing="16">

                            <!-- Section Title -->
                            <TextBlock Text="ðŸ“ Notizen"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                            <!-- Notes Field -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Interne Notizen" FontWeight="SemiBold" />
                                <TextBox Text="{Binding Note}"
                                         Watermark="Notizen zum Kunden..."
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="100" />
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- Address Management Section -->
                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel Spacing="16">

                            <!-- Section Title -->
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="ðŸ  Adressen"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           VerticalAlignment="Center" />
                                <Button Grid.Column="1"
                                        Content="âž• Neue Adresse"
                                        Command="{Binding StartAddingAddressCommand}"
                                        IsVisible="{Binding !IsAddingAddress}"
                                        Padding="12,8"
                                        CornerRadius="6"
                                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                                        Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                            </Grid>

                            <!-- Existing Addresses List -->
                            <StackPanel>
                                <TextBlock
                                    Text="{Binding CustomerAddresses.Count, StringFormat=Anzahl Adressen: \{0\}}"
                                    FontWeight="SemiBold"
                                    Margin="0,0,0,8" />

                                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding CustomerAddresses}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                                    CornerRadius="6"
                                                    Padding="12"
                                                    Margin="0,0,0,8">
                                                    <Grid ColumnDefinitions="*,Auto,Auto,Auto">

                                                        <!-- Address Info -->
                                                        <StackPanel Grid.Column="0" Spacing="4">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <TextBlock FontWeight="SemiBold">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                                            <Binding Path="Firstname" />
                                                                            <Binding Path="Lastname" />
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding CompanyName}"
                                                                           IsVisible="{Binding CompanyName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                                           Opacity="0.7" />
                                                            </StackPanel>
                                                            <TextBlock>
                                                                <TextBlock.Text>
                                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                                        <Binding Path="Street" />
                                                                        <Binding Path="HouseNr" />
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <TextBlock>
                                                                <TextBlock.Text>
                                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                                        <Binding Path="Zip" />
                                                                        <Binding Path="City" />
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <Border Background="#E8F5E8"
                                                                        CornerRadius="4"
                                                                        Padding="4,2"
                                                                        IsVisible="{Binding DefaultDeliveryAddress}">
                                                                    <TextBlock Text="ðŸ“¦ Standard Lieferung"
                                                                               FontSize="10"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="#2E7D32" />
                                                                </Border>
                                                                <Border Background="#F3E5F5"
                                                                        CornerRadius="4"
                                                                        Padding="4,2"
                                                                        IsVisible="{Binding DefaultInvoiceAddress}">
                                                                    <TextBlock Text="ðŸ§¾ Standard Rechnung"
                                                                               FontSize="10"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="#7B1FA2" />
                                                                </Border>
                                                            </StackPanel>
                                                        </StackPanel>

                                                        <!-- Action Buttons -->
                                                        <Button Grid.Column="1"
                                                                Content="âœï¸"
                                                                Command="{Binding $parent[UserControl].DataContext.StartEditingAddressCommand}"
                                                                CommandParameter="{Binding}"
                                                                ToolTip.Tip="Bearbeiten"
                                                                Padding="8"
                                                                Margin="8,0,0,0" />
                                                        <Button Grid.Column="2"
                                                                Content="ðŸ—‘ï¸"
                                                                Command="{Binding $parent[UserControl].DataContext.DeleteAddressCommand}"
                                                                CommandParameter="{Binding}"
                                                                ToolTip.Tip="LÃ¶schen"
                                                                Padding="8"
                                                                Margin="4,0,0,0" />

                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <!-- Address Form (for adding/editing) -->
                            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                    CornerRadius="6"
                                    Padding="16"
                                    IsVisible="{Binding IsAddingAddress}">
                                <StackPanel Spacing="16">

                                    <!-- Form Title -->
                                    <TextBlock Text="Neue Adresse hinzufÃ¼gen"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               IsVisible="{Binding !IsEditingAddress}" />
                                    <TextBlock Text="Adresse bearbeiten"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               IsVisible="{Binding IsEditingAddress}" />

                                    <!-- Address Form Fields -->
                                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                          ColumnSpacing="12" RowSpacing="12">

                                        <!-- Row 1: Name -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                            <TextBlock Text="Vorname" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressFirstname}"
                                                     Watermark="Vorname..." />
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Nachname" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressLastname}"
                                                     Watermark="Nachname..." />
                                        </StackPanel>

                                        <!-- Row 2: Company -->
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="4">
                                            <TextBlock Text="Firmenname" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressCompanyName}"
                                                     Watermark="Firmenname..." />
                                        </StackPanel>

                                        <!-- Row 3: Street -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                                            <TextBlock Text="StraÃŸe" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressStreet}"
                                                     Watermark="StraÃŸe..." />
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Hausnummer" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressHouseNr}"
                                                     Watermark="Hausnummer..." />
                                        </StackPanel>

                                        <!-- Row 4: Location -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4">
                                            <TextBlock Text="PLZ" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressZip}"
                                                     Watermark="PLZ..." />
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Ort" FontWeight="SemiBold" />
                                            <TextBox Text="{Binding NewAddressCity}"
                                                     Watermark="Ort..." />
                                        </StackPanel>

                                        <!-- Row 5: Defaults -->
                                        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Spacing="8">
                                            <CheckBox Content="Standard Lieferadresse"
                                                      IsChecked="{Binding NewAddressDefaultDelivery}" />
                                            <CheckBox Content="Standard Rechnungsadresse"
                                                      IsChecked="{Binding NewAddressDefaultInvoice}" />
                                        </StackPanel>

                                    </Grid>

                                    <!-- Form Buttons -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                HorizontalAlignment="Right">
                                        <Button Content="âŒ Abbrechen"
                                                Command="{Binding CancelAddressEditCommand}"
                                                Padding="12,8"
                                                CornerRadius="6"
                                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                BorderThickness="1" />
                                        <Button Content="ðŸ’¾ Speichern"
                                                Command="{Binding SaveAddressCommand}"
                                                Padding="12,8"
                                                CornerRadius="6"
                                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}" />
                                    </StackPanel>

                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

        </Grid>

        <!-- Footer with action buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Padding="20,16"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                CornerRadius="0,0,8,8"
                Margin="0,8,0,0">

            <Grid ColumnDefinitions="*,Auto">

                <!-- Save Status -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="8"
                            VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="{Binding IsSaving}"
                                 IsVisible="{Binding IsSaving}"
                                 Width="20" Height="20" />
                    <TextBlock Text="Status: Bereit"
                               VerticalAlignment="Center"
                               Opacity="0.7"
                               IsVisible="{Binding !IsSaving}" />
                    <TextBlock Text="Status: Wird gespeichert..."
                               VerticalAlignment="Center"
                               Opacity="0.7"
                               IsVisible="{Binding IsSaving}" />
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8">

                    <Button Content="âŒ Abbrechen"
                            Command="{Binding CancelCommand}"
                            Padding="12,8"
                            CornerRadius="6"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1" />

                    <Button Content="ðŸ’¾ Speichern"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding !IsSaving}"
                            Padding="12,8"
                            CornerRadius="6"
                            Background="#1C1C1E"
                            Foreground="White" />

                </StackPanel>

            </Grid>

        </Border>

    </Grid>

</UserControl>