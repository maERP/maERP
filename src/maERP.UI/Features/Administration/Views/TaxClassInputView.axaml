<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Administration.Views.TaxClassInputView">

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Header -->
    <Border Grid.Row="0" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Padding="24,16"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,0,0,1">
      
      <Grid ColumnDefinitions="*,Auto">
        
        <!-- Title -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
          <TextBlock Text="{Binding PageTitle}" 
                     FontSize="24" 
                     FontWeight="SemiBold"
                     Margin="0,0,0,4"/>
          <TextBlock Text="Steuerklasse bearbeiten oder erstellen" 
                     FontSize="14" 
                     Opacity="0.7"/>
        </StackPanel>
        
        <!-- Action buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8" 
                    VerticalAlignment="Center">
          <Button Content="ðŸ”„ Formular leeren" 
                  Command="{Binding ClearFormCommand}"
                  Padding="12,6"
                  IsVisible="{Binding !IsEditMode}"/>
          <Button Content="â† ZurÃ¼ck" 
                  Command="{Binding CancelCommand}"
                  Padding="12,6"/>
          <Button Content="ðŸ’¾ Speichern" 
                  Command="{Binding SaveCommand}"
                  IsEnabled="{Binding !IsSaving}"
                  Padding="12,6"
                  Classes="accent"/>
        </StackPanel>
        
      </Grid>
      
    </Border>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Steuerklasse wird geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="4"
              Padding="16"
              Margin="16"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>
      
      <!-- Form Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24" MaxWidth="600" HorizontalAlignment="Center">
          
          <!-- Basic Information Section -->
          <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                  CornerRadius="8"
                  Padding="32">
            <StackPanel Spacing="24">
              
              <!-- Section Title -->
              <TextBlock Text="ðŸ“Š Steuerklasse" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"/>
              
              <!-- Tax Rate Field -->
              <StackPanel Spacing="8">
                <TextBlock Text="Steuersatz *" 
                           FontWeight="SemiBold"
                           FontSize="14"/>
                <Grid ColumnDefinitions="*,Auto">
                  <NumericUpDown Grid.Column="0"
                                 Value="{Binding TaxRate}" 
                                 Minimum="0"
                                 Maximum="100"
                                 Increment="0.01"
                                 FormatString="N2"
                                 ShowButtonSpinner="True"
                                 IsEnabled="{Binding !IsSaving}"
                                 FontSize="16"
                                 Padding="12"/>
                  <TextBlock Grid.Column="1"
                             Text="%"
                             FontSize="16"
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"
                             Margin="8,0,0,0"/>
                </Grid>
                <TextBlock Text="Geben Sie den Steuersatz in Prozent ein (z.B. 19.00 fÃ¼r 19%)" 
                           FontSize="12" 
                           Opacity="0.6"/>
              </StackPanel>
              
              <!-- Examples Section -->
              <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                      CornerRadius="4"
                      Padding="16">
                <StackPanel Spacing="8">
                  <TextBlock Text="ðŸ“– Beispiele" 
                             FontWeight="SemiBold"
                             FontSize="13"/>
                  <StackPanel Spacing="4">
                    <TextBlock Text="â€¢ 19.00% = Deutscher Regelsteuersatz" FontSize="11" Opacity="0.8"/>
                    <TextBlock Text="â€¢ 7.00% = Deutscher ermÃ¤ÃŸigter Steuersatz" FontSize="11" Opacity="0.8"/>
                    <TextBlock Text="â€¢ 0.00% = Steuerfreie Waren" FontSize="11" Opacity="0.8"/>
                  </StackPanel>
                </StackPanel>
              </Border>
              
            </StackPanel>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Status Footer -->
    <Border Grid.Row="2" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Padding="16,12"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,0"
            IsVisible="{Binding IsSaving}">
      
      <StackPanel Orientation="Horizontal" 
                  Spacing="12"
                  HorizontalAlignment="Center">
        <ProgressBar IsIndeterminate="True" Width="150" Height="4"/>
        <TextBlock Text="Steuerklasse wird gespeichert..." 
                   VerticalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
    </Border>
    
  </Grid>

</UserControl>