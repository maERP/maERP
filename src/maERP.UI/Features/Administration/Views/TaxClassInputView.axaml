<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Features.Administration.Views.TaxClassInputView">

  <UserControl.Styles>
    <!-- Style for NumericUpDown with validation errors -->
    <Style Selector="NumericUpDown.hasError">
      <Setter Property="BorderBrush" Value="#D32F2F"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style Selector="NumericUpDown.hasError:focus">
      <Setter Property="BorderBrush" Value="#D32F2F"/>
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Simple Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,32">
      <!-- Title -->
      <StackPanel Grid.Column="0" VerticalAlignment="Center">
        <TextBlock Text="{Binding PageTitle}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ContentViewHeadingBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Text="Steuerklasse bearbeiten oder erstellen"
                   FontSize="14"
                   Foreground="{DynamicResource ContentViewSubheadingBrush}"/>
      </StackPanel>

      <!-- Action buttons -->
      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="8"
                  VerticalAlignment="Center">
        <Button Content="🔄"
                Command="{Binding ClearFormCommand}"
                IsVisible="{Binding !IsEditMode}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="Formular leeren"/>
        <Button Content="←"
                Command="{Binding CancelCommand}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"
                Background="{DynamicResource SurfaceContainerBrush}"
                Foreground="{DynamicResource OnSurfaceBrush}"
                BorderThickness="0"
                ToolTip.Tip="Zurück"/>
        <Button Content="💾"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding !IsSaving}"
                Padding="12,8"
                CornerRadius="6"
                FontSize="16"                FontWeight="Medium"                MinWidth="36"                HorizontalContentAlignment="Center"                VerticalContentAlignment="Center"
                Background="#1C1C1E"
                Foreground="White"
                BorderThickness="0"
                ToolTip.Tip="Speichern"/>
      </StackPanel>
    </Grid>
    
    <!-- Main content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Steuerklasse wird geladen..." 
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="8"
              Padding="20"
              Margin="20"
              VerticalAlignment="Top">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
        </StackPanel>
      </Border>
      
      <!-- Form Content -->
      <ScrollViewer IsVisible="{Binding ShouldShowContent}" Padding="24">
        <StackPanel Spacing="24" MaxWidth="600" HorizontalAlignment="Center">
          
          <!-- Basic Information Section -->
          <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                  BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="32">
            <StackPanel Spacing="24">
              
              <!-- Section Title -->
              <TextBlock Text="📊 Steuerklasse" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                         HorizontalAlignment="Center"/>
              
              <!-- Tax Rate Field -->
              <StackPanel Spacing="8">
                <TextBlock Text="Steuersatz *"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Grid ColumnDefinitions="*,Auto">
                  <NumericUpDown Grid.Column="0"
                                 Value="{Binding TaxRate}"
                                 Minimum="0"
                                 Maximum="100"
                                 Increment="0.01"
                                 FormatString="N2"
                                 ShowButtonSpinner="True"
                                 IsEnabled="{Binding !IsSaving}"
                                 FontSize="16"
                                 Padding="12"
                                 Classes.hasError="{Binding TaxRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                  <TextBlock Grid.Column="1"
                             Text="%"
                             FontSize="16"
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"
                             Margin="8,0,0,0"/>
                </Grid>
                <TextBlock Text="{Binding TaxRateError}"
                           IsVisible="{Binding TaxRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           Foreground="#D32F2F"
                           FontSize="12"
                           TextWrapping="Wrap"/>
                <TextBlock Text="Geben Sie den Steuersatz in Prozent ein (z.B. 19.00 für 19%)"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
              </StackPanel>
              
              <!-- Examples Section -->
              <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                      BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      CornerRadius="8"
                      Padding="16">
                <StackPanel Spacing="8">
                  <TextBlock Text="📖 Beispiele" 
                             FontWeight="SemiBold"
                             FontSize="13"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                  <StackPanel Spacing="4">
                    <TextBlock Text="• 19.00% = Deutscher Regelsteuersatz" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="• 7.00% = Deutscher ermäßigter Steuersatz" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="• 0.00% = Steuerfreie Waren" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                  </StackPanel>
                </StackPanel>
              </Border>
              
            </StackPanel>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Status Footer -->
    <Border Grid.Row="2" 
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            Padding="16,12"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8"
            Margin="0,8,0,0"
            IsVisible="{Binding IsSaving}">
      
      <StackPanel Orientation="Horizontal" 
                  Spacing="12"
                  HorizontalAlignment="Center">
        <ProgressBar IsIndeterminate="True" Width="150" Height="4"/>
        <TextBlock Text="Steuerklasse wird gespeichert..." 
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
      </StackPanel>
      
    </Border>
    
  </Grid>

</UserControl>