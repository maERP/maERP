<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:maERP.UI.ViewModels"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="maERP.UI.Views.ProductListView"
             x:DataType="vm:ProductListViewModel">

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Header mit Titel und Suche -->
    <Border Grid.Row="0" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Padding="24,16"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,0,0,1">
      
      <Grid ColumnDefinitions="*,Auto,Auto">
        
        <!-- Titel -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
          <TextBlock Text="ðŸ“¦ Produkte" 
                     FontSize="24" 
                     FontWeight="SemiBold"
                     Margin="0,0,0,4"/>
          <TextBlock Text="{Binding TotalCount, StringFormat=Gesamt: \{0\} Produkte}" 
                     FontSize="14" 
                     Opacity="0.7"/>
        </StackPanel>
        
        <!-- Suchfeld -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8" 
                    VerticalAlignment="Center"
                    Margin="16,0">
          
          <TextBox Text="{Binding SearchText}" 
                   Watermark="Nach Produkten suchen..."
                   Width="200"
                   VerticalAlignment="Center"/>
          
          <Button Content="ðŸ”" 
                  Command="{Binding SearchProductsCommand}"
                  VerticalAlignment="Center"
                  Padding="8"/>
          
        </StackPanel>
        
        <!-- Refresh Button -->
        <Button Grid.Column="2" 
                Content="ðŸ”„" 
                Command="{Binding RefreshCommand}"
                VerticalAlignment="Center"
                Padding="8"
                ToolTip.Tip="Aktualisieren"/>
        
      </Grid>
      
    </Border>
    
    <!-- Loading/Error/Content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Produkte werden geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="4"
              Padding="16"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="âš ï¸ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Products DataGrid -->
      <ScrollViewer IsVisible="{Binding ShouldShowDataGrid}">
        <controls:DataGrid ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single">
          
          <controls:DataGrid.Columns>
            
            <controls:DataGridTextColumn Header="Produkt-Nr." 
                                Binding="{Binding Id}" 
                                Width="100"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="SKU" 
                                Binding="{Binding Sku}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Name" 
                                Binding="{Binding Name}" 
                                Width="200"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Beschreibung" 
                                Binding="{Binding Description}" 
                                Width="250"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="EAN" 
                                Binding="{Binding Ean}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Preis" 
                                Binding="{Binding Price, StringFormat=\{0:C2\}}" 
                                Width="100"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="UVP" 
                                Binding="{Binding Msrp, StringFormat=\{0:C2\}}" 
                                Width="100"
                                CanUserSort="True"/>
            
            <controls:DataGridTemplateColumn Header="Aktionen" 
                                    Width="120"
                                    CanUserSort="False">
              <controls:DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <Button Content="Details" 
                          Padding="8,4"
                          Command="{Binding $parent[controls:DataGrid].((vm:ProductListViewModel)DataContext).ViewProductDetailsCommand}"
                          CommandParameter="{Binding}"
                          HorizontalAlignment="Center"/>
                </DataTemplate>
              </controls:DataGridTemplateColumn.CellTemplate>
            </controls:DataGridTemplateColumn>
            
          </controls:DataGrid.Columns>
          
          <controls:DataGrid.Styles>
            <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
            </Style>
            <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource SystemAccentColorLight2}"/>
            </Style>
          </controls:DataGrid.Styles>
          
        </controls:DataGrid>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Pagination Footer -->
    <Border Grid.Row="2" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Padding="16,12"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,0"
            IsVisible="{Binding !IsLoading}">
      
      <Grid ColumnDefinitions="*,Auto,*">
        
        <!-- Page Info Links -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    Spacing="8">
          <TextBlock Text="{Binding DisplayPageNumber, StringFormat=Seite \{0\}}" 
                     VerticalAlignment="Center"/>
          <TextBlock Text="von" 
                     Opacity="0.7" 
                     VerticalAlignment="Center"/>
          <TextBlock Text="{Binding TotalPages}" 
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8">
          
          <Button Content="â—€ ZurÃ¼ck" 
                  Command="{Binding PreviousPageCommand}"
                  IsEnabled="{Binding CanGoPrevious}"
                  Padding="12,6"/>
          
          <Button Content="Weiter â–¶" 
                  Command="{Binding NextPageCommand}"
                  IsEnabled="{Binding CanGoNext}"
                  Padding="12,6"/>
          
        </StackPanel>
        
        <!-- Items Info Rechts -->
        <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Spacing="4">
          <TextBlock Text="{Binding Products.Count, StringFormat=\{0\} EintrÃ¤ge}" 
                     Opacity="0.7"/>
          <TextBlock Text="von" 
                     Opacity="0.7"/>
          <TextBlock Text="{Binding TotalCount}" 
                     Opacity="0.7"/>
        </StackPanel>
        
      </Grid>
      
    </Border>
    
  </Grid>

</UserControl>