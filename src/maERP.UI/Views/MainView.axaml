<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:maERP.UI.ViewModels"
             xmlns:views="clr-namespace:maERP.UI.Views"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="maERP.UI.Views.MainView"
             x:DataType="vm:MainViewModel">

  <Grid>
    <!-- Login View wenn nicht authentifiziert -->
    <Panel IsVisible="{Binding !IsAuthenticated}">
      <views:LoginView DataContext="{Binding LoginViewModel}"/>
    </Panel>

    <!-- Hauptanwendung mit Sidebar wenn authentifiziert -->
    <Grid IsVisible="{Binding IsAuthenticated}" ColumnDefinitions="250,*">
    
    <!-- Sidebar -->
    <Border Grid.Column="0" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,0,1,0">
      
      <DockPanel>
        
        <!-- Logo/Header - docked to top -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource SystemAccentColor}" 
                Padding="20" 
                Margin="0,0,0,8">
          <StackPanel Spacing="4">
            <TextBlock Text="maERP" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Enterprise Resource Planning" 
                       FontSize="10" 
                       Foreground="White" 
                       Opacity="0.8"
                       HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
        
        <!-- Logout Button at bottom - docked to bottom -->
        <Border DockPanel.Dock="Bottom" 
                VerticalAlignment="Bottom" 
                Margin="12,24,12,12">
          <Button Content="ðŸšª Abmelden"
                  Command="{Binding LogoutCommand}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Padding="16,12"
                  CornerRadius="6"
                  Background="Transparent"
                  BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                  BorderThickness="1"/>
        </Border>
        
        <!-- Navigation Menu - scrollable center area -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
          <StackPanel Margin="12,8">
            
            <!-- Dashboard -->
            <Button Content="ðŸ“Š Dashboard"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Dashboard"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <!-- Separators and future menu items -->
            <Separator Margin="0,12" Opacity="0.3"/>
            
            <TextBlock Text="Verkauf" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Opacity="0.6" 
                       Margin="16,8,16,4"/>
            
            <Button Content="ðŸ‘¥ Kunden"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Customers"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Button Content="ðŸ›’ Bestellungen"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Orders"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Button Content="ðŸ§¾ Rechnungen"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Invoices"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Separator Margin="0,12" Opacity="0.3"/>
            
            <TextBlock Text="Lager" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Opacity="0.6" 
                       Margin="16,8,16,4"/>
            
            <Button Content="ðŸ“¦ Produkte"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Products"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Button Content="ðŸª Lager"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Warehouses"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Separator Margin="0,12" Opacity="0.3"/>
            
            <TextBlock Text="Vertrieb" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Opacity="0.6" 
                       Margin="16,8,16,4"/>
            
            <Button Content="ðŸŒ VertriebskanÃ¤le"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="SalesChannels"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Separator Margin="0,12" Opacity="0.3"/>
            
            <TextBlock Text="System" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Opacity="0.6" 
                       Margin="16,8,16,4"/>
            
            <Button Content="ðŸ¤– AI-Modelle"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="AiModels"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Button Content="ðŸ’¬ AI-Prompts"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="AiPrompts"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Button Content="ðŸ’° Steuerklassen"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="TaxClasses"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
            <Button Content="ðŸ‘¤ Benutzer"
                    Command="{Binding NavigateToMenuItemCommand}"
                    CommandParameter="Users"
                    Classes="nav-button"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="16,12"
                    Margin="0,2"
                    CornerRadius="6"/>
            
          </StackPanel>
        </ScrollViewer>
        
      </DockPanel>
      
    </Border>
    
    <!-- Main Content Area -->
    <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ContentControl Content="{Binding CurrentView}">
          <ContentControl.DataTemplates>
            <DataTemplate DataType="vm:DashboardViewModel">
              <views:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="vm:OrderListViewModel">
              <views:OrderListView />
            </DataTemplate>
            <DataTemplate DataType="vm:OrderDetailViewModel">
              <views:OrderDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:CustomerListViewModel">
              <views:CustomerListView />
            </DataTemplate>
            <DataTemplate DataType="vm:CustomerDetailViewModel">
              <views:CustomerDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:CustomerInputViewModel">
              <views:CustomerInputView />
            </DataTemplate>
            <DataTemplate DataType="vm:InvoiceListViewModel">
              <views:InvoiceListView />
            </DataTemplate>
            <DataTemplate DataType="vm:ProductListViewModel">
              <views:ProductListView />
            </DataTemplate>
            <DataTemplate DataType="vm:ProductDetailViewModel">
              <views:ProductDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:WarehouseListViewModel">
              <views:WarehouseListView />
            </DataTemplate>
            <DataTemplate DataType="vm:WarehouseDetailViewModel">
              <views:WarehouseDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:AiModelListViewModel">
              <views:AiModelListView />
            </DataTemplate>
            <DataTemplate DataType="vm:AiModelDetailViewModel">
              <views:AiModelDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:AiModelInputViewModel">
              <views:AiModelInputView />
            </DataTemplate>
            <DataTemplate DataType="vm:AiPromptListViewModel">
              <views:AiPromptListView />
            </DataTemplate>
            <DataTemplate DataType="vm:AiPromptDetailViewModel">
              <views:AiPromptDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:AiPromptInputViewModel">
              <views:AiPromptInputView />
            </DataTemplate>
            <DataTemplate DataType="vm:SalesChannelListViewModel">
              <views:SalesChannelListView />
            </DataTemplate>
            <DataTemplate DataType="vm:SalesChannelDetailViewModel">
              <views:SalesChannelDetailView />
            </DataTemplate>
            <DataTemplate DataType="vm:TaxClassListViewModel">
              <views:TaxClassListView />
            </DataTemplate>
            <DataTemplate DataType="vm:UserListViewModel">
              <views:UserListView />
            </DataTemplate>
          </ContentControl.DataTemplates>
        </ContentControl>
      </ScrollViewer>
    </Border>
    
    </Grid>
  </Grid>

  <!-- Styles -->
  <UserControl.Styles>
    <Style Selector="Button.nav-button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
    </Style>
    <Style Selector="Button.nav-button:pointerover">
      <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
    </Style>
  </UserControl.Styles>

</UserControl>
