<Page x:Class="maERP.Client.Presentation.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      mc:Ignorable="d"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <utu:NavigationBar Content="{Binding Title}" />

    <StackPanel Grid.Row="1"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="400"
          MaxWidth="400"
          Spacing="16"
          Padding="24">

      <TextBlock Text="Welcome to maERP"
                 Style="{StaticResource HeadlineSmall}"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,24" />

      <TextBox x:Name="ServerUrlTextBox"
               PlaceholderText="Server URL (e.g., https://api.maerp.com)"
               Text="{Binding ServerUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               x:Uid="LoginPage.TextBox.ServerUrl"
               AutomationProperties.Name="Server URL"
               Margin="0,0,0,8" />

      <TextBox x:Name="EmailTextBox"
               PlaceholderText="Email"
               Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               x:Uid="LoginPage.TextBox.Email"
               AutomationProperties.Name="Email"
               InputScope="EmailSmtpAddress"
               Margin="0,0,0,8" />

      <PasswordBox x:Name="PasswordBox"
                   PlaceholderText="Password"
                   Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   x:Uid="LoginPage.PasswordBox.Password"
                   AutomationProperties.Name="Password"
                   Margin="0,0,0,8" />

      <TextBlock Text="{Binding ErrorMessage}"
                 Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                 TextWrapping="Wrap"
                 Visibility="{Binding HasError}"
                 Margin="0,0,0,8" />

      <Button Content="Login"
              Command="{Binding Login}"
              HorizontalAlignment="Stretch"
              Style="{StaticResource FilledButtonStyle}"
              IsEnabled="{Binding CanLogin}" />

      <ProgressRing IsActive="{Binding IsLoading}"
                    Width="32"
                    Height="32"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center" />
    </StackPanel>
  </Grid>
</Page>
