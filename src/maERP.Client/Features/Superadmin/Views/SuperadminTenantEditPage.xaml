<Page x:Class="maERP.Client.Features.Superadmin.Views.SuperadminTenantEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Superadmin.Views"
      xmlns:models="using:maERP.Client.Features.Superadmin.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton x:Uid="SuperadminTenantEditPage.AppBarButton.Cancel"
                      Click="CancelButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE711;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="SuperadminTenantEditPage.AppBarButton.Save"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE74E;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Form Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="600" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="0" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,0,16" />
                <Setter Target="CompanyCard.(Grid.Column)" Value="0" />
                <Setter Target="CompanyCard.(Grid.Row)" Value="1" />
                <Setter Target="CompanyCard.Margin" Value="0,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="2" />
                <Setter Target="AddressCard.Margin" Value="0,0,0,16" />
                <Setter Target="PaymentCard.(Grid.Column)" Value="0" />
                <Setter Target="PaymentCard.(Grid.Row)" Value="3" />
                <Setter Target="PaymentCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="800" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="1200" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,8,16" />
                <Setter Target="CompanyCard.(Grid.Column)" Value="1" />
                <Setter Target="CompanyCard.(Grid.Row)" Value="0" />
                <Setter Target="CompanyCard.Margin" Value="8,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="1" />
                <Setter Target="AddressCard.Margin" Value="0,0,8,16" />
                <Setter Target="PaymentCard.(Grid.Column)" Value="1" />
                <Setter Target="PaymentCard.(Grid.Row)" Value="1" />
                <Setter Target="PaymentCard.Margin" Value="8,0,0,16" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="1200" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="10000" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,8,16" />
                <Setter Target="CompanyCard.(Grid.Column)" Value="1" />
                <Setter Target="CompanyCard.(Grid.Row)" Value="0" />
                <Setter Target="CompanyCard.Margin" Value="8,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="1" />
                <Setter Target="AddressCard.Margin" Value="0,0,8,16" />
                <Setter Target="PaymentCard.(Grid.Column)" Value="1" />
                <Setter Target="PaymentCard.(Grid.Row)" Value="1" />
                <Setter Target="PaymentCard.Margin" Value="8,0,0,16" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel Spacing="24"
                    MaxWidth="1400"
                    HorizontalAlignment="Stretch">

          <!-- Error Message Banner -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="8"
                  Padding="16"
                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE783;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         Text="{Binding ErrorMessage}"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnErrorContainerBrush}"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center" />
            </Grid>
          </Border>

          <!-- Loading Overlay -->
          <Border Background="{ThemeResource SurfaceBrush}"
                  CornerRadius="12"
                  Padding="24"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Border>

          <!-- Form Cards Grid -->
          <Grid x:Name="FormCardsGrid"
                Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="FormColumn1" Width="*" />
              <ColumnDefinition x:Name="FormColumn2" Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Basic Information Card -->
            <Border x:Name="BasicCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE902;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="SuperadminTenantEditPage.Section.BasicInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Basic Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Name (Required) -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Name"
                           Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Description -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Description"
                           Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           MinHeight="80"
                           MaxHeight="200"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Required Fields Note -->
                  <TextBlock x:Uid="SuperadminTenantEditPage.RequiredFieldsNote"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Company Information Card -->
            <Border x:Name="CompanyCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8F1;"
                              FontSize="20"
                              Foreground="{ThemeResource SecondaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="SuperadminTenantEditPage.Section.CompanyInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Company Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Company Name -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.CompanyName"
                           Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Contact Email -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.ContactEmail"
                           Text="{Binding ContactEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="EmailSmtpAddress"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Phone -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Phone"
                           Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="TelephoneNumber"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Website -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Website"
                           Text="{Binding Website, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Url"
                           IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Address Card -->
            <Border x:Name="AddressCard"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE81D;"
                              FontSize="20"
                              Foreground="{ThemeResource TertiaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="SuperadminTenantEditPage.Section.Address"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Address Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Street -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Street"
                           Text="{Binding Street, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Street 2 -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Street2"
                           Text="{Binding Street2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Postal Code and City Row -->
                  <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="120" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Uid="SuperadminTenantEditPage.Field.PostalCode"
                             Text="{Binding PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />

                    <TextBox Grid.Column="1"
                             x:Uid="SuperadminTenantEditPage.Field.City"
                             Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />
                  </Grid>

                  <!-- State and Country Row -->
                  <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Uid="SuperadminTenantEditPage.Field.State"
                             Text="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />

                    <TextBox Grid.Column="1"
                             x:Uid="SuperadminTenantEditPage.Field.Country"
                             Text="{Binding Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />
                  </Grid>
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Payment Information Card -->
            <Border x:Name="PaymentCard"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8C7;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="SuperadminTenantEditPage.Section.PaymentInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Payment Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- IBAN -->
                  <TextBox x:Uid="SuperadminTenantEditPage.Field.Iban"
                           Text="{Binding Iban, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- IBAN Format Hint -->
                  <TextBlock x:Uid="SuperadminTenantEditPage.Field.Iban.Hint"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>
          </Grid>

          <!-- Users Section -->
          <StackPanel Spacing="12"
                      Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <!-- Section Header -->
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <StackPanel Grid.Column="0"
                          Orientation="Horizontal"
                          Spacing="12">
                <FontIcon Glyph="&#xE716;"
                          FontSize="20"
                          Foreground="{ThemeResource SecondaryBrush}" />
                <TextBlock x:Uid="SuperadminTenantEditPage.Section.Users"
                           Style="{StaticResource TitleMedium}"
                           Foreground="{ThemeResource OnSurfaceBrush}"
                           VerticalAlignment="Center" />
                <!-- User Count Badge -->
                <Border CornerRadius="12"
                        Padding="8,4"
                        Background="{ThemeResource SecondaryContainerBrush}"
                        VerticalAlignment="Center">
                  <TextBlock Text="{Binding UserCount}"
                             Style="{StaticResource LabelMedium}"
                             Foreground="{ThemeResource OnSecondaryContainerBrush}" />
                </Border>
              </StackPanel>

              <!-- Add User Button with Flyout -->
              <Button Grid.Column="2"
                      x:Name="AddUserButton"
                      Style="{StaticResource FilledTonalButtonStyle}"
                      Click="AddUserButton_Click">
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                  <FontIcon Glyph="&#xE710;"
                            FontSize="14" />
                  <TextBlock x:Uid="SuperadminTenantEditPage.Button.AddUser" />
                </StackPanel>
                <Button.Flyout>
                  <Flyout x:Name="AddUserFlyout"
                          Placement="Bottom">
                    <StackPanel Spacing="16"
                                MinWidth="320">
                      <TextBlock x:Uid="SuperadminTenantEditPage.Flyout.AddUser.Title"
                                 Style="{StaticResource TitleSmall}"
                                 Foreground="{ThemeResource OnSurfaceBrush}" />

                      <!-- Loading Indicator -->
                      <ProgressRing IsActive="{Binding IsLoadingAvailableUsers}"
                                    Visibility="{Binding IsLoadingAvailableUsers, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center" />

                      <!-- User Selection -->
                      <StackPanel Spacing="8"
                                  Visibility="{Binding IsLoadingAvailableUsers, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                        <ComboBox x:Uid="SuperadminTenantEditPage.Flyout.AddUser.ComboBox"
                                  ItemsSource="{Binding AvailableUsers}"
                                  SelectedItem="{Binding SelectedUserToAdd, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"
                                  MinWidth="280">
                          <ComboBox.ItemTemplate>
                            <DataTemplate>
                              <StackPanel Orientation="Horizontal"
                                          Spacing="8">
                                <TextBlock>
                                  <Run Text="{Binding Firstname}" />
                                  <Run Text=" " />
                                  <Run Text="{Binding Lastname}" />
                                </TextBlock>
                                <TextBlock Text="-"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                <TextBlock Text="{Binding Email}"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                              </StackPanel>
                            </DataTemplate>
                          </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- No Users Available Message -->
                        <TextBlock x:Uid="SuperadminTenantEditPage.Flyout.AddUser.NoUsersAvailable"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                   Visibility="{Binding HasNoAvailableUsers, Converter={StaticResource BoolToVisibilityConverter}}" />
                      </StackPanel>

                      <!-- Action Buttons -->
                      <Grid ColumnSpacing="8"
                            Visibility="{Binding IsLoadingAvailableUsers, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                x:Uid="SuperadminTenantEditPage.Flyout.AddUser.Cancel"
                                Style="{StaticResource OutlinedButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Click="CancelAddUserFlyout_Click" />
                        <Button Grid.Column="1"
                                x:Uid="SuperadminTenantEditPage.Flyout.AddUser.Add"
                                Style="{StaticResource FilledButtonStyle}"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{Binding CanAddUser}"
                                Click="ConfirmAddUser_Click" />
                      </Grid>
                    </StackPanel>
                  </Flyout>
                </Button.Flyout>
              </Button>
            </Grid>

            <!-- Users Table -->
            <Border Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8"
                    Visibility="{Binding HasUsers, Converter={StaticResource BoolToVisibilityConverter}}">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel>
                <!-- Table Header -->
                <Grid Padding="16,12"
                      Background="{ThemeResource SurfaceVariantBrush}"
                      CornerRadius="12,12,0,0">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="150" />
                    <ColumnDefinition Width="*" MinWidth="200" />
                    <ColumnDefinition Width="Auto" MinWidth="100" />
                    <ColumnDefinition Width="Auto" MinWidth="80" />
                  </Grid.ColumnDefinitions>
                  <TextBlock Grid.Column="0"
                             x:Uid="SuperadminTenantEditPage.Users.Header.Name"
                             Style="{StaticResource LabelMedium}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  <TextBlock Grid.Column="1"
                             x:Uid="SuperadminTenantEditPage.Users.Header.Email"
                             Style="{StaticResource LabelMedium}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  <TextBlock Grid.Column="2"
                             x:Uid="SuperadminTenantEditPage.Users.Header.Roles"
                             Style="{StaticResource LabelMedium}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  <TextBlock Grid.Column="3"
                             x:Uid="SuperadminTenantEditPage.Users.Header.Actions"
                             Style="{StaticResource LabelMedium}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}"
                             HorizontalAlignment="Center" />
                </Grid>

                <!-- Users List -->
                <ItemsRepeater ItemsSource="{Binding Users}">
                  <ItemsRepeater.Layout>
                    <StackLayout Orientation="Vertical" />
                  </ItemsRepeater.Layout>
                  <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                      <Grid Padding="16,12"
                            BorderBrush="{ThemeResource OutlineVariantBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*" MinWidth="150" />
                          <ColumnDefinition Width="*" MinWidth="200" />
                          <ColumnDefinition Width="Auto" MinWidth="100" />
                          <ColumnDefinition Width="Auto" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <!-- Name with Default Badge -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    VerticalAlignment="Center">
                          <TextBlock Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center">
                            <Run Text="{Binding Firstname}" />
                            <Run Text=" " />
                            <Run Text="{Binding Lastname}" />
                          </TextBlock>
                          <!-- Default Tenant Badge -->
                          <Border CornerRadius="8"
                                  Padding="6,2"
                                  Background="{ThemeResource PrimaryContainerBrush}"
                                  Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock x:Uid="SuperadminTenantEditPage.Users.Badge.Default"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnPrimaryContainerBrush}" />
                          </Border>
                        </StackPanel>

                        <!-- Email -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Email}"
                                   Style="{StaticResource BodyMedium}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />

                        <!-- Role Badges -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="4"
                                    VerticalAlignment="Center">
                          <!-- Manage Tenant Badge -->
                          <Border CornerRadius="8"
                                  Padding="6,2"
                                  Background="{ThemeResource TertiaryContainerBrush}"
                                  Visibility="{Binding RoleManageTenant, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock x:Uid="SuperadminTenantEditPage.Users.Badge.ManageTenant"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                          </Border>
                          <!-- Manage User Badge -->
                          <Border CornerRadius="8"
                                  Padding="6,2"
                                  Background="{ThemeResource SecondaryContainerBrush}"
                                  Visibility="{Binding RoleManageUser, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock x:Uid="SuperadminTenantEditPage.Users.Badge.ManageUser"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnSecondaryContainerBrush}" />
                          </Border>
                        </StackPanel>

                        <!-- Actions -->
                        <StackPanel Grid.Column="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                          <Button Style="{StaticResource TextButtonStyle}"
                                  Click="RemoveUserButton_Click"
                                  Tag="{Binding}"
                                  MinWidth="44"
                                  MinHeight="44">
                            <FontIcon Glyph="&#xE74D;"
                                      FontSize="16"
                                      Foreground="{ThemeResource ErrorBrush}" />
                          </Button>
                        </StackPanel>
                      </Grid>
                    </DataTemplate>
                  </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
              </StackPanel>
            </Border>

            <!-- No Users Placeholder -->
            <Border Background="{ThemeResource SurfaceVariantBrush}"
                    CornerRadius="12"
                    Padding="24"
                    Visibility="{Binding HasUsers, Converter={StaticResource BoolToInverseVisibilityConverter}}">
              <StackPanel HorizontalAlignment="Center"
                          Spacing="8">
                <FontIcon Glyph="&#xE716;"
                          FontSize="32"
                          Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                <TextBlock x:Uid="SuperadminTenantEditPage.NoUsers"
                           Style="{StaticResource BodyMedium}"
                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock x:Uid="SuperadminTenantEditPage.NoUsers.Hint"
                           Style="{StaticResource LabelSmall}"
                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                           HorizontalAlignment="Center" />
              </StackPanel>
            </Border>
          </StackPanel>

        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Grid>
</Page>
