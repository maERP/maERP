<Page x:Class="maERP.Client.Features.Tenants.Views.TenantEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Tenants.Views"
      xmlns:models="using:maERP.Client.Features.Tenants.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton x:Uid="TenantEditPage.AppBarButton.DemoData"
                      Click="DemoDataButton_Click"
                      Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE946;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="TenantEditPage.AppBarButton.Cancel"
                      Click="CancelButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE711;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="TenantEditPage.AppBarButton.Save"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE74E;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Form Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="600" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="0" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,0,16" />
                <Setter Target="CompanyCard.(Grid.Column)" Value="0" />
                <Setter Target="CompanyCard.(Grid.Row)" Value="1" />
                <Setter Target="CompanyCard.Margin" Value="0,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="2" />
                <Setter Target="AddressCard.Margin" Value="0,0,0,16" />
                <Setter Target="PaymentCard.(Grid.Column)" Value="0" />
                <Setter Target="PaymentCard.(Grid.Row)" Value="3" />
                <Setter Target="PaymentCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="800" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="1200" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,8,16" />
                <Setter Target="CompanyCard.(Grid.Column)" Value="1" />
                <Setter Target="CompanyCard.(Grid.Row)" Value="0" />
                <Setter Target="CompanyCard.Margin" Value="8,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="1" />
                <Setter Target="AddressCard.Margin" Value="0,0,8,16" />
                <Setter Target="PaymentCard.(Grid.Column)" Value="1" />
                <Setter Target="PaymentCard.(Grid.Row)" Value="1" />
                <Setter Target="PaymentCard.Margin" Value="8,0,0,16" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="1200" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="10000" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,8,16" />
                <Setter Target="CompanyCard.(Grid.Column)" Value="1" />
                <Setter Target="CompanyCard.(Grid.Row)" Value="0" />
                <Setter Target="CompanyCard.Margin" Value="8,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="1" />
                <Setter Target="AddressCard.Margin" Value="0,0,8,16" />
                <Setter Target="PaymentCard.(Grid.Column)" Value="1" />
                <Setter Target="PaymentCard.(Grid.Row)" Value="1" />
                <Setter Target="PaymentCard.Margin" Value="8,0,0,16" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel Spacing="24"
                    MaxWidth="1400"
                    HorizontalAlignment="Stretch">

          <!-- Error Message Banner -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="8"
                  Padding="16"
                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE783;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         Text="{Binding ErrorMessage}"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnErrorContainerBrush}"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center" />
            </Grid>
          </Border>

          <!-- Loading Overlay -->
          <Border Background="{ThemeResource SurfaceBrush}"
                  CornerRadius="12"
                  Padding="24"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Border>

          <!-- Form Cards Grid -->
          <Grid x:Name="FormCardsGrid"
                Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="FormColumn1" Width="*" />
              <ColumnDefinition x:Name="FormColumn2" Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Basic Information Card -->
            <Border x:Name="BasicCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE902;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="TenantEditPage.Section.BasicInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Basic Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Name (Required) -->
                  <TextBox x:Uid="TenantEditPage.Field.Name"
                           Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Description -->
                  <TextBox x:Uid="TenantEditPage.Field.Description"
                           Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           MinHeight="80"
                           MaxHeight="200"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Is Active Toggle -->
                  <ToggleSwitch x:Uid="TenantEditPage.Field.IsActive"
                                IsOn="{Binding IsActive, Mode=TwoWay}"
                                IsEnabled="{Binding IsNotLoading}" />

                  <!-- Required Fields Note -->
                  <TextBlock x:Uid="TenantEditPage.RequiredFieldsNote"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Company Information Card -->
            <Border x:Name="CompanyCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8F1;"
                              FontSize="20"
                              Foreground="{ThemeResource SecondaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="TenantEditPage.Section.CompanyInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Company Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Company Name -->
                  <TextBox x:Uid="TenantEditPage.Field.CompanyName"
                           Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Contact Email -->
                  <TextBox x:Uid="TenantEditPage.Field.ContactEmail"
                           Text="{Binding ContactEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="EmailSmtpAddress"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Phone -->
                  <TextBox x:Uid="TenantEditPage.Field.Phone"
                           Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="TelephoneNumber"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Website -->
                  <TextBox x:Uid="TenantEditPage.Field.Website"
                           Text="{Binding Website, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Url"
                           IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Address Card -->
            <Border x:Name="AddressCard"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE81D;"
                              FontSize="20"
                              Foreground="{ThemeResource TertiaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="TenantEditPage.Section.Address"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Address Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Street -->
                  <TextBox x:Uid="TenantEditPage.Field.Street"
                           Text="{Binding Street, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Street 2 -->
                  <TextBox x:Uid="TenantEditPage.Field.Street2"
                           Text="{Binding Street2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Postal Code and City Row -->
                  <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="120" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Uid="TenantEditPage.Field.PostalCode"
                             Text="{Binding PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />

                    <TextBox Grid.Column="1"
                             x:Uid="TenantEditPage.Field.City"
                             Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />
                  </Grid>

                  <!-- State and Country Row -->
                  <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Uid="TenantEditPage.Field.State"
                             Text="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />

                    <TextBox Grid.Column="1"
                             x:Uid="TenantEditPage.Field.Country"
                             Text="{Binding Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />
                  </Grid>
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Payment Information Card -->
            <Border x:Name="PaymentCard"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8C7;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="TenantEditPage.Section.PaymentInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Payment Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- IBAN -->
                  <TextBox x:Uid="TenantEditPage.Field.Iban"
                           Text="{Binding Iban, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- IBAN Format Hint -->
                  <TextBlock x:Uid="TenantEditPage.Field.Iban.Hint"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>
          </Grid>

        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Grid>
</Page>
