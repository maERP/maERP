<Page x:Class="maERP.Client.Features.Tenants.Views.DemoDataGeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Tenants.Views"
      xmlns:models="using:maERP.Client.Features.Tenants.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.MainCommand>
        <AppBarButton Click="BackButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE72B;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.MainCommand>
    </utu:NavigationBar>

    <!-- Main Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="CardsGrid.MaxWidth" Value="600" />
                <Setter Target="CardsColumn1.Width" Value="*" />
                <Setter Target="CardsColumn2.Width" Value="0" />
                <Setter Target="CardsColumn3.Width" Value="0" />
                <Setter Target="CardsColumn4.Width" Value="0" />
                <Setter Target="ProductsCard.(Grid.Column)" Value="0" />
                <Setter Target="ProductsCard.(Grid.Row)" Value="0" />
                <Setter Target="ProductsCard.Margin" Value="0,0,0,16" />
                <Setter Target="CustomersCard.(Grid.Column)" Value="0" />
                <Setter Target="CustomersCard.(Grid.Row)" Value="1" />
                <Setter Target="CustomersCard.Margin" Value="0,0,0,16" />
                <Setter Target="OrdersCard.(Grid.Column)" Value="0" />
                <Setter Target="OrdersCard.(Grid.Row)" Value="2" />
                <Setter Target="OrdersCard.Margin" Value="0,0,0,16" />
                <Setter Target="AiDataCard.(Grid.Column)" Value="0" />
                <Setter Target="AiDataCard.(Grid.Row)" Value="3" />
                <Setter Target="AiDataCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="900" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="CardsGrid.MaxWidth" Value="1400" />
                <Setter Target="CardsColumn1.Width" Value="*" />
                <Setter Target="CardsColumn2.Width" Value="*" />
                <Setter Target="CardsColumn3.Width" Value="0" />
                <Setter Target="CardsColumn4.Width" Value="0" />
                <Setter Target="ProductsCard.(Grid.Column)" Value="0" />
                <Setter Target="ProductsCard.(Grid.Row)" Value="0" />
                <Setter Target="ProductsCard.Margin" Value="0,0,8,16" />
                <Setter Target="CustomersCard.(Grid.Column)" Value="1" />
                <Setter Target="CustomersCard.(Grid.Row)" Value="0" />
                <Setter Target="CustomersCard.Margin" Value="8,0,0,16" />
                <Setter Target="OrdersCard.(Grid.Column)" Value="0" />
                <Setter Target="OrdersCard.(Grid.Row)" Value="1" />
                <Setter Target="OrdersCard.Margin" Value="0,0,8,16" />
                <Setter Target="AiDataCard.(Grid.Column)" Value="1" />
                <Setter Target="AiDataCard.(Grid.Row)" Value="1" />
                <Setter Target="AiDataCard.Margin" Value="8,0,0,16" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="1600" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="CardsGrid.MaxWidth" Value="10000" />
                <Setter Target="CardsColumn1.Width" Value="*" />
                <Setter Target="CardsColumn2.Width" Value="*" />
                <Setter Target="CardsColumn3.Width" Value="*" />
                <Setter Target="CardsColumn4.Width" Value="*" />
                <Setter Target="ProductsCard.(Grid.Column)" Value="0" />
                <Setter Target="ProductsCard.(Grid.Row)" Value="0" />
                <Setter Target="ProductsCard.Margin" Value="0,0,8,0" />
                <Setter Target="CustomersCard.(Grid.Column)" Value="1" />
                <Setter Target="CustomersCard.(Grid.Row)" Value="0" />
                <Setter Target="CustomersCard.Margin" Value="8,0,8,0" />
                <Setter Target="OrdersCard.(Grid.Column)" Value="2" />
                <Setter Target="OrdersCard.(Grid.Row)" Value="0" />
                <Setter Target="OrdersCard.Margin" Value="8,0,8,0" />
                <Setter Target="AiDataCard.(Grid.Column)" Value="3" />
                <Setter Target="AiDataCard.(Grid.Row)" Value="0" />
                <Setter Target="AiDataCard.Margin" Value="8,0,0,0" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel Spacing="24"
                    MaxWidth="2000"
                    HorizontalAlignment="Stretch">

          <!-- Page Description -->
          <Border Background="{ThemeResource SecondaryContainerBrush}"
                  CornerRadius="8"
                  Padding="16">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE946;"
                        FontSize="24"
                        Foreground="{ThemeResource OnSecondaryContainerBrush}"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center" />
              <StackPanel Grid.Column="1"
                          Spacing="4">
                <TextBlock x:Uid="DemoDataGeneratorPage.PageDescription.Title"
                           Style="{StaticResource TitleSmall}"
                           Foreground="{ThemeResource OnSecondaryContainerBrush}" />
                <TextBlock x:Uid="DemoDataGeneratorPage.PageDescription.Text"
                           Style="{StaticResource BodyMedium}"
                           Foreground="{ThemeResource OnSecondaryContainerBrush}"
                           TextWrapping="Wrap" />
              </StackPanel>
            </Grid>
          </Border>

          <!-- Cards Grid -->
          <Grid x:Name="CardsGrid">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="CardsColumn1" Width="*" />
              <ColumnDefinition x:Name="CardsColumn2" Width="*" />
              <ColumnDefinition x:Name="CardsColumn3" Width="*" />
              <ColumnDefinition x:Name="CardsColumn4" Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Products Card -->
            <Border x:Name="ProductsCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,8,0"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8"
                    MinHeight="360">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Card Header -->
                <Grid Grid.Row="0"
                      Padding="20,20,20,12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <Border Grid.Column="0"
                          Background="{ThemeResource PrimaryContainerBrush}"
                          CornerRadius="12"
                          Width="48"
                          Height="48"
                          Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE719;"
                              FontSize="24"
                              Foreground="{ThemeResource OnPrimaryContainerBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                  </Border>
                  <StackPanel Grid.Column="1"
                              VerticalAlignment="Center"
                              Spacing="2">
                    <TextBlock x:Uid="DemoDataGeneratorPage.Products.Title"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.Products.Subtitle"
                               Style="{StaticResource LabelMedium}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Card Content -->
                <StackPanel Grid.Row="1"
                            Padding="20,0,20,0"
                            Spacing="16">
                  <!-- Info Box -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="8"
                          Padding="12">
                    <StackPanel Spacing="8">
                      <TextBlock x:Uid="DemoDataGeneratorPage.Products.Info.Title"
                                 Style="{StaticResource LabelLarge}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      <StackPanel Spacing="4">
                        <TextBlock x:Uid="DemoDataGeneratorPage.Products.Info.Item1"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.Products.Info.Item2"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.Products.Info.Item3"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Count Input -->
                  <NumberBox x:Uid="DemoDataGeneratorPage.Products.Count"
                             x:Name="ProductsCountInput"
                             Value="{Binding ProductsCount, Mode=TwoWay}"
                             Minimum="1"
                             Maximum="1000"
                             SpinButtonPlacementMode="Inline"
                             SmallChange="1"
                             LargeChange="10"
                             IsEnabled="{Binding IsNotGeneratingProducts}" />
                </StackPanel>

                <!-- Card Footer -->
                <StackPanel Grid.Row="2"
                            Padding="20"
                            Spacing="12">
                  <!-- Progress -->
                  <StackPanel Spacing="4"
                              Visibility="{Binding IsGeneratingProducts, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.Products.Progress"
                               Style="{StaticResource LabelSmall}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               HorizontalAlignment="Center" />
                  </StackPanel>

                  <!-- Start Button -->
                  <Button x:Uid="DemoDataGeneratorPage.Products.StartButton"
                          Click="GenerateProducts_Click"
                          HorizontalAlignment="Stretch"
                          IsEnabled="{Binding IsNotGeneratingProducts}"
                          Style="{StaticResource FilledButtonStyle}">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                      <FontIcon Glyph="&#xE768;"
                                FontSize="16" />
                      <TextBlock x:Uid="DemoDataGeneratorPage.Products.StartButton.Text" />
                    </StackPanel>
                  </Button>
                </StackPanel>
              </Grid>
            </Border>

            <!-- Customers Card -->
            <Border x:Name="CustomersCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="8,0,8,0"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8"
                    MinHeight="360">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Card Header -->
                <Grid Grid.Row="0"
                      Padding="20,20,20,12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <Border Grid.Column="0"
                          Background="{ThemeResource SecondaryContainerBrush}"
                          CornerRadius="12"
                          Width="48"
                          Height="48"
                          Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE77B;"
                              FontSize="24"
                              Foreground="{ThemeResource OnSecondaryContainerBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                  </Border>
                  <StackPanel Grid.Column="1"
                              VerticalAlignment="Center"
                              Spacing="2">
                    <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Title"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Subtitle"
                               Style="{StaticResource LabelMedium}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Card Content -->
                <StackPanel Grid.Row="1"
                            Padding="20,0,20,0"
                            Spacing="16">
                  <!-- Info Box -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="8"
                          Padding="12">
                    <StackPanel Spacing="8">
                      <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Info.Title"
                                 Style="{StaticResource LabelLarge}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      <StackPanel Spacing="4">
                        <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Info.Item1"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Info.Item2"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Info.Item3"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Count Input -->
                  <NumberBox x:Uid="DemoDataGeneratorPage.Customers.Count"
                             x:Name="CustomersCountInput"
                             Value="{Binding CustomersCount, Mode=TwoWay}"
                             Minimum="1"
                             Maximum="500"
                             SpinButtonPlacementMode="Inline"
                             SmallChange="1"
                             LargeChange="10"
                             IsEnabled="{Binding IsNotGeneratingCustomers}" />
                </StackPanel>

                <!-- Card Footer -->
                <StackPanel Grid.Row="2"
                            Padding="20"
                            Spacing="12">
                  <!-- Progress -->
                  <StackPanel Spacing="4"
                              Visibility="{Binding IsGeneratingCustomers, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.Customers.Progress"
                               Style="{StaticResource LabelSmall}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               HorizontalAlignment="Center" />
                  </StackPanel>

                  <!-- Start Button -->
                  <Button x:Uid="DemoDataGeneratorPage.Customers.StartButton"
                          Click="GenerateCustomers_Click"
                          HorizontalAlignment="Stretch"
                          IsEnabled="{Binding IsNotGeneratingCustomers}"
                          Style="{StaticResource FilledButtonStyle}">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                      <FontIcon Glyph="&#xE768;"
                                FontSize="16" />
                      <TextBlock x:Uid="DemoDataGeneratorPage.Customers.StartButton.Text" />
                    </StackPanel>
                  </Button>
                </StackPanel>
              </Grid>
            </Border>

            <!-- Orders Card -->
            <Border x:Name="OrdersCard"
                    Grid.Column="2"
                    Grid.Row="0"
                    Margin="8,0,8,0"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8"
                    MinHeight="360">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Card Header -->
                <Grid Grid.Row="0"
                      Padding="20,20,20,12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <Border Grid.Column="0"
                          Background="{ThemeResource SecondaryContainerBrush}"
                          CornerRadius="12"
                          Width="48"
                          Height="48"
                          Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE7BF;"
                              FontSize="24"
                              Foreground="{ThemeResource OnSecondaryContainerBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                  </Border>
                  <StackPanel Grid.Column="1"
                              VerticalAlignment="Center"
                              Spacing="2">
                    <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Title"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Subtitle"
                               Style="{StaticResource LabelMedium}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Card Content -->
                <StackPanel Grid.Row="1"
                            Padding="20,0,20,0"
                            Spacing="16">
                  <!-- Info Box -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="8"
                          Padding="12">
                    <StackPanel Spacing="8">
                      <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Info.Title"
                                 Style="{StaticResource LabelLarge}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      <StackPanel Spacing="4">
                        <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Info.Item1"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Info.Item2"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Info.Item3"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Count Input -->
                  <NumberBox x:Uid="DemoDataGeneratorPage.Orders.Count"
                             x:Name="OrdersCountInput"
                             Value="{Binding OrdersCount, Mode=TwoWay}"
                             Minimum="1"
                             Maximum="1000"
                             SpinButtonPlacementMode="Inline"
                             SmallChange="1"
                             LargeChange="10"
                             IsEnabled="{Binding IsNotGeneratingOrders}" />

                  <!-- Orders Hint -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="6"
                          Padding="10"
                          Opacity="0.8">
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>
                      <FontIcon Grid.Column="0"
                                Glyph="&#xE946;"
                                FontSize="14"
                                Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                Margin="0,0,8,0"
                                VerticalAlignment="Top" />
                      <TextBlock Grid.Column="1"
                                 x:Uid="DemoDataGeneratorPage.Orders.Hint"
                                 Style="{StaticResource LabelSmall}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                 TextWrapping="Wrap" />
                    </Grid>
                  </Border>
                </StackPanel>

                <!-- Card Footer -->
                <StackPanel Grid.Row="2"
                            Padding="20"
                            Spacing="12">
                  <!-- Progress -->
                  <StackPanel Spacing="4"
                              Visibility="{Binding IsGeneratingOrders, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.Orders.Progress"
                               Style="{StaticResource LabelSmall}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               HorizontalAlignment="Center" />
                  </StackPanel>

                  <!-- Start Button -->
                  <Button x:Uid="DemoDataGeneratorPage.Orders.StartButton"
                          Click="GenerateOrders_Click"
                          HorizontalAlignment="Stretch"
                          IsEnabled="{Binding IsNotGeneratingOrders}"
                          Style="{StaticResource FilledButtonStyle}">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                      <FontIcon Glyph="&#xE768;"
                                FontSize="16" />
                      <TextBlock x:Uid="DemoDataGeneratorPage.Orders.StartButton.Text" />
                    </StackPanel>
                  </Button>
                </StackPanel>
              </Grid>
            </Border>

            <!-- AI Data Card -->
            <Border x:Name="AiDataCard"
                    Grid.Column="3"
                    Grid.Row="0"
                    Margin="8,0,0,0"
                    Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Translation="0,0,8"
                    MinHeight="360">
              <Border.Shadow>
                <ThemeShadow />
              </Border.Shadow>
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Card Header with AI Badge -->
                <Grid Grid.Row="0"
                      Padding="20,20,20,12">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <Border Grid.Column="0"
                          Background="{ThemeResource TertiaryContainerBrush}"
                          CornerRadius="12"
                          Width="48"
                          Height="48"
                          Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE99A;"
                              FontSize="24"
                              Foreground="{ThemeResource OnTertiaryContainerBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                  </Border>
                  <StackPanel Grid.Column="1"
                              VerticalAlignment="Center"
                              Spacing="2">
                    <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Title"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Subtitle"
                               Style="{StaticResource LabelMedium}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                  </StackPanel>
                  <!-- AI Badge -->
                  <Border Grid.Column="2"
                          Background="{ThemeResource TertiaryContainerBrush}"
                          CornerRadius="12"
                          Padding="8,4"
                          VerticalAlignment="Top">
                    <TextBlock Text="AI"
                               Style="{StaticResource LabelSmall}"
                               Foreground="{ThemeResource OnTertiaryContainerBrush}"
                               FontWeight="Bold" />
                  </Border>
                </Grid>

                <!-- Card Content -->
                <StackPanel Grid.Row="1"
                            Padding="20,0,20,0"
                            Spacing="16">
                  <!-- Info Box -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="8"
                          Padding="12">
                    <StackPanel Spacing="8">
                      <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Info.Title"
                                 Style="{StaticResource LabelLarge}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      <StackPanel Spacing="4">
                        <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Info.Item1"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Info.Item2"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Info.Item3"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Count Input -->
                  <NumberBox x:Uid="DemoDataGeneratorPage.AiData.Count"
                             x:Name="AiDataCountInput"
                             Value="{Binding AiDataCount, Mode=TwoWay}"
                             Minimum="1"
                             Maximum="100"
                             SpinButtonPlacementMode="Inline"
                             SmallChange="1"
                             LargeChange="5"
                             IsEnabled="{Binding IsNotGeneratingAiData}" />

                  <!-- AI Hint -->
                  <Border Background="{ThemeResource TertiaryContainerBrush}"
                          CornerRadius="6"
                          Padding="10"
                          Opacity="0.7">
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>
                      <FontIcon Grid.Column="0"
                                Glyph="&#xE946;"
                                FontSize="14"
                                Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                Margin="0,0,8,0"
                                VerticalAlignment="Top" />
                      <TextBlock Grid.Column="1"
                                 x:Uid="DemoDataGeneratorPage.AiData.Hint"
                                 Style="{StaticResource LabelSmall}"
                                 Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                 TextWrapping="Wrap" />
                    </Grid>
                  </Border>
                </StackPanel>

                <!-- Card Footer -->
                <StackPanel Grid.Row="2"
                            Padding="20"
                            Spacing="12">
                  <!-- Progress -->
                  <StackPanel Spacing="4"
                              Visibility="{Binding IsGeneratingAiData, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" />
                    <TextBlock x:Uid="DemoDataGeneratorPage.AiData.Progress"
                               Style="{StaticResource LabelSmall}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               HorizontalAlignment="Center" />
                  </StackPanel>

                  <!-- Start Button -->
                  <Button x:Uid="DemoDataGeneratorPage.AiData.StartButton"
                          Click="GenerateAiData_Click"
                          HorizontalAlignment="Stretch"
                          IsEnabled="{Binding IsNotGeneratingAiData}"
                          Style="{StaticResource FilledTonalButtonStyle}">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                      <FontIcon Glyph="&#xE99A;"
                                FontSize="16" />
                      <TextBlock x:Uid="DemoDataGeneratorPage.AiData.StartButton.Text" />
                    </StackPanel>
                  </Button>
                </StackPanel>
              </Grid>
            </Border>
          </Grid>

          <!-- Warning/Note Section -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="8"
                  Padding="16"
                  Opacity="0.9">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE7BA;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         x:Uid="DemoDataGeneratorPage.Warning"
                         Style="{StaticResource BodyMedium}"
