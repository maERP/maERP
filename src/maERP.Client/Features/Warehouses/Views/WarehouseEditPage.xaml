<Page x:Class="maERP.Client.Features.Warehouses.Views.WarehouseEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Warehouses.Views"
      xmlns:models="using:maERP.Client.Features.Warehouses.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton x:Uid="WarehouseEditPage.AppBarButton.Cancel"
                      Click="CancelButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE711;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="WarehouseEditPage.AppBarButton.Save"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE74E;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Form Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="ContentStack.MaxWidth" Value="480" />
                <Setter Target="WarehouseCard.Padding" Value="16" />
                <Setter Target="InfoCard.Padding" Value="16" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="600" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="ContentStack.MaxWidth" Value="560" />
                <Setter Target="WarehouseCard.Padding" Value="24" />
                <Setter Target="InfoCard.Padding" Value="20" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="900" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="ContentStack.MaxWidth" Value="640" />
                <Setter Target="WarehouseCard.Padding" Value="32" />
                <Setter Target="InfoCard.Padding" Value="24" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel x:Name="ContentStack"
                    Spacing="24"
                    HorizontalAlignment="Center">

          <!-- Error Message Banner -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="12"
                  Padding="16"
                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE783;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         Text="{Binding ErrorMessage}"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnErrorContainerBrush}"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center" />
            </Grid>
          </Border>

          <!-- Loading Overlay -->
          <Border Background="{ThemeResource SurfaceBrush}"
                  CornerRadius="16"
                  Padding="32"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Border>

          <!-- Main Warehouse Card -->
          <Border x:Name="WarehouseCard"
                  Background="{ThemeResource SurfaceBrush}"
                  BorderBrush="{ThemeResource OutlineVariantBrush}"
                  BorderThickness="1"
                  CornerRadius="16"
                  Padding="24"
                  Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Spacing="24">
              <!-- Card Header with Icon -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Large Icon Circle -->
                <Border Grid.Column="0"
                        Width="56"
                        Height="56"
                        CornerRadius="28"
                        Background="{ThemeResource PrimaryContainerBrush}"
                        Margin="0,0,16,0">
                  <FontIcon Glyph="&#xE770;"
                            FontSize="24"
                            Foreground="{ThemeResource OnPrimaryContainerBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Border>

                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center"
                            Spacing="4">
                  <TextBlock x:Uid="WarehouseEditPage.Section.WarehouseDetails"
                             Style="{StaticResource TitleMedium}"
                             Foreground="{ThemeResource OnSurfaceBrush}" />
                  <TextBlock x:Uid="WarehouseEditPage.Section.WarehouseDetails.Subtitle"
                             Style="{StaticResource BodySmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </Grid>

              <!-- Divider -->
              <Border Height="1"
                      Background="{ThemeResource OutlineVariantBrush}" />

              <!-- Name Input -->
              <StackPanel Spacing="8">
                <TextBlock x:Uid="WarehouseEditPage.Field.Name.Label"
                           Style="{StaticResource LabelMedium}"
                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />

                <TextBox x:Name="NameTextBox"
                         x:Uid="WarehouseEditPage.Field.Name"
                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsNotLoading}"
                         MaxLength="200"
                         HorizontalAlignment="Stretch" />

                <!-- Helper Text -->
                <TextBlock x:Uid="WarehouseEditPage.Field.Name.HelperText"
                           Style="{StaticResource LabelSmall}"
                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                           TextWrapping="Wrap" />
              </StackPanel>

              <!-- Required Fields Note -->
              <TextBlock x:Uid="WarehouseEditPage.RequiredFieldsNote"
                         Style="{StaticResource LabelSmall}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         Margin="0,8,0,0" />
            </StackPanel>
          </Border>

          <!-- Info Card -->
          <Border x:Name="InfoCard"
                  Background="{ThemeResource SecondaryContainerBrush}"
                  CornerRadius="12"
                  Padding="20"
                  Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE946;"
                        FontSize="20"
                        Foreground="{ThemeResource OnSecondaryContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top" />
              <TextBlock Grid.Column="1"
                         x:Uid="WarehouseEditPage.Info.UsageHint"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSecondaryContainerBrush}"
                         TextWrapping="Wrap" />
            </Grid>
          </Border>

          <!-- Action Buttons (Mobile-friendly) -->
          <Grid Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Margin="0,8,0,24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="12" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    x:Uid="WarehouseEditPage.Button.Cancel"
                    Style="{StaticResource OutlinedButtonStyle}"
                    HorizontalAlignment="Stretch"
                    Click="CancelButton_Click"
                    MinHeight="48" />

            <Button Grid.Column="2"
                    x:Uid="WarehouseEditPage.Button.Save"
                    Style="{StaticResource FilledButtonStyle}"
                    HorizontalAlignment="Stretch"
                    Click="SaveButton_Click"
                    IsEnabled="{Binding CanSave}"
                    MinHeight="48" />
          </Grid>

        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Grid>
</Page>
