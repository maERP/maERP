<Page x:Class="maERP.Client.Features.Warehouses.Views.WarehouseDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Warehouses.Views"
      xmlns:models="using:maERP.Client.Features.Warehouses.Models"
      xmlns:mvux="using:Uno.Extensions.Reactive.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with back button -->
    <utu:NavigationBar Grid.Row="0" x:Uid="WarehouseDetailPage.NavigationBar">
      <utu:NavigationBar.MainCommand>
        <AppBarButton Icon="Back"
                      x:Uid="WarehouseDetailPage.AppBarButton.Back"
                      Click="BackButton_Click" />
      </utu:NavigationBar.MainCommand>
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton Icon="Edit"
                      x:Uid="WarehouseDetailPage.AppBarButton.Edit"
                      Click="EditButton_Click" />
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Warehouse Details Content -->
    <mvux:FeedView Grid.Row="1"
                   Source="{Binding Warehouse}">
      <mvux:FeedView.ValueTemplate>
        <DataTemplate>
          <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Padding="24">
              <!-- VisualStateManager for responsive layout -->
              <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                  <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="ContentPanel.MaxWidth" Value="600" />
                      <Setter Target="HeaderCard.Padding" Value="20" />
                      <Setter Target="WarehouseIcon.Width" Value="64" />
                      <Setter Target="WarehouseIcon.Height" Value="64" />
                      <Setter Target="WarehouseIcon.FontSize" Value="32" />
                    </VisualState.Setters>
                  </VisualState>

                  <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="ContentPanel.MaxWidth" Value="800" />
                      <Setter Target="HeaderCard.Padding" Value="24" />
                      <Setter Target="WarehouseIcon.Width" Value="80" />
                      <Setter Target="WarehouseIcon.Height" Value="80" />
                      <Setter Target="WarehouseIcon.FontSize" Value="40" />
                    </VisualState.Setters>
                  </VisualState>

                  <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="1000" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="ContentPanel.MaxWidth" Value="1000" />
                      <Setter Target="HeaderCard.Padding" Value="32" />
                      <Setter Target="WarehouseIcon.Width" Value="96" />
                      <Setter Target="WarehouseIcon.Height" Value="96" />
                      <Setter Target="WarehouseIcon.FontSize" Value="48" />
                    </VisualState.Setters>
                  </VisualState>
                </VisualStateGroup>
              </VisualStateManager.VisualStateGroups>

              <StackPanel x:Name="ContentPanel"
                          Spacing="24"
                          MaxWidth="800"
                          HorizontalAlignment="Stretch">

                <!-- Header Card with Warehouse Icon and Name -->
                <Border x:Name="HeaderCard"
                        Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="16"
                        Padding="24"
                        Translation="0,0,8">
                  <Border.Shadow>
                    <ThemeShadow />
                  </Border.Shadow>
                  <StackPanel HorizontalAlignment="Center"
                              Spacing="16">
                    <!-- Warehouse Icon -->
                    <Border x:Name="WarehouseIcon"
                            Width="96"
                            Height="96"
                            CornerRadius="48"
                            Background="{ThemeResource PrimaryContainerBrush}"
                            HorizontalAlignment="Center">
                      <FontIcon Glyph="&#xE913;"
                                FontSize="48"
                                Foreground="{ThemeResource OnPrimaryContainerBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>

                    <!-- Warehouse Name -->
                    <TextBlock Style="{StaticResource HeadlineMedium}"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource OnSurfaceBrush}"
                               Text="{Binding Data.Name}"
                               TextWrapping="Wrap"
                               TextAlignment="Center" />
                  </StackPanel>
                </Border>

                <!-- Warehouse Information Card -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource OutlineVariantBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                  <StackPanel Spacing="0">
                    <!-- Card Header -->
                    <Grid Padding="16,16,16,8">
                      <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE946;"
                                  FontSize="20"
                                  Foreground="{ThemeResource PrimaryBrush}"
                                  Margin="0,0,12,0" />
                        <TextBlock x:Uid="WarehouseDetailPage.Section.Information"
                                   Style="{StaticResource TitleMedium}"
                                   Foreground="{ThemeResource OnSurfaceBrush}" />
                      </StackPanel>
                    </Grid>

                    <!-- Information Fields -->
                    <StackPanel Padding="16,0,16,16"
                                Spacing="16">
                      <!-- Warehouse Name Field -->
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="Auto" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE8AC;"
                                  FontSize="16"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1">
                          <TextBlock x:Uid="WarehouseDetailPage.Field.Name"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Text="{Binding Data.Name}"
                                     Style="{StaticResource BodyLarge}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     TextWrapping="Wrap" />
                        </StackPanel>
                      </Grid>

                      <!-- Product Count Field -->
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="Auto" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE7B8;"
                                  FontSize="16"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1">
                          <TextBlock x:Uid="WarehouseDetailPage.Field.ProductCount"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding Data.ProductCount}"
                                       Style="{StaticResource BodyLarge}"
                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                            <TextBlock x:Uid="WarehouseDetailPage.Field.ProductCount.Unit"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       VerticalAlignment="Center" />
                          </StackPanel>
                        </StackPanel>
                      </Grid>
                    </StackPanel>
                  </StackPanel>
                </Border>

                <!-- Statistics Card -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource OutlineVariantBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Product Count Statistic -->
                    <StackPanel HorizontalAlignment="Center"
                                Spacing="8">
                      <Border Width="56"
                              Height="56"
                              CornerRadius="28"
                              Background="{ThemeResource TertiaryContainerBrush}"
                              HorizontalAlignment="Center">
                        <FontIcon Glyph="&#xE719;"
                                  FontSize="24"
                                  Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                      </Border>
                      <TextBlock Text="{Binding Data.ProductCount}"
                                 Style="{StaticResource HeadlineLarge}"
                                 Foreground="{ThemeResource OnSurfaceBrush}"
                                 HorizontalAlignment="Center" />
                      <TextBlock x:Uid="WarehouseDetailPage.Stats.ProductsStored"
                                 Style="{StaticResource BodyMedium}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                 HorizontalAlignment="Center" />
                    </StackPanel>
                  </Grid>
                </Border>

                <!-- Usage Hint Card -->
                <Border Background="{ThemeResource SecondaryContainerBrush}"
                        CornerRadius="12"
                        Padding="16">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <FontIcon Grid.Column="0"
                              Glyph="&#xE946;"
                              FontSize="20"
                              Foreground="{ThemeResource OnSecondaryContainerBrush}"
                              Margin="0,0,12,0"
                              VerticalAlignment="Top" />
                    <TextBlock Grid.Column="1"
                               x:Uid="WarehouseDetailPage.UsageHint"
                               Style="{StaticResource BodyMedium}"
                               Foreground="{ThemeResource OnSecondaryContainerBrush}"
                               TextWrapping="Wrap" />
                  </Grid>
                </Border>
              </StackPanel>
            </Grid>
          </ScrollViewer>
        </DataTemplate>
      </mvux:FeedView.ValueTemplate>

      <mvux:FeedView.ProgressTemplate>
        <DataTemplate>
          <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </mvux:FeedView.ProgressTemplate>

      <mvux:FeedView.ErrorTemplate>
        <DataTemplate>
          <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
              <FontIcon Glyph="&#xE783;"
                        FontSize="48"
                        Foreground="{ThemeResource ErrorBrush}" />
              <TextBlock x:Uid="WarehouseDetailPage.LoadError"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
              <Button x:Uid="Common.Retry"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </mvux:FeedView.ErrorTemplate>
    </mvux:FeedView>
  </Grid>
</Page>
