<Page x:Class="maERP.Client.Features.SalesChannels.Views.SalesChannelDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.SalesChannels.Views"
      xmlns:models="using:maERP.Client.Features.SalesChannels.Models"
      xmlns:mvux="using:Uno.Extensions.Reactive.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with back button -->
    <utu:NavigationBar Grid.Row="0" x:Uid="SalesChannelDetailPage.NavigationBar">
      <utu:NavigationBar.MainCommand>
        <AppBarButton Icon="Back"
                      x:Uid="SalesChannelDetailPage.AppBarButton.Back"
                      Click="BackButton_Click" />
      </utu:NavigationBar.MainCommand>
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton Icon="Edit"
                      x:Uid="SalesChannelDetailPage.AppBarButton.Edit"
                      Click="EditButton_Click" />
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Sales Channel Details Content -->
    <mvux:FeedView Grid.Row="1"
                   Source="{Binding SalesChannel}">
      <mvux:FeedView.ValueTemplate>
        <DataTemplate>
          <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Padding="24">
              <!-- VisualStateManager for responsive layout -->
              <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                  <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="ContentStack.MaxWidth" Value="500" />
                      <Setter Target="SyncGrid.MaxWidth" Value="500" />
                      <Setter Target="SyncColumn1.Width" Value="*" />
                      <Setter Target="SyncColumn2.Width" Value="0" />
                      <Setter Target="ImportCard.(Grid.Column)" Value="0" />
                      <Setter Target="ImportCard.(Grid.Row)" Value="0" />
                      <Setter Target="ImportCard.Margin" Value="0,0,0,16" />
                      <Setter Target="ExportCard.(Grid.Column)" Value="0" />
                      <Setter Target="ExportCard.(Grid.Row)" Value="1" />
                      <Setter Target="ExportCard.Margin" Value="0" />
                    </VisualState.Setters>
                  </VisualState>

                  <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="ContentStack.MaxWidth" Value="700" />
                      <Setter Target="SyncGrid.MaxWidth" Value="700" />
                      <Setter Target="SyncColumn1.Width" Value="*" />
                      <Setter Target="SyncColumn2.Width" Value="*" />
                      <Setter Target="ImportCard.(Grid.Column)" Value="0" />
                      <Setter Target="ImportCard.(Grid.Row)" Value="0" />
                      <Setter Target="ImportCard.Margin" Value="0,0,8,0" />
                      <Setter Target="ExportCard.(Grid.Column)" Value="1" />
                      <Setter Target="ExportCard.(Grid.Row)" Value="0" />
                      <Setter Target="ExportCard.Margin" Value="8,0,0,0" />
                    </VisualState.Setters>
                  </VisualState>

                  <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="1000" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="ContentStack.MaxWidth" Value="900" />
                      <Setter Target="SyncGrid.MaxWidth" Value="900" />
                      <Setter Target="SyncColumn1.Width" Value="*" />
                      <Setter Target="SyncColumn2.Width" Value="*" />
                      <Setter Target="ImportCard.(Grid.Column)" Value="0" />
                      <Setter Target="ImportCard.(Grid.Row)" Value="0" />
                      <Setter Target="ImportCard.Margin" Value="0,0,8,0" />
                      <Setter Target="ExportCard.(Grid.Column)" Value="1" />
                      <Setter Target="ExportCard.(Grid.Row)" Value="0" />
                      <Setter Target="ExportCard.Margin" Value="8,0,0,0" />
                    </VisualState.Setters>
                  </VisualState>
                </VisualStateGroup>
              </VisualStateManager.VisualStateGroups>

              <StackPanel x:Name="ContentStack"
                          Spacing="24"
                          MaxWidth="700"
                          HorizontalAlignment="Center">

                <!-- Hero Card with Name and Type -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="16"
                        Padding="32"
                        Translation="0,0,8">
                  <Border.Shadow>
                    <ThemeShadow />
                  </Border.Shadow>
                  <StackPanel HorizontalAlignment="Center"
                              Spacing="16">
                    <!-- Sales Channel Icon -->
                    <Border Width="80"
                            Height="80"
                            CornerRadius="40"
                            Background="{ThemeResource PrimaryContainerBrush}"
                            HorizontalAlignment="Center">
                      <FontIcon Glyph="&#xE8F1;"
                                FontSize="36"
                                Foreground="{ThemeResource OnPrimaryContainerBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>

                    <!-- Sales Channel Name -->
                    <TextBlock Text="{Binding Data.Name}"
                               Style="{StaticResource HeadlineMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />

                    <!-- Sales Channel Type Badge -->
                    <Border CornerRadius="16"
                            Padding="16,6"
                            HorizontalAlignment="Center"
                            Background="{ThemeResource TertiaryContainerBrush}">
                      <TextBlock Text="{Binding Data.SalesChannelType}"
                                 Style="{StaticResource LabelMedium}"
                                 Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                    </Border>
                  </StackPanel>
                </Border>

                <!-- Connection Information Card -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="12"
                        Translation="0,0,8">
                  <Border.Shadow>
                    <ThemeShadow />
                  </Border.Shadow>
                  <StackPanel Spacing="0">
                    <!-- Card Header -->
                    <Grid Padding="16,16,16,8">
                      <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE774;"
                                  FontSize="20"
                                  Foreground="{ThemeResource PrimaryBrush}"
                                  Margin="0,0,12,0" />
                        <TextBlock x:Uid="SalesChannelDetailPage.Section.ConnectionInfo"
                                   Style="{StaticResource TitleMedium}"
                                   Foreground="{ThemeResource OnSurfaceBrush}" />
                      </StackPanel>
                    </Grid>

                    <!-- Connection Fields -->
                    <StackPanel Padding="16,0,16,16"
                                Spacing="16">
                      <!-- URL Field -->
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="Auto" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE71B;"
                                  FontSize="16"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1">
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Url"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Text="{Binding Data.Url}"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource PrimaryBrush}"
                                     IsTextSelectionEnabled="True"
                                     TextWrapping="Wrap"
                                     Visibility="{Binding Data.Url, Converter={StaticResource StringToVisibilityConverter}}" />
                          <TextBlock x:Uid="SalesChannelDetailPage.NotAvailable"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                     Visibility="{Binding Data.Url, Converter={StaticResource StringToInverseVisibilityConverter}}" />
                        </StackPanel>
                      </Grid>

                      <!-- Username Field -->
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="Auto" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE77B;"
                                  FontSize="16"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1">
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Username"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Text="{Binding Data.Username}"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     IsTextSelectionEnabled="True"
                                     TextWrapping="Wrap"
                                     Visibility="{Binding Data.Username, Converter={StaticResource StringToVisibilityConverter}}" />
                          <TextBlock x:Uid="SalesChannelDetailPage.NotAvailable"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                     Visibility="{Binding Data.Username, Converter={StaticResource StringToInverseVisibilityConverter}}" />
                        </StackPanel>
                      </Grid>
                    </StackPanel>
                  </StackPanel>
                </Border>

                <!-- Synchronization Settings Section Header -->
                <StackPanel Orientation="Horizontal"
                            Spacing="12">
                  <FontIcon Glyph="&#xE895;"
                            FontSize="20"
                            Foreground="{ThemeResource SecondaryBrush}" />
                  <TextBlock x:Uid="SalesChannelDetailPage.Section.SyncSettings"
                             Style="{StaticResource TitleMedium}"
                             Foreground="{ThemeResource OnSurfaceBrush}" />
                </StackPanel>

                <!-- Synchronization Cards Grid -->
                <Grid x:Name="SyncGrid">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="SyncColumn1" Width="*" />
                    <ColumnDefinition x:Name="SyncColumn2" Width="*" />
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>

                  <!-- Import Settings Card -->
                  <Border x:Name="ImportCard"
                          Grid.Column="0"
                          Grid.Row="0"
                          Margin="0,0,8,0"
                          Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="0">
                      <!-- Card Header -->
                      <Grid Padding="16,16,16,8">
                        <StackPanel Orientation="Horizontal">
                          <FontIcon Glyph="&#xE896;"
                                    FontSize="20"
                                    Foreground="{ThemeResource TertiaryBrush}"
                                    Margin="0,0,12,0" />
                          <TextBlock x:Uid="SalesChannelDetailPage.Section.Import"
                                     Style="{StaticResource TitleMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}" />
                        </StackPanel>
                      </Grid>

                      <!-- Import Settings -->
                      <StackPanel Padding="16,0,16,16"
                                  Spacing="12">
                        <!-- Import Products -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Products"
                                     Grid.Column="0"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center" />
                          <Border Grid.Column="1"
                                  CornerRadius="12"
                                  Padding="10,4"
                                  Background="{Binding Data.ImportProducts, Converter={StaticResource BoolToSyncStatusBackgroundConverter}}">
                            <TextBlock Text="{Binding Data.ImportProducts, Converter={StaticResource BoolToSyncStatusTextConverter}}"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{Binding Data.ImportProducts, Converter={StaticResource BoolToSyncStatusForegroundConverter}}" />
                          </Border>
                        </Grid>

                        <!-- Import Customers -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Customers"
                                     Grid.Column="0"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center" />
                          <Border Grid.Column="1"
                                  CornerRadius="12"
                                  Padding="10,4"
                                  Background="{Binding Data.ImportCustomers, Converter={StaticResource BoolToSyncStatusBackgroundConverter}}">
                            <TextBlock Text="{Binding Data.ImportCustomers, Converter={StaticResource BoolToSyncStatusTextConverter}}"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{Binding Data.ImportCustomers, Converter={StaticResource BoolToSyncStatusForegroundConverter}}" />
                          </Border>
                        </Grid>

                        <!-- Import Orders -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Orders"
                                     Grid.Column="0"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center" />
                          <Border Grid.Column="1"
                                  CornerRadius="12"
                                  Padding="10,4"
                                  Background="{Binding Data.ImportOrders, Converter={StaticResource BoolToSyncStatusBackgroundConverter}}">
                            <TextBlock Text="{Binding Data.ImportOrders, Converter={StaticResource BoolToSyncStatusTextConverter}}"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{Binding Data.ImportOrders, Converter={StaticResource BoolToSyncStatusForegroundConverter}}" />
                          </Border>
                        </Grid>
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Export Settings Card -->
                  <Border x:Name="ExportCard"
                          Grid.Column="1"
                          Grid.Row="0"
                          Margin="8,0,0,0"
                          Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="0">
                      <!-- Card Header -->
                      <Grid Padding="16,16,16,8">
                        <StackPanel Orientation="Horizontal">
                          <FontIcon Glyph="&#xE898;"
                                    FontSize="20"
                                    Foreground="{ThemeResource TertiaryBrush}"
                                    Margin="0,0,12,0" />
                          <TextBlock x:Uid="SalesChannelDetailPage.Section.Export"
                                     Style="{StaticResource TitleMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}" />
                        </StackPanel>
                      </Grid>

                      <!-- Export Settings -->
                      <StackPanel Padding="16,0,16,16"
                                  Spacing="12">
                        <!-- Export Products -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Products"
                                     Grid.Column="0"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center" />
                          <Border Grid.Column="1"
                                  CornerRadius="12"
                                  Padding="10,4"
                                  Background="{Binding Data.ExportProducts, Converter={StaticResource BoolToSyncStatusBackgroundConverter}}">
                            <TextBlock Text="{Binding Data.ExportProducts, Converter={StaticResource BoolToSyncStatusTextConverter}}"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{Binding Data.ExportProducts, Converter={StaticResource BoolToSyncStatusForegroundConverter}}" />
                          </Border>
                        </Grid>

                        <!-- Export Customers -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Customers"
                                     Grid.Column="0"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center" />
                          <Border Grid.Column="1"
                                  CornerRadius="12"
                                  Padding="10,4"
                                  Background="{Binding Data.ExportCustomers, Converter={StaticResource BoolToSyncStatusBackgroundConverter}}">
                            <TextBlock Text="{Binding Data.ExportCustomers, Converter={StaticResource BoolToSyncStatusTextConverter}}"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{Binding Data.ExportCustomers, Converter={StaticResource BoolToSyncStatusForegroundConverter}}" />
                          </Border>
                        </Grid>

                        <!-- Export Orders -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock x:Uid="SalesChannelDetailPage.Field.Orders"
                                     Grid.Column="0"
                                     Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}"
                                     VerticalAlignment="Center" />
                          <Border Grid.Column="1"
                                  CornerRadius="12"
                                  Padding="10,4"
                                  Background="{Binding Data.ExportOrders, Converter={StaticResource BoolToSyncStatusBackgroundConverter}}">
                            <TextBlock Text="{Binding Data.ExportOrders, Converter={StaticResource BoolToSyncStatusTextConverter}}"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{Binding Data.ExportOrders, Converter={StaticResource BoolToSyncStatusForegroundConverter}}" />
                          </Border>
                        </Grid>
                      </StackPanel>
                    </StackPanel>
                  </Border>
                </Grid>

                <!-- Warehouses Section -->
                <StackPanel Spacing="12">
                  <StackPanel Orientation="Horizontal"
                              Spacing="12">
                    <FontIcon Glyph="&#xE80F;"
                              FontSize="20"
                              Foreground="{ThemeResource SecondaryBrush}" />
                    <TextBlock x:Uid="SalesChannelDetailPage.Section.Warehouses"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>

                  <!-- Warehouse Table -->
                  <Border CornerRadius="12"
                          BorderBrush="{ThemeResource OutlineVariantBrush}"
                          BorderThickness="1"
                          Background="{ThemeResource SurfaceBrush}"
                          Visibility="{Binding Data.Warehouses.Count, Converter={StaticResource NotZeroToVisibilityConverter}}">
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                      </Grid.RowDefinitions>

                      <!-- Table Header -->
                      <Border Grid.Row="0"
                              Background="{ThemeResource SurfaceVariantBrush}"
                              CornerRadius="12,12,0,0"
                              BorderBrush="{ThemeResource OutlineVariantBrush}"
                              BorderThickness="0,0,0,1">
                        <Grid Padding="16,12">
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>

                          <FontIcon Grid.Column="0"
                                    Glyph="&#xE80F;"
                                    FontSize="16"
                                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center" />
                          <TextBlock Grid.Column="1"
                                     x:Uid="SalesChannelDetailPage.Header.WarehouseName"
                                     Style="{StaticResource LabelLarge}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                     VerticalAlignment="Center" />
                        </Grid>
                      </Border>

                      <!-- Table Body -->
                      <ItemsRepeater Grid.Row="1"
                                     ItemsSource="{Binding Data.Warehouses}">
                        <ItemsRepeater.Layout>
                          <StackLayout Orientation="Vertical" Spacing="0" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                          <DataTemplate>
                            <Grid Padding="16,14"
                                  BorderBrush="{ThemeResource OutlineVariantBrush}"
                                  BorderThickness="0,0,0,1">
                              <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                              </Grid.ColumnDefinitions>

                              <Border Grid.Column="0"
                                      Width="32"
                                      Height="32"
                                      CornerRadius="16"
                                      Background="{ThemeResource SecondaryContainerBrush}"
                                      Margin="0,0,12,0">
                                <FontIcon Glyph="&#xE80F;"
                                          FontSize="14"
                                          Foreground="{ThemeResource OnSecondaryContainerBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                              </Border>
                              <TextBlock Grid.Column="1"
                                         Text="{Binding Name}"
                                         Style="{StaticResource BodyMedium}"
                                         Foreground="{ThemeResource OnSurfaceBrush}"
                                         VerticalAlignment="Center"
                                         TextTrimming="CharacterEllipsis" />
                            </Grid>
                          </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                      </ItemsRepeater>
                    </Grid>
                  </Border>

                  <!-- No Warehouses Placeholder -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="12"
                          Padding="24"
                          Visibility="{Binding Data.Warehouses.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center"
                                Spacing="8">
                      <FontIcon Glyph="&#xE80F;"
                                FontSize="32"
                                Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      <TextBlock x:Uid="SalesChannelDetailPage.NoWarehouses"
                                 Style="{StaticResource BodyMedium}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                 HorizontalAlignment="Center" />
                    </StackPanel>
                  </Border>
                </StackPanel>

                <!-- Usage Hint Card -->
                <Border Background="{ThemeResource SecondaryContainerBrush}"
                        CornerRadius="12"
                        Padding="16">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <FontIcon Grid.Column="0"
                              Glyph="&#xE946;"
                              FontSize="20"
                              Foreground="{ThemeResource OnSecondaryContainerBrush}"
                              Margin="0,0,12,0"
                              VerticalAlignment="Top" />
                    <TextBlock Grid.Column="1"
                               x:Uid="SalesChannelDetailPage.UsageHint"
                               Style="{StaticResource BodyMedium}"
                               Foreground="{ThemeResource OnSecondaryContainerBrush}"
                               TextWrapping="Wrap" />
                  </Grid>
                </Border>
              </StackPanel>
            </Grid>
          </ScrollViewer>
        </DataTemplate>
      </mvux:FeedView.ValueTemplate>

      <mvux:FeedView.ProgressTemplate>
        <DataTemplate>
          <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </mvux:FeedView.ProgressTemplate>

      <mvux:FeedView.ErrorTemplate>
        <DataTemplate>
          <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
              <FontIcon Glyph="&#xE783;"
                        FontSize="48"
                        Foreground="{ThemeResource ErrorBrush}" />
              <TextBlock x:Uid="SalesChannelDetailPage.LoadError"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
              <Button x:Uid="Common.Retry"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </mvux:FeedView.ErrorTemplate>
    </mvux:FeedView>
  </Grid>
</Page>
