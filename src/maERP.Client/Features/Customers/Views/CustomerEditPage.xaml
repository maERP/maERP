<Page x:Class="maERP.Client.Features.Customers.Views.CustomerEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Customers.Views"
      xmlns:models="using:maERP.Client.Features.Customers.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton x:Uid="CustomerEditPage.AppBarButton.Cancel"
                      Click="CancelButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE711;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="CustomerEditPage.AppBarButton.Save"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE74E;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Form Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="600" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="0" />
                <Setter Target="PersonalCard.(Grid.Column)" Value="0" />
                <Setter Target="PersonalCard.(Grid.Row)" Value="0" />
                <Setter Target="PersonalCard.Margin" Value="0,0,0,16" />
                <Setter Target="ContactCard.(Grid.Column)" Value="0" />
                <Setter Target="ContactCard.(Grid.Row)" Value="1" />
                <Setter Target="ContactCard.Margin" Value="0,0,0,16" />
                <Setter Target="BusinessCard.(Grid.Column)" Value="0" />
                <Setter Target="BusinessCard.(Grid.Row)" Value="2" />
                <Setter Target="BusinessCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="800" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="1200" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="PersonalCard.(Grid.Column)" Value="0" />
                <Setter Target="PersonalCard.(Grid.Row)" Value="0" />
                <Setter Target="PersonalCard.Margin" Value="0,0,8,16" />
                <Setter Target="ContactCard.(Grid.Column)" Value="1" />
                <Setter Target="ContactCard.(Grid.Row)" Value="0" />
                <Setter Target="ContactCard.Margin" Value="8,0,0,16" />
                <Setter Target="BusinessCard.(Grid.Column)" Value="0" />
                <Setter Target="BusinessCard.(Grid.Row)" Value="1" />
                <Setter Target="BusinessCard.Margin" Value="0,0,8,0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="1200" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="10000" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="PersonalCard.(Grid.Column)" Value="0" />
                <Setter Target="PersonalCard.(Grid.Row)" Value="0" />
                <Setter Target="PersonalCard.Margin" Value="0,0,8,16" />
                <Setter Target="ContactCard.(Grid.Column)" Value="1" />
                <Setter Target="ContactCard.(Grid.Row)" Value="0" />
                <Setter Target="ContactCard.Margin" Value="8,0,0,16" />
                <Setter Target="BusinessCard.(Grid.Column)" Value="0" />
                <Setter Target="BusinessCard.(Grid.Row)" Value="1" />
                <Setter Target="BusinessCard.Margin" Value="0,0,8,0" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel Spacing="24"
                    MaxWidth="1400"
                    HorizontalAlignment="Stretch">

          <!-- Error Message Banner -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="8"
                  Padding="16"
                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE783;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         Text="{Binding ErrorMessage}"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnErrorContainerBrush}"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center" />
            </Grid>
          </Border>

          <!-- Loading Overlay -->
          <Border Background="{ThemeResource SurfaceBrush}"
                  CornerRadius="12"
                  Padding="24"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Border>

          <!-- Form Cards Grid -->
          <Grid x:Name="FormCardsGrid"
                Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="FormColumn1" Width="*" />
              <ColumnDefinition x:Name="FormColumn2" Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Personal Information Card -->
            <Border x:Name="PersonalCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE77B;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="CustomerEditPage.Section.PersonalInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Personal Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- First Name (Required) -->
                  <TextBox x:Uid="CustomerEditPage.Field.Firstname"
                           Text="{Binding Firstname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Last Name (Required) -->
                  <TextBox x:Uid="CustomerEditPage.Field.Lastname"
                           Text="{Binding Lastname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Required Fields Note -->
                  <TextBlock x:Uid="CustomerEditPage.RequiredFieldsNote"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Contact Information Card -->
            <Border x:Name="ContactCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE779;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="CustomerEditPage.Section.ContactInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Contact Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Email -->
                  <TextBox x:Uid="CustomerEditPage.Field.Email"
                           Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="EmailSmtpAddress"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Phone -->
                  <TextBox x:Uid="CustomerEditPage.Field.Phone"
                           Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="TelephoneNumber"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Website -->
                  <TextBox x:Uid="CustomerEditPage.Field.Website"
                           Text="{Binding Website, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Url"
                           IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Business Information Card -->
            <Border x:Name="BusinessCard"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0,0,8,0"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8F1;"
                              FontSize="20"
                              Foreground="{ThemeResource TertiaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="CustomerEditPage.Section.BusinessData"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Business Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Company Name -->
                  <TextBox x:Uid="CustomerEditPage.Field.CompanyName"
                           Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- VAT Number -->
                  <TextBox x:Uid="CustomerEditPage.Field.VatNumber"
                           Text="{Binding VatNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Customer Status -->
                  <StackPanel Spacing="4">
                    <TextBlock x:Uid="CustomerEditPage.Field.Status.Label"
                               Style="{StaticResource LabelMedium}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                    <ComboBox x:Name="StatusComboBox"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding CustomerStatusOptions}"
                              SelectedValue="{Binding CustomerStatus, Mode=TwoWay}"
                              SelectedValuePath="Value"
                              IsEnabled="{Binding IsNotLoading}">
                      <ComboBox.ItemTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Value, Converter={StaticResource CustomerStatusToTextConverter}}" />
                        </DataTemplate>
                      </ComboBox.ItemTemplate>
                    </ComboBox>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
          </Grid>

          <!-- Addresses Section -->
          <StackPanel Spacing="12"
                      Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <!-- Section Header with Add Button -->
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <StackPanel Grid.Column="0"
                          Orientation="Horizontal"
                          Spacing="12">
                <FontIcon Glyph="&#xE81D;"
                          FontSize="20"
                          Foreground="{ThemeResource SecondaryBrush}" />
                <TextBlock x:Uid="CustomerEditPage.Section.Addresses"
                           Style="{StaticResource TitleMedium}"
                           Foreground="{ThemeResource OnSurfaceBrush}"
                           VerticalAlignment="Center" />
              </StackPanel>
              <Button Grid.Column="2"
                      x:Uid="CustomerEditPage.Button.AddAddress"
                      Style="{StaticResource FilledTonalButtonStyle}"
                      Click="AddAddressButton_Click">
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                  <FontIcon Glyph="&#xE710;"
                            FontSize="14" />
                  <TextBlock x:Uid="CustomerEditPage.Button.AddAddress.Text"
                             Style="{StaticResource LabelMedium}" />
                </StackPanel>
              </Button>
            </Grid>

            <!-- Address Cards -->
            <ItemsRepeater ItemsSource="{Binding Addresses}">
              <ItemsRepeater.Layout>
                <UniformGridLayout MinItemWidth="300"
                                   MinColumnSpacing="16"
                                   MinRowSpacing="16"
                                   ItemsStretch="Fill" />
              </ItemsRepeater.Layout>
              <ItemsRepeater.ItemTemplate>
                <DataTemplate>
                  <Border Background="{ThemeResource SurfaceBrush}"
                          BorderBrush="{ThemeResource OutlineVariantBrush}"
                          BorderThickness="1"
                          CornerRadius="12"
                          Padding="16">
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                      </Grid.RowDefinitions>

                      <!-- Address Type Badges -->
                      <StackPanel Grid.Row="0"
                                  Orientation="Horizontal"
                                  Spacing="8"
                                  Margin="0,0,0,8">
                        <!-- Delivery Address Badge -->
                        <Border CornerRadius="12"
                                Padding="10,4"
                                Background="{ThemeResource PrimaryContainerBrush}"
                                Visibility="{Binding DefaultDeliveryAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                          <StackPanel Orientation="Horizontal"
                                      Spacing="6">
                            <FontIcon Glyph="&#xE7B8;"
                                      FontSize="12"
                                      Foreground="{ThemeResource OnPrimaryContainerBrush}" />
                            <TextBlock x:Uid="CustomerEditPage.Badge.DeliveryAddress"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnPrimaryContainerBrush}" />
                          </StackPanel>
                        </Border>

                        <!-- Invoice Address Badge -->
                        <Border CornerRadius="12"
                                Padding="10,4"
                                Background="{ThemeResource TertiaryContainerBrush}"
                                Visibility="{Binding DefaultInvoiceAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                          <StackPanel Orientation="Horizontal"
                                      Spacing="6">
                            <FontIcon Glyph="&#xE9D5;"
                                      FontSize="12"
                                      Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                            <TextBlock x:Uid="CustomerEditPage.Badge.InvoiceAddress"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                          </StackPanel>
                        </Border>
                      </StackPanel>

                      <!-- Address Content -->
                      <StackPanel Grid.Row="1"
                                  Spacing="4">
                        <!-- Name -->
                        <TextBlock Style="{StaticResource BodyLarge}"
                                   Foreground="{ThemeResource OnSurfaceBrush}">
                          <Run Text="{Binding Firstname}" />
                          <Run Text=" " />
                          <Run Text="{Binding Lastname}" />
                        </TextBlock>

                        <!-- Company (if available) -->
                        <TextBlock Text="{Binding CompanyName}"
                                   Style="{StaticResource BodyMedium}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                   Visibility="{Binding CompanyName, Converter={StaticResource StringToVisibilityConverter}}" />

                        <!-- Street -->
                        <TextBlock Style="{StaticResource BodyMedium}"
                                   Foreground="{ThemeResource OnSurfaceBrush}">
                          <Run Text="{Binding Street}" />
                          <Run Text=" " />
                          <Run Text="{Binding HouseNr}" />
                        </TextBlock>

                        <!-- City and ZIP -->
                        <TextBlock Style="{StaticResource BodyMedium}"
                                   Foreground="{ThemeResource OnSurfaceBrush}">
                          <Run Text="{Binding Zip}" />
                          <Run Text=" " />
                          <Run Text="{Binding City}" />
                        </TextBlock>
                      </StackPanel>

                      <!-- Action Buttons -->
                      <StackPanel Grid.Row="2"
                                  Orientation="Horizontal"
                                  Spacing="8"
                                  HorizontalAlignment="Right"
                                  Margin="0,12,0,0">
                        <Button Style="{StaticResource TextButtonStyle}"
                                Click="EditAddressButton_Click"
                                Tag="{Binding}"
                                MinWidth="44"
                                MinHeight="44">
                          <FontIcon Glyph="&#xE70F;"
                                    FontSize="16"
                                    Foreground="{ThemeResource PrimaryBrush}" />
                        </Button>
                        <Button Style="{StaticResource TextButtonStyle}"
                                Click="DeleteAddressButton_Click"
                                Tag="{Binding}"
                                MinWidth="44"
                                MinHeight="44">
                          <FontIcon Glyph="&#xE74D;"
                                    FontSize="16"
                                    Foreground="{ThemeResource ErrorBrush}" />
                        </Button>
                      </StackPanel>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- No Addresses Placeholder -->
            <Border Background="{ThemeResource SurfaceVariantBrush}"
                    CornerRadius="12"
                    Padding="24"
                    Visibility="{Binding HasAddresses, Converter={StaticResource BoolToInverseVisibilityConverter}}">
              <StackPanel HorizontalAlignment="Center"
                          Spacing="8">
                <FontIcon Glyph="&#xE81D;"
                          FontSize="32"
                          Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                <TextBlock x:Uid="CustomerEditPage.NoAddresses"
                           Style="{StaticResource BodyMedium}"
                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock x:Uid="CustomerEditPage.NoAddresses.Hint"
                           Style="{StaticResource LabelSmall}"
                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                           HorizontalAlignment="Center" />
              </StackPanel>
            </Border>
          </StackPanel>

          <!-- Notes Section -->
          <StackPanel Spacing="12"
                      Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
              <FontIcon Glyph="&#xE70B;"
                        FontSize="20"
                        Foreground="{ThemeResource SecondaryBrush}" />
              <TextBlock x:Uid="CustomerEditPage.Section.Notes"
                         Style="{StaticResource TitleMedium}"
                         Foreground="{ThemeResource OnSurfaceBrush}" />
            </StackPanel>

            <Border Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16">
              <TextBox x:Uid="CustomerEditPage.Field.Note"
                       Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       AcceptsReturn="True"
                       TextWrapping="Wrap"
                       MinHeight="120"
                       MaxHeight="300"
                       IsEnabled="{Binding IsNotLoading}" />
            </Border>
          </StackPanel>

        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Grid>
</Page>
