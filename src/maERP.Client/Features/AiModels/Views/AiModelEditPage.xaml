<Page x:Class="maERP.Client.Features.AiModels.Views.AiModelEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.AiModels.Views"
      xmlns:models="using:maERP.Client.Features.AiModels.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:converters="using:maERP.Client.Core.Converters"
      Background="{ThemeResource BackgroundBrush}">

  <Page.Resources>
    <converters:AiModelTypeConverter x:Key="AiModelTypeConverter" />
  </Page.Resources>

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton x:Uid="AiModelEditPage.AppBarButton.Cancel"
                      Click="CancelButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE711;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="AiModelEditPage.AppBarButton.Save"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE74E;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Form Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="600" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="0" />
                <Setter Target="BasicInfoCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicInfoCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicInfoCard.Margin" Value="0,0,0,16" />
                <Setter Target="ApiSettingsCard.(Grid.Column)" Value="0" />
                <Setter Target="ApiSettingsCard.(Grid.Row)" Value="1" />
                <Setter Target="ApiSettingsCard.Margin" Value="0,0,0,16" />
                <Setter Target="AdvancedCard.(Grid.Column)" Value="0" />
                <Setter Target="AdvancedCard.(Grid.Row)" Value="2" />
                <Setter Target="AdvancedCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="800" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="1200" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicInfoCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicInfoCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicInfoCard.Margin" Value="0,0,8,16" />
                <Setter Target="ApiSettingsCard.(Grid.Column)" Value="1" />
                <Setter Target="ApiSettingsCard.(Grid.Row)" Value="0" />
                <Setter Target="ApiSettingsCard.Margin" Value="8,0,0,16" />
                <Setter Target="AdvancedCard.(Grid.Column)" Value="0" />
                <Setter Target="AdvancedCard.(Grid.Row)" Value="1" />
                <Setter Target="AdvancedCard.Margin" Value="0,0,8,0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="1200" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="10000" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicInfoCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicInfoCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicInfoCard.Margin" Value="0,0,8,16" />
                <Setter Target="ApiSettingsCard.(Grid.Column)" Value="1" />
                <Setter Target="ApiSettingsCard.(Grid.Row)" Value="0" />
                <Setter Target="ApiSettingsCard.Margin" Value="8,0,0,16" />
                <Setter Target="AdvancedCard.(Grid.Column)" Value="0" />
                <Setter Target="AdvancedCard.(Grid.Row)" Value="1" />
                <Setter Target="AdvancedCard.Margin" Value="0,0,8,0" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel Spacing="24"
                    MaxWidth="1400"
                    HorizontalAlignment="Stretch">

          <!-- Error Message Banner -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="8"
                  Padding="16"
                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE783;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         Text="{Binding ErrorMessage}"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnErrorContainerBrush}"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center" />
            </Grid>
          </Border>

          <!-- Loading Overlay -->
          <Border Background="{ThemeResource SurfaceBrush}"
                  CornerRadius="12"
                  Padding="24"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Border>

          <!-- Form Cards Grid -->
          <Grid x:Name="FormCardsGrid"
                Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="FormColumn1" Width="*" />
              <ColumnDefinition x:Name="FormColumn2" Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Basic Information Card -->
            <Border x:Name="BasicInfoCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE99A;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="AiModelEditPage.Section.BasicInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Basic Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Name (Required) -->
                  <TextBox x:Uid="AiModelEditPage.Field.Name"
                           Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- AI Model Type -->
                  <StackPanel Spacing="4">
                    <TextBlock x:Uid="AiModelEditPage.Field.AiModelType.Label"
                               Style="{StaticResource LabelMedium}"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                    <ComboBox x:Name="AiModelTypeComboBox"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding AiModelTypeOptions}"
                              SelectedValue="{Binding AiModelType, Mode=TwoWay}"
                              SelectedValuePath="Value"
                              IsEnabled="{Binding IsNotLoading}">
                      <ComboBox.ItemTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Value, Converter={StaticResource AiModelTypeConverter}}" />
                        </DataTemplate>
                      </ComboBox.ItemTemplate>
                    </ComboBox>
                  </StackPanel>

                  <!-- Context Window Size (NCtx) -->
                  <TextBox x:Uid="AiModelEditPage.Field.NCtx"
                           Text="{Binding NCtxString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Number"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Required Fields Note -->
                  <TextBlock x:Uid="AiModelEditPage.RequiredFieldsNote"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- API Settings Card -->
            <Border x:Name="ApiSettingsCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE774;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="AiModelEditPage.Section.ApiSettings"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- API Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- API URL -->
                  <TextBox x:Uid="AiModelEditPage.Field.ApiUrl"
                           Text="{Binding ApiUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Url"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- API Key -->
                  <PasswordBox x:Uid="AiModelEditPage.Field.ApiKey"
                               Password="{Binding ApiKey, Mode=TwoWay}"
                               IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Advanced Settings Card -->
            <Border x:Name="AdvancedCard"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0,0,8,0"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8F8;"
                              FontSize="20"
                              Foreground="{ThemeResource TertiaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="AiModelEditPage.Section.Authentication"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Authentication Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- API Username -->
                  <TextBox x:Uid="AiModelEditPage.Field.ApiUsername"
                           Text="{Binding ApiUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- API Password -->
                  <PasswordBox x:Uid="AiModelEditPage.Field.ApiPassword"
                               Password="{Binding ApiPassword, Mode=TwoWay}"
                               IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>
          </Grid>

        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Grid>
</Page>
