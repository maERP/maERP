<Page x:Class="maERP.Client.Features.Products.Views.ProductDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Products.Views"
      xmlns:models="using:maERP.Client.Features.Products.Models"
      xmlns:mvux="using:Uno.Extensions.Reactive.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with back button -->
    <utu:NavigationBar Grid.Row="0" x:Uid="ProductDetailPage.NavigationBar">
      <utu:NavigationBar.MainCommand>
        <AppBarButton Icon="Back"
                      x:Uid="ProductDetailPage.AppBarButton.Back"
                      Click="BackButton_Click" />
      </utu:NavigationBar.MainCommand>
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton Icon="Edit"
                      x:Uid="ProductDetailPage.AppBarButton.Edit"
                      Click="EditButton_Click" />
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Error Message Banner -->
    <Border Grid.Row="1"
            Background="{ThemeResource ErrorContainerBrush}"
            Padding="16"
            Margin="16,8,16,0"
            CornerRadius="8"
            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <FontIcon Grid.Column="0"
                  Glyph="&#xE783;"
                  FontSize="20"
                  Foreground="{ThemeResource OnErrorContainerBrush}"
                  Margin="0,0,12,0"
                  VerticalAlignment="Center" />
        <TextBlock Grid.Column="1"
                   Text="{Binding ErrorMessage}"
                   Style="{StaticResource BodyMedium}"
                   Foreground="{ThemeResource OnErrorContainerBrush}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center" />
      </Grid>
    </Border>

    <!-- Product Details Content -->
    <mvux:FeedView Grid.Row="2"
                   Source="{Binding Product}">
      <mvux:FeedView.ValueTemplate>
        <DataTemplate>
          <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Padding="24">
              <!-- VisualStateManager for responsive layout -->
              <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                  <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="InfoCardsGrid.MaxWidth" Value="600" />
                      <Setter Target="InfoColumn1.Width" Value="*" />
                      <Setter Target="InfoColumn2.Width" Value="0" />
                      <Setter Target="IdentifiersCard.(Grid.Column)" Value="0" />
                      <Setter Target="IdentifiersCard.(Grid.Row)" Value="0" />
                      <Setter Target="IdentifiersCard.Margin" Value="0,0,0,16" />
                      <Setter Target="PricingCard.(Grid.Column)" Value="0" />
                      <Setter Target="PricingCard.(Grid.Row)" Value="1" />
                      <Setter Target="PricingCard.Margin" Value="0,0,0,16" />
                      <Setter Target="DimensionsCard.(Grid.Column)" Value="0" />
                      <Setter Target="DimensionsCard.(Grid.Row)" Value="2" />
                      <Setter Target="DimensionsCard.Margin" Value="0" />
                    </VisualState.Setters>
                  </VisualState>

                  <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="InfoCardsGrid.MaxWidth" Value="1200" />
                      <Setter Target="InfoColumn1.Width" Value="*" />
                      <Setter Target="InfoColumn2.Width" Value="*" />
                      <Setter Target="IdentifiersCard.(Grid.Column)" Value="0" />
                      <Setter Target="IdentifiersCard.(Grid.Row)" Value="0" />
                      <Setter Target="IdentifiersCard.Margin" Value="0,0,8,16" />
                      <Setter Target="PricingCard.(Grid.Column)" Value="1" />
                      <Setter Target="PricingCard.(Grid.Row)" Value="0" />
                      <Setter Target="PricingCard.Margin" Value="8,0,0,16" />
                      <Setter Target="DimensionsCard.(Grid.Column)" Value="0" />
                      <Setter Target="DimensionsCard.(Grid.Row)" Value="1" />
                      <Setter Target="DimensionsCard.Margin" Value="0,0,8,0" />
                    </VisualState.Setters>
                  </VisualState>

                  <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                      <AdaptiveTrigger MinWindowWidth="1200" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                      <Setter Target="InfoCardsGrid.MaxWidth" Value="10000" />
                      <Setter Target="InfoColumn1.Width" Value="*" />
                      <Setter Target="InfoColumn2.Width" Value="*" />
                      <Setter Target="IdentifiersCard.(Grid.Column)" Value="0" />
                      <Setter Target="IdentifiersCard.(Grid.Row)" Value="0" />
                      <Setter Target="IdentifiersCard.Margin" Value="0,0,8,16" />
                      <Setter Target="PricingCard.(Grid.Column)" Value="1" />
                      <Setter Target="PricingCard.(Grid.Row)" Value="0" />
                      <Setter Target="PricingCard.Margin" Value="8,0,0,16" />
                      <Setter Target="DimensionsCard.(Grid.Column)" Value="0" />
                      <Setter Target="DimensionsCard.(Grid.Row)" Value="1" />
                      <Setter Target="DimensionsCard.Margin" Value="0,0,8,0" />
                    </VisualState.Setters>
                  </VisualState>
                </VisualStateGroup>
              </VisualStateManager.VisualStateGroups>

              <StackPanel Spacing="24"
                          MaxWidth="1400"
                          HorizontalAlignment="Stretch">

                <!-- Product Header Section -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="24"
                        Translation="0,0,8">
                  <Border.Shadow>
                    <ThemeShadow />
                  </Border.Shadow>
                  <StackPanel HorizontalAlignment="Center"
                              Spacing="16">
                    <!-- Product Icon -->
                    <Border Background="{ThemeResource PrimaryContainerBrush}"
                            Width="96"
                            Height="96"
                            CornerRadius="48">
                      <FontIcon Glyph="&#xE7BF;"
                                FontSize="48"
                                Foreground="{ThemeResource OnPrimaryContainerBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>

                    <!-- Product Name -->
                    <TextBlock Style="{StaticResource HeadlineMedium}"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource OnSurfaceBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="600"
                               Text="{Binding Data.Name}" />

                    <!-- SKU Badge -->
                    <Border CornerRadius="16"
                            Padding="16,6"
                            HorizontalAlignment="Center"
                            Background="{ThemeResource SecondaryContainerBrush}">
                      <StackPanel Orientation="Horizontal"
                                  Spacing="8">
                        <TextBlock x:Uid="ProductDetailPage.Label.Sku"
                                   Style="{StaticResource LabelMedium}"
                                   Foreground="{ThemeResource OnSecondaryContainerBrush}" />
                        <TextBlock Text="{Binding Data.Sku}"
                                   Style="{StaticResource LabelMedium}"
                                   FontWeight="Bold"
                                   Foreground="{ThemeResource OnSecondaryContainerBrush}" />
                      </StackPanel>
                    </Border>

                    <!-- UseOptimized Badge -->
                    <Border CornerRadius="12"
                            Padding="10,4"
                            HorizontalAlignment="Center"
                            Background="{ThemeResource TertiaryContainerBrush}"
                            Visibility="{Binding Data.UseOptimized, Converter={StaticResource BoolToVisibilityConverter}}">
                      <StackPanel Orientation="Horizontal"
                                  Spacing="6">
                        <FontIcon Glyph="&#xE8D4;"
                                  FontSize="12"
                                  Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                        <TextBlock x:Uid="ProductDetailPage.Badge.OptimizedContent"
                                   Style="{StaticResource LabelSmall}"
                                   Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                      </StackPanel>
                    </Border>
                  </StackPanel>
                </Border>

                <!-- Information Cards Grid -->
                <Grid x:Name="InfoCardsGrid">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="InfoColumn1" Width="*" />
                    <ColumnDefinition x:Name="InfoColumn2" Width="*" />
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>

                  <!-- Product Identifiers Card -->
                  <Border x:Name="IdentifiersCard"
                          Grid.Column="0"
                          Grid.Row="0"
                          Margin="0,0,8,16"
                          Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="0">
                      <!-- Card Header -->
                      <Grid Padding="16,16,16,8">
                        <StackPanel Orientation="Horizontal">
                          <FontIcon Glyph="&#xE8EC;"
                                    FontSize="20"
                                    Foreground="{ThemeResource PrimaryBrush}"
                                    Margin="0,0,12,0" />
                          <TextBlock x:Uid="ProductDetailPage.Section.Identifiers"
                                     Style="{StaticResource TitleMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}" />
                        </StackPanel>
                      </Grid>

                      <!-- Identifier Fields -->
                      <StackPanel Padding="16,0,16,16"
                                  Spacing="12">
                        <!-- SKU -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>
                          <FontIcon Grid.Column="0"
                                    Glyph="&#xE71D;"
                                    FontSize="16"
                                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center" />
                          <StackPanel Grid.Column="1">
                            <TextBlock x:Uid="ProductDetailPage.Field.Sku"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                            <TextBlock Text="{Binding Data.Sku}"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                       TextWrapping="Wrap" />
                          </StackPanel>
                        </Grid>

                        <!-- EAN -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>
                          <FontIcon Grid.Column="0"
                                    Glyph="&#xED14;"
                                    FontSize="16"
                                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center" />
                          <StackPanel Grid.Column="1">
                            <TextBlock x:Uid="ProductDetailPage.Field.Ean"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                            <TextBlock Text="{Binding Data.Ean}"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                       Visibility="{Binding Data.Ean, Converter={StaticResource StringToVisibilityConverter}}" />
                            <TextBlock x:Uid="ProductDetailPage.NotAvailable"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       Visibility="{Binding Data.Ean, Converter={StaticResource StringToInverseVisibilityConverter}}" />
                          </StackPanel>
                        </Grid>

                        <!-- ASIN -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>
                          <FontIcon Grid.Column="0"
                                    Glyph="&#xE8A9;"
                                    FontSize="16"
                                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center" />
                          <StackPanel Grid.Column="1">
                            <TextBlock x:Uid="ProductDetailPage.Field.Asin"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                            <TextBlock Text="{Binding Data.Asin}"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                       Visibility="{Binding Data.Asin, Converter={StaticResource StringToVisibilityConverter}}" />
                            <TextBlock x:Uid="ProductDetailPage.NotAvailable"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       Visibility="{Binding Data.Asin, Converter={StaticResource StringToInverseVisibilityConverter}}" />
                          </StackPanel>
                        </Grid>
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Pricing Card -->
                  <Border x:Name="PricingCard"
                          Grid.Column="1"
                          Grid.Row="0"
                          Margin="8,0,0,16"
                          Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="0">
                      <!-- Card Header -->
                      <Grid Padding="16,16,16,8">
                        <StackPanel Orientation="Horizontal">
                          <FontIcon Glyph="&#xE8C7;"
                                    FontSize="20"
                                    Foreground="{ThemeResource TertiaryBrush}"
                                    Margin="0,0,12,0" />
                          <TextBlock x:Uid="ProductDetailPage.Section.Pricing"
                                     Style="{StaticResource TitleMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}" />
                        </StackPanel>
                      </Grid>

                      <!-- Pricing Fields -->
                      <StackPanel Padding="16,0,16,16"
                                  Spacing="12">
                        <!-- Price -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>
                          <FontIcon Grid.Column="0"
                                    Glyph="&#xE8C7;"
                                    FontSize="16"
                                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center" />
                          <StackPanel Grid.Column="1">
                            <TextBlock x:Uid="ProductDetailPage.Field.Price"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                            <TextBlock Text="{Binding Data.Price, Converter={StaticResource CurrencyConverter}}"
                                       Style="{StaticResource TitleLarge}"
                                       Foreground="{ThemeResource PrimaryBrush}" />
                          </StackPanel>
                        </Grid>

                        <!-- MSRP (UVP) -->
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>
                          <FontIcon Grid.Column="0"
                                    Glyph="&#xE9D5;"
                                    FontSize="16"
                                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center" />
                          <StackPanel Grid.Column="1">
                            <TextBlock x:Uid="ProductDetailPage.Field.Msrp"
                                       Style="{StaticResource LabelSmall}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                            <TextBlock Text="{Binding Data.Msrp, Converter={StaticResource CurrencyConverter}}"
                                       Style="{StaticResource BodyMedium}"
                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                          </StackPanel>
                        </Grid>
                      </StackPanel>
                    </StackPanel>
                  </Border>

                  <!-- Dimensions & Weight Card -->
                  <Border x:Name="DimensionsCard"
                          Grid.Column="0"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Margin="0"
                          Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="0">
                      <!-- Card Header -->
                      <Grid Padding="16,16,16,8">
                        <StackPanel Orientation="Horizontal">
                          <FontIcon Glyph="&#xEE40;"
                                    FontSize="20"
                                    Foreground="{ThemeResource SecondaryBrush}"
                                    Margin="0,0,12,0" />
                          <TextBlock x:Uid="ProductDetailPage.Section.Dimensions"
                                     Style="{StaticResource TitleMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}" />
                        </StackPanel>
                      </Grid>

                      <!-- Dimension Fields in horizontal layout -->
                      <Grid Padding="16,0,16,16">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*" />
                          <ColumnDefinition Width="*" />
                          <ColumnDefinition Width="*" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Weight -->
                        <StackPanel Grid.Column="0"
                                    Spacing="4">
                          <TextBlock x:Uid="ProductDetailPage.Field.Weight"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}">
                            <Run Text="{Binding Data.Weight}" />
                            <Run x:Uid="ProductDetailPage.Unit.Kg" />
                          </TextBlock>
                        </StackPanel>

                        <!-- Width -->
                        <StackPanel Grid.Column="1"
                                    Spacing="4">
                          <TextBlock x:Uid="ProductDetailPage.Field.Width"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}">
                            <Run Text="{Binding Data.Width}" />
                            <Run x:Uid="ProductDetailPage.Unit.Cm" />
                          </TextBlock>
                        </StackPanel>

                        <!-- Height -->
                        <StackPanel Grid.Column="2"
                                    Spacing="4">
                          <TextBlock x:Uid="ProductDetailPage.Field.Height"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}">
                            <Run Text="{Binding Data.Height}" />
                            <Run x:Uid="ProductDetailPage.Unit.Cm" />
                          </TextBlock>
                        </StackPanel>

                        <!-- Depth -->
                        <StackPanel Grid.Column="3"
                                    Spacing="4">
                          <TextBlock x:Uid="ProductDetailPage.Field.Depth"
                                     Style="{StaticResource LabelSmall}"
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                          <TextBlock Style="{StaticResource BodyMedium}"
                                     Foreground="{ThemeResource OnSurfaceBrush}">
                            <Run Text="{Binding Data.Depth}" />
                            <Run x:Uid="ProductDetailPage.Unit.Cm" />
                          </TextBlock>
                        </StackPanel>
                      </Grid>
                    </StackPanel>
                  </Border>
                </Grid>

                <!-- Description Section -->
                <StackPanel Spacing="12">
                  <StackPanel Orientation="Horizontal"
                              Spacing="12">
                    <FontIcon Glyph="&#xE70B;"
                              FontSize="20"
                              Foreground="{ThemeResource SecondaryBrush}" />
                    <TextBlock x:Uid="ProductDetailPage.Section.Description"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>

                  <Border Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Padding="16"
                          MinHeight="80"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <TextBlock Text="{Binding Data.Description}"
                               Style="{StaticResource BodyMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}"
                               TextWrapping="Wrap"
                               Visibility="{Binding Data.Description, Converter={StaticResource StringToVisibilityConverter}}" />
                  </Border>

                  <!-- No Description Placeholder -->
                  <Border Background="{ThemeResource SurfaceVariantBrush}"
                          CornerRadius="12"
                          Padding="24"
                          Visibility="{Binding Data.Description, Converter={StaticResource StringToInverseVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center"
                                Spacing="8">
                      <FontIcon Glyph="&#xE70B;"
                                FontSize="32"
                                Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                      <TextBlock x:Uid="ProductDetailPage.NoDescription"
                                 Style="{StaticResource BodyMedium}"
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                 HorizontalAlignment="Center" />
                    </StackPanel>
                  </Border>
                </StackPanel>

                <!-- Optimized Description Section (only shown when UseOptimized is true and DescriptionOptimized is available) -->
                <StackPanel Spacing="12"
                            Visibility="{Binding Data.UseOptimized, Converter={StaticResource BoolToVisibilityConverter}}">
                  <StackPanel Orientation="Horizontal"
                              Spacing="12">
                    <FontIcon Glyph="&#xE8D4;"
                              FontSize="20"
                              Foreground="{ThemeResource TertiaryBrush}" />
                    <TextBlock x:Uid="ProductDetailPage.Section.OptimizedDescription"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>

                  <Border Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Padding="16"
                          MinHeight="80"
                          Translation="0,0,8"
                          Visibility="{Binding Data.DescriptionOptimized, Converter={StaticResource StringToVisibilityConverter}}">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <TextBlock Text="{Binding Data.DescriptionOptimized}"
                               Style="{StaticResource BodyMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}"
                               TextWrapping="Wrap" />
                  </Border>

                  <!-- Optimized Name (if different from Name) -->
                  <Border Background="{ThemeResource TertiaryContainerBrush}"
                          CornerRadius="12"
                          Padding="16"
                          Visibility="{Binding Data.NameOptimized, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Spacing="4">
                      <TextBlock x:Uid="ProductDetailPage.Field.OptimizedName"
                                 Style="{StaticResource LabelSmall}"
                                 Foreground="{ThemeResource OnTertiaryContainerBrush}" />
                      <TextBlock Text="{Binding Data.NameOptimized}"
                                 Style="{StaticResource BodyMedium}"
                                 Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                 TextWrapping="Wrap" />
                    </StackPanel>
                  </Border>
                </StackPanel>

                <!-- Manufacturer Section -->
                <StackPanel Spacing="12"
                            Visibility="{Binding Data.Manufacturer, Converter={StaticResource StringToVisibilityConverter}}">
                  <StackPanel Orientation="Horizontal"
                              Spacing="12">
                    <FontIcon Glyph="&#xE731;"
                              FontSize="20"
                              Foreground="{ThemeResource SecondaryBrush}" />
                    <TextBlock x:Uid="ProductDetailPage.Section.Manufacturer"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>

                  <Border Background="{ThemeResource SurfaceBrush}"
                          CornerRadius="12"
                          Padding="16"
                          Translation="0,0,8">
                    <Border.Shadow>
                      <ThemeShadow />
                    </Border.Shadow>
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>

                      <!-- Manufacturer Icon -->
                      <Border Grid.Column="0"
                              Background="{ThemeResource SecondaryContainerBrush}"
                              Width="48"
                              Height="48"
                              CornerRadius="24"
                              Margin="0,0,16,0">
                        <FontIcon Glyph="&#xE731;"
                                  FontSize="24"
                                  Foreground="{ThemeResource OnSecondaryContainerBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                      </Border>

                      <!-- Manufacturer Info -->
                      <StackPanel Grid.Column="1"
                                  Spacing="4"
                                  VerticalAlignment="Center">
                        <TextBlock Text="{Binding Data.Manufacturer.Name}"
                                   Style="{StaticResource TitleMedium}"
                                   Foreground="{ThemeResource OnSurfaceBrush}" />
                        <TextBlock Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                   Visibility="{Binding Data.Manufacturer.City, Converter={StaticResource StringToVisibilityConverter}}">
                          <Run Text="{Binding Data.Manufacturer.City}" />
                          <Run Text=", " />
                          <Run Text="{Binding Data.Manufacturer.Country}" />
                        </TextBlock>
                        <TextBlock Text="{Binding Data.Manufacturer.Website}"
                                   Style="{StaticResource BodySmall}"
                                   Foreground="{ThemeResource PrimaryBrush}"
                                   Visibility="{Binding Data.Manufacturer.Website, Converter={StaticResource StringToVisibilityConverter}}" />
                      </StackPanel>
                    </Grid>
                  </Border>
                </StackPanel>

              </StackPanel>
            </Grid>
          </ScrollViewer>
        </DataTemplate>
      </mvux:FeedView.ValueTemplate>

      <mvux:FeedView.ProgressTemplate>
        <DataTemplate>
          <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </mvux:FeedView.ProgressTemplate>

      <mvux:FeedView.ErrorTemplate>
        <DataTemplate>
          <Grid HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
              <FontIcon Glyph="&#xE783;"
                        FontSize="48"
                        Foreground="{ThemeResource ErrorBrush}" />
              <TextBlock x:Uid="ProductDetailPage.LoadError"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
              <Button x:Uid="Common.Retry"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </mvux:FeedView.ErrorTemplate>
    </mvux:FeedView>
  </Grid>
</Page>
