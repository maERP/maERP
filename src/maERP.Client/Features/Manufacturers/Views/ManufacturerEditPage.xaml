<Page x:Class="maERP.Client.Features.Manufacturers.Views.ManufacturerEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:maERP.Client.Features.Manufacturers.Views"
      xmlns:models="using:maERP.Client.Features.Manufacturers.Models"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header with NavigationBar -->
    <utu:NavigationBar Grid.Row="0"
                       Content="{Binding Title}">
      <utu:NavigationBar.PrimaryCommands>
        <AppBarButton x:Uid="ManufacturerEditPage.AppBarButton.Cancel"
                      Click="CancelButton_Click">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE711;" />
          </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Uid="ManufacturerEditPage.AppBarButton.Save"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}">
          <AppBarButton.Icon>
            <FontIcon Glyph="&#xE74E;" />
          </AppBarButton.Icon>
        </AppBarButton>
      </utu:NavigationBar.PrimaryCommands>
    </utu:NavigationBar>

    <!-- Form Content -->
    <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto">
      <Grid Padding="24">
        <!-- VisualStateManager for responsive layout -->
        <VisualStateManager.VisualStateGroups>
          <VisualStateGroup>
            <VisualState x:Name="Narrow">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="0" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="600" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="0" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,0,16" />
                <Setter Target="ContactCard.(Grid.Column)" Value="0" />
                <Setter Target="ContactCard.(Grid.Row)" Value="1" />
                <Setter Target="ContactCard.Margin" Value="0,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="2" />
                <Setter Target="AddressCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Medium">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="800" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="1200" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,8,16" />
                <Setter Target="ContactCard.(Grid.Column)" Value="1" />
                <Setter Target="ContactCard.(Grid.Row)" Value="0" />
                <Setter Target="ContactCard.Margin" Value="8,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="1" />
                <Setter Target="AddressCard.(Grid.ColumnSpan)" Value="2" />
                <Setter Target="AddressCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
              <VisualState.StateTriggers>
                <AdaptiveTrigger MinWindowWidth="1200" />
              </VisualState.StateTriggers>
              <VisualState.Setters>
                <Setter Target="FormCardsGrid.MaxWidth" Value="10000" />
                <Setter Target="FormColumn1.Width" Value="*" />
                <Setter Target="FormColumn2.Width" Value="*" />
                <Setter Target="BasicCard.(Grid.Column)" Value="0" />
                <Setter Target="BasicCard.(Grid.Row)" Value="0" />
                <Setter Target="BasicCard.Margin" Value="0,0,8,16" />
                <Setter Target="ContactCard.(Grid.Column)" Value="1" />
                <Setter Target="ContactCard.(Grid.Row)" Value="0" />
                <Setter Target="ContactCard.Margin" Value="8,0,0,16" />
                <Setter Target="AddressCard.(Grid.Column)" Value="0" />
                <Setter Target="AddressCard.(Grid.Row)" Value="1" />
                <Setter Target="AddressCard.(Grid.ColumnSpan)" Value="2" />
                <Setter Target="AddressCard.Margin" Value="0" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel Spacing="24"
                    MaxWidth="1400"
                    HorizontalAlignment="Stretch">

          <!-- Error Message Banner -->
          <Border Background="{ThemeResource ErrorContainerBrush}"
                  CornerRadius="8"
                  Padding="16"
                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.Column="0"
                        Glyph="&#xE783;"
                        FontSize="20"
                        Foreground="{ThemeResource OnErrorContainerBrush}"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
              <TextBlock Grid.Column="1"
                         Text="{Binding ErrorMessage}"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnErrorContainerBrush}"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center" />
            </Grid>
          </Border>

          <!-- Loading Overlay -->
          <Border Background="{ThemeResource SurfaceBrush}"
                  CornerRadius="12"
                  Padding="24"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        Spacing="16">
              <ProgressRing IsActive="True"
                            Width="48"
                            Height="48" />
              <TextBlock x:Uid="Common.Loading"
                         Style="{StaticResource BodyMedium}"
                         Foreground="{ThemeResource OnSurfaceVariantBrush}"
                         HorizontalAlignment="Center" />
            </StackPanel>
          </Border>

          <!-- Form Cards Grid -->
          <Grid x:Name="FormCardsGrid"
                Visibility="{Binding IsNotLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="FormColumn1" Width="*" />
              <ColumnDefinition x:Name="FormColumn2" Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Basic Information Card -->
            <Border x:Name="BasicCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,8,16"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE731;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="ManufacturerEditPage.Section.BasicInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Basic Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Name (Required) -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Name"
                           Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Logo URL -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Logo"
                           Text="{Binding Logo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Url"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Required Fields Note -->
                  <TextBlock x:Uid="ManufacturerEditPage.RequiredFieldsNote"
                             Style="{StaticResource LabelSmall}"
                             Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Contact Information Card -->
            <Border x:Name="ContactCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="8,0,0,16"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE779;"
                              FontSize="20"
                              Foreground="{ThemeResource PrimaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="ManufacturerEditPage.Section.ContactInformation"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Contact Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Email -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Email"
                           Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="EmailSmtpAddress"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Phone -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Phone"
                           Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="TelephoneNumber"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Website -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Website"
                           Text="{Binding Website, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           InputScope="Url"
                           IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Address Card -->
            <Border x:Name="AddressCard"
                    Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="1"
                    Margin="0,0,8,0"
                    Background="{ThemeResource SurfaceBrush}"
                    BorderBrush="{ThemeResource OutlineVariantBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
              <StackPanel Spacing="0">
                <!-- Card Header -->
                <Grid Padding="16,16,16,8">
                  <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE81D;"
                              FontSize="20"
                              Foreground="{ThemeResource TertiaryBrush}"
                              Margin="0,0,12,0" />
                    <TextBlock x:Uid="ManufacturerEditPage.Section.Address"
                               Style="{StaticResource TitleMedium}"
                               Foreground="{ThemeResource OnSurfaceBrush}" />
                  </StackPanel>
                </Grid>

                <!-- Address Fields -->
                <StackPanel Padding="16,0,16,16"
                            Spacing="16">
                  <!-- Street -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Street"
                           Text="{Binding Street, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- City and ZIP Code Row -->
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="120" />
                      <ColumnDefinition Width="8" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ZIP Code -->
                    <TextBox Grid.Column="0"
                             x:Uid="ManufacturerEditPage.Field.ZipCode"
                             Text="{Binding ZipCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />

                    <!-- City -->
                    <TextBox Grid.Column="2"
                             x:Uid="ManufacturerEditPage.Field.City"
                             Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsNotLoading}" />
                  </Grid>

                  <!-- State -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.State"
                           Text="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />

                  <!-- Country -->
                  <TextBox x:Uid="ManufacturerEditPage.Field.Country"
                           Text="{Binding Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsNotLoading}" />
                </StackPanel>
              </StackPanel>
            </Border>
          </Grid>

        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Grid>
</Page>
